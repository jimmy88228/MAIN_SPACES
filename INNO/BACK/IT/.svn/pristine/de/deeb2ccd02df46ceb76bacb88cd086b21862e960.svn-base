                                <EditItem name="活动时间" label="必填">
                                    <DatePicker slot="edit" :options="options" type="datetimerange" v-model="timeRange" placeholder="选择活动时间" style="width: 200px"></DatePicker>
                                </EditItem>
                                <EditItem name="展示状态" label="必填">
