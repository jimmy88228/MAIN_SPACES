<template>
  <div class="hold-layout" :class="{'isFullHeight':isFullHeight}" :style="holdLayout">
    <div class="hold-layout-content" :style="layoutContentCustomStyle">
      <slot></slot>
    </div>
    <div class="hold-layout-footer">
      <slot name="footer"></slot>
    </div>
  </div>
</template>
<script>
export default {
  name: "holdLayout",
  props: {
    'layout-content-custom-style':{
      type:String,
      default:''
    },
    'hold-layout':{
      type:String,
      default:''
    },
    'isFullHeight':{
      type:Boolean,
      default:false
    }
  }
}
</script>
<style lang="less" scoped>
.hold-layout{
  width:100%;
  min-height: calc(100%);
  display: flex;
  flex-direction: column;
  &.isFullHeight{
    height: 100%;
  }
  .hold-layout-content{
    flex: 1;
    overflow: hidden;
  }
  .hold-layout-footer{
    position: sticky;
    bottom: 0px;
  }
}
</style>