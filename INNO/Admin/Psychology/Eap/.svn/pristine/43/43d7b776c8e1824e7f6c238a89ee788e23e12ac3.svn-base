/**/
.operate-area {
  margin: 5px 0px;
  .operate {
      padding: 0px 5px;
      font-size: 14px;
      color: @link-color;
  }
  .operate.invalid {
      color: @invalid-color;
  }
  .operate-btn {
      display: inline-block;
      padding: 5px 15px;
      font-size: 14px;
      background: #F6F6F6;
      border-radius: 2px;
      color: @link-color;
      margin: 5px;
  }
  .operate-btn:hover{
      box-shadow: 0px 0px 5px 0px rgba(0, 0, 0, 0.07);
  }
}