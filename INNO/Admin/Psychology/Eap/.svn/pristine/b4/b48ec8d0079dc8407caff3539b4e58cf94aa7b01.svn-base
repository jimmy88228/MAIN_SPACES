      <slot name="header">
        <div class="layout-header-cont flex-b-c">
          <div class="header-title">标题</div>
          <div >
            <slot name="header-r"></slot>
          </div>
        </div>
      </slot>
    </div>
    <div class="layout-cont">
      <div class="layout-l">
        <slot name="left"></slot>
      </div>
      <div class="layout-r" v-bar>
        <slot name="right"></slot>
      </div>
    </div>
  </div>
</template>

<script>
export default {
  name: "leftRightLayout",
  components: {},
  props: {
    beforeInit: Function,
  },
  data() {
    return {};
  },
  methods: {
    init() {
      if (typeof this.beforeInit == "function") {
        try {
          this.beforeInit().then(() => {
            this.initData();
          });
        } catch (error) {
          this.initData();
        }
      } else {
        this.initData();
      }
    },
    initData() {},
  },
  mounted() {
    this.init();
  },
};
</script>

