<template>
  <div class="dimension">
    <div class="header flex-e-c">
        <Button @click="add" type="primary" class="m-r-20">新增</Button>
    </div>
    <div class="dimension-table">
        <div class="list bold flex1 flex-c-c">
            <div class="flex1">维度名称</div>
            <div class="flex1">维度描述</div>
            <div class="flex1">拖拽排序</div>
        </div>
        <div class="list-box">
            <draggable style="width:100%;" ghost-class="ghost" :list="list" :group="{name:'list'}" handle=".drag" v-bind="dragOptions">
                <div class="list flex1 flex-s-c" v-for="(item,index) in list" :key="index">
                    <Poptip class="flex1" v-model="item.popShowName" placement="right">
                        <div class="flex1 flex-s-c">
                            <div>
                                {{item.dimension_name||''}}
                            </div>
                            <Icon type="md-color-filter" class="icon-create"/>
                        </div>
                        <div slot="content">
                            <custom-input
                                style="width: 150px"
                                v-model="item.dimension_name"
                                type="text"
                                placeholder=""
                                :maxlength="30"
                            ></custom-input>
                            <Button type="primary" @click="item.popShowName = false">确定</Button>
                        </div>
                    </Poptip>
                    <Poptip class="flex1" v-model="item.popShowDesc" placement="right">
                        <div class="flex1 flex-s-c">
                            <div>
                                {{item.description||''}}
                            </div>
                            <Icon type="md-color-filter" class="icon-create"/>
                        </div>
                        <div slot="content">
                            <custom-input
                                style="width: 150px"
                                v-model="item.description"
                                type="text"
                                placeholder="维度描述不超过250个字符"
                                :maxlength="30"
                            ></custom-input>
                            <Button type="primary" @click="item.popShowDesc = false">确定</Button>
                        </div>
                    </Poptip>
                    <div class="flex1 flex-s-c">
                        <Icon type="ios-move" class="icon-move drag" />
                    </div>
                </div>
            </draggable>
        </div>
    </div> 
    <custom-modal footerHide :width="800" ref="modalId">
        <div class="form-view-box">
            <Form
                class="box"
                :label-width="80"
                ref="formId"
                :model="formData"
                :rules="ruleValidate"
            >
                <FormItem label="维度名称" prop="dimension_name">
                    <custom-input
                        style="width: 260px"
                        v-model="formData.dimension_name"
                        type="text"
                        placeholder=""
                        :maxlength="30"
                    ></custom-input>
                </FormItem>
                <FormItem label="维度描述" prop="description">
                    <custom-input
                        style="width: 260px"
                        v-model="formData.description"
                        type="textarea"
                        placeholder="维度描述不超过250个字符"
                        :maxlength="250"
                        :rows="6"
                        :show-word-limit="true"
                    ></custom-input>
                </FormItem>
            </Form>
            <div class="flex-e-c m-t-10">
                <Button @click="cancel" class="m-r-20">取消</Button>
                <Button @click="confirm" type="primary" class="m-r-20">确定</Button>
            </div> 
        </div>
    </custom-modal>
  </div>
</template>

<script>
import draggable from "vuedraggable";
export default {
  name: "gaugeIndex",
  mixins: [],
  components: {draggable},
  data() {
    return {
        inited:false,
        ruleValidate: {
            dimension_name: [
                {
                    required: true,
                    validator: this._checkString,
                    message: "维度名称不能为空",
                    trigger: "blur",
                },
            ],
        },
        formData:{
            id:0,
            dimension_name:"",
            description:"",
        },
        list:[],
    };
  },
  computed: {
    dragOptions() {
        return {
            animation: 200,
            group: "description",
            ghostClass: "ghost",
            disabled:false,
        };
    },
  },
  methods: {
    init(){
        if(!this.inited){
            this.loadData();
        }
    },
    loadData(){
        let id = Number(this.pageQuery.id || 0);
        return this.$MainApi.scaleDimensionInfo({
            data: {
                id
                }, 
            })
            .then((res) => {
                if (res.code) {
                    let data = res.data||{};
                    let items = data.items||[];
                    this.list = items.map(item=>({
                        ...item,
                        popShowName:false,
                        popShowDesc:false
                    }))
                    console.log('this.list',this.list)
                    return res
                }else{
                    return Promise.reject(res);
                }
            })
    },
    add(){
        this.$refs.modalId.show();
    },
    save(type){
        let dimension_data = type == 'add' ? [].concat([{
            ...this.formData,
            popShowName:false,
            popShowDesc:false
        }],this.list) : this.list;
        console.log(type,dimension_data)
        return this.$MainApi.scaleDimensionSave({
            data:{
                model_id:Number(this.pageQuery.id || 0),
                dimension_data
            }
        }).then(res=>{
            if(!res.code){
                res.message && this.$Message.info(res.message||('请完善信息'));
            }
            return res;
        })
    },
    confirm(){
        this.$refs.formId.validate((valid)=>{
            if(valid){
                this.save('add').then(res=>{
                    if(res.code){
                        this.cancel();
                        this.loadData();
                    } 
                });
            }else{
                this.$Message.info("请完善信息");
            }
        })
    },
    cancel(){
        this.$refs.modalId.dismiss();
    },
  },
};
</script>
<style lang="less" scoped>
.dimension{
    .dimension-table{
        width: 100%;
        font-size: 14px; 
        box-sizing: border-box;
        padding-left: 30px;
    }
    .header{
        width: 100%;
    } 
    th{
        text-align: left;
    }
    tr{
        line-height: 60px;
    }
    td{
    }
    .icon-create,.icon-move{
        font-size: 18px;
        margin-left: 6px;
        cursor: pointer;
    }
    .icon-move{
        margin-left: 20px;
        cursor: move;
    }
    .list{
        width: 100%;
        line-height: 60px;
    }
}
.form-view-box{
    background-color: #fff;
    position: relative;
}
</style>