<template>
  <hold-layout slot="right" class="psychic-data-layout">
    <materialList type="psychic" :list="list"></materialList>
    <rewrite-page slot="footer" :total="total" :current="page" :page-size="pageSize" :page-size-opts="pageSizeOpts" @on-change="e=>loadData(e)" @on-page-size-change="handlePageSizeChange" show-sizer show-elevator show-total transfer></rewrite-page>
    <Spin fix v-if="pageLoading"></Spin>
  </hold-layout>
</template>

<script>
import ListMixin from "@/helper/mixin/list-mixin";
import materialList from "@/components/view-components/material-view/material-list.vue";
export default {
  mixins: [ListMixin],
  components: {
    materialList,
  },
  data() {
    return {
      reqParams: {
        is_all: 0,
        distribute: 0, // 是否显示分配情况
        target_id: 0 //所属组织
      },
    };
  },
  methods: {
    getData(params = {}){
      this.reqParams = params || {};
      if(!this.list || this.list.length == 0) {
        this.loadData();
      }
    },
    onLoadData(page, extraData) {
      this.pageLoading = true;
      return this.$MainApi
        .psychologicalList({
          data: {
            ...this.reqParams,
            ...extraData,
          },
        })
        .then((res) => {
          if (res.code) {
            let data = res.data || {};
            let items = data.items || [];
            items.map((item)=>{
              item.id = item.consultant_id || 0;
              item.cover_pic = item.profile_picture || "";
              item.title = item.name || "";
            })
            this.data = {
              total: data.total,
              list: data.items,
            };
          }
        }).finally(()=>{
          this.pageLoading = false;
        })
    },
  },
  mounted(){
  }
};
</script>

<style lang="less" scoped>
.psychic-data-layout{
  padding: 20px 10px;
  height:100%;
  overflow: hidden;
  position:relative;
}
</style>