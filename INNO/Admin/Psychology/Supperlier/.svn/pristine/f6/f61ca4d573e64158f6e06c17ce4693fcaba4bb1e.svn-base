<template>
  <custom-modal ref="modal" class="page-drawer-area" :footerHide="true" :width="503">
    <div class="class-edit-area">
      <div class="edit-title bold">{{title}}</div>
      <div class="edit-cont">
        <div class="edit-cont-area">
          <div class="edit-cont-clause" v-bar>
            <div v-html="agreeContent"></div>
          </div>
          <Checkbox class="clause-checkbox" v-model="isAgree"><a>我已阅读并同意《隐私条款》</a></Checkbox>
          <div class="edit-foot flex-c-c">
            <Button type="primary" @click="confirm">确&nbsp;&nbsp;认</Button>
          </div>
        </div>
      </div>
    </div>
  </custom-modal>
</template>

<script>
export default {
  components: {},
  props: {
    title: {
      type: String,
      default: "隐私条款",
    },
  },
  data() {
    return {
      isAgree: false,
      agreeContent: "",
      callback: null
    };
  },
  computed: {},
  methods: {
    dismiss() {
      this.$refs.modal.dismiss();
    },
    showModal(item, callback) {
      this.item = item;
      this.callback = callback;
      this.$refs.modal.show();
    },
    confirm(){
      if(!this.isAgree){
        this.$Message.warning("请勾选协议！");
        return;
      }
      this.dismiss();
      typeof(this.callback) == 'function' && this.callback(this.item);
    }
  },
  mounted() {},
};
</script>

<style lang="less" scoped>
.page-drawer-area {
  .edit-cont-area {
    border: 0 none !important;
  }
  .edit-title {
    padding-left: 22px;
    font-size: 18px;
    margin-bottom: 20px;
    font-weight: bold;
  }
  .edit-cont-clause {
    width: 100%;
    height: 300px;
    background: #fcfcfc;
    border-radius: 4px;
    border: 1px solid #dddddd;
  }
  .clause-checkbox{
    padding: 10px;
  }
}
</style>