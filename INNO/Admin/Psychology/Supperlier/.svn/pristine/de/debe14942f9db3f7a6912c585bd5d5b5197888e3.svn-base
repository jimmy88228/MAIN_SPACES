<template>
  <div class="content-filter-box">
    <div class="classify-box-area" :class="{ 'show-more' : isMore}" v-if="isShowClassify">
      <div class="classify-box flex-s-c text-flow" >
        <div class="classify-list">
          <div class="classify-item flex-s-c pointer" @click="changeGroup(0)" :class="{'active':currGroupId == 0}">全部</div>
          <div class="classify-item flex-s-c pointer text-flow" @click="changeGroup(item.group_id)" :class="{'active':currGroupId == item.group_id}" v-for="item in groupList" :key="item.group_id">
            {{item.group_name}}
          </div>
        </div>
        <p class="more-item" @click="changeMore">
          <span v-if="isMore" style="padding: 0px 10px;"><Icon type="md-close" :size="20"/></span>
          <span v-else style="padding: 0px 5px;" > 更多<Icon type="md-more" /></span>
        </p>
      </div>
      <div class="classify-box-hold"></div>
    </div>
    <rewrite-area class="tips-box flex-s-c" v-if="isShowTipsBox">
      <Checkbox style="margin-right:15px;" v-model="selectAll" @on-change="onCheckChange">
        <span style="font-size:16px;">全选</span>
      </Checkbox>
      <span class="m-r-5">{{typeStr}}</span>
      <span class="type-num">{{total}}</span>
      <span class="m-r-5">已选</span>
      <span class="type-num">{{chooseData.length}}</span>
      <a @click="onCheckChange(false)" v-if="chooseData.length>0">取消选择</a>
    </rewrite-area>
  </div>
</template>

<script>
export default {
  props: {
    type: String,
    typeStr: String,
    total: Number,
    isShowClassify: Boolean,
    isShowTipsBox: Boolean,
    chooseData: {
      type: Array,
      default() {
        return [];
      },
    },
  },
  data() {
    return {
      reqKey: {
        video: "getVideoGroupList",
        audio: "getAudioGroupList",
        article: "getArticleGroupList",
      },
      groupList: [],
      currGroupId: 0,
      selectAll: false,
      isMore: false
    };
  },
  methods: {
    initData() {
      if (
        (!this.groupList || this.groupList.length == 0) &&
        this.isShowClassify
      ) {
        this.getGroup();
      }
    },
    getGroup() {
      let req = this.reqKey[this.type] || "";
      if (!req) return;
      return this.$MainApi[req]({
        data: {
          is_all: 1,
        },
      }).then((res) => {
        if (res.code) {
          let data = res.data || {};
          this.groupList = data.items || [];
        }
      });
    },
    changeGroup(group_id){
      this.currGroupId = group_id || 0;
      this.changeMore(false);
      this.$emit("groupChange", group_id);
    },
    onCheckChange(state) {
      this.$emit("checkChange", state);
    },
    changeMore(state){
      if(typeof(state) == 'boolean'){
        this.isMore = state
      } else {
        this.isMore = !this.isMore;
      }
      
    }
  },
  mounted() {
    this.$nextTick(() => {
      this.initData();
    });
  },
};
</script>

<style lang="less" scoped>
.content-filter-box {
  width: 100%;
  .classify-box-area{
    z-index: 10;
    position: relative;
    .classify-box {
      width:100%;
      position: absolute;
      top:0px;
      left:0px;
      display: flex;
    }
    .classify-box-hold{
      height: 44px;
      flex-shrink: 0;
    }
    .more-item {
      position: absolute;
      top: 5px;
      right: 0px;
      font-size: 14px;
      background-color:#fff;
      box-shadow: -8px 0px 5px #f3f3f3;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      height: 44px;
      width: 60px;
    }
  }
  .classify-list{
    width:100%;
    display:flex;
    align-items: flex-start;
    justify-content: flex-start;
    padding: 5px;
    padding-right: 60px;
    background-color:#fff;
    height: 54px;
    transition: all .35s;
    border:1px solid #fff;
    border-top: 0px;
    overflow: hidden;
  }
  
  .classify-item {
    flex-shrink: 0;
    min-width: 40px;
    height: 44px;
    padding: 0 20px;
    color: #333;
    border-radius: 4px;
    &.active {
      background: #f2fbff;
      color: #008acb;
    }
  }
  
  .tips-box {
    min-height: 50px;
    margin: 10px 0;
  }
  .type-num {
    color: #333;
    margin-right: 22px;
  }
  .classify-box-area.show-more{
    .classify-list{
      flex-wrap: wrap;
      height: 300px;
      border-color:#efefef;
      
    }
  }
}
</style>