.anim-box {
    position: relative !important;
    overflow: hidden;
}

.anim-view{
    position: absolute !important;
    left: 0;
    top: 0;
    width: 100%;
}
.anim-view-area {
    width:100%;
    height:100%;
    overflow: hidden;
    position: relative;
    .__view{
        height: 100% !important;
    }
}
.anim-view-area-stay{
    width:100%;
    // height:100%;
    min-height: calc(100% + 0px);
    display: flex;
    flex-direction: column;
    position: relative;
}
.anim-view-area-title{
    line-height:70px;
    font-size: 22px;
    color: #171717;
    padding:0px 20px;
}
.anim-router-view{
    flex: 1;
    position:relative;
    min-height: calc(100% + 0px);
}
.anim-router{
    padding: 10px 20px 0 10px;
    position:absolute;
    top:0px;
    left:0px;
    width:100%;
    min-height:100%;
}
.anim-top {
    z-index: 2;
}
.anim-bottom {
    z-index: 1;
}
.anim-300 {
    animation-duration: 300ms;
    animation-timing-function: ease-in-out;
    animation-fill-mode: both;
}
.anim-500 {
    animation-duration: 500ms;
    animation-timing-function: ease-in-out;
    animation-fill-mode: both;
}
.anim-800 {
    animation-duration: 800ms;
    animation-timing-function: ease-in-out;
    animation-fill-mode: both;
}
.anim-1000 {
    animation-duration: 1000ms;
    animation-timing-function: ease-in-out;
    animation-fill-mode: both;
}
.anim-1500 {
    animation-duration: 1500ms;
    animation-timing-function: ease-in-out;
    animation-fill-mode: both;
}
.anim-2000 {
    animation-duration: 2000ms;
    animation-timing-function: ease-in-out;
    animation-fill-mode: both;
}
