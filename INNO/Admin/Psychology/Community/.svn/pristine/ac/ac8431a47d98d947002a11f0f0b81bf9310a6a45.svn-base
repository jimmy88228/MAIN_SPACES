.anim-box {
    position: relative !important;
    overflow: hidden;
}

.anim-view{
    position: absolute !important;
    left: 0;
    top: 0;
    width: 100%;
}
.anim-view-area {
    width:100%;
    height:100%;
    overflow: hidden;
    position: relative;
    .__view{
        height: 100% !important;
    }
}
.anim-view-area-stay{
    width:100%;
    // height:100%;
    min-height: calc(100% + 0px);
    display: flex;
    flex-direction: column;
    position: relative;
}
.anim-view-area-title{
    line-height:70px;
    font-size: 22px;
    color: #171717;
    padding:0px 20px;
}
.anim-router-view{
    flex: 1;
    position:relative;
    min-height: calc(100% + 0px);
}
.anim-router{
    padding: 10px 20px 0 10px;
    position:absolute;
    top:0px;
    left:0px;
    width:100%;
    min-height:100%;
}
.anim-top {
    z-index: 2;
}
.anim-bottom {
    z-index: 1;
}
.anim-300 {
    animation-duration: 300ms;
    animation-timing-function: ease-in-out;
    animation-fill-mode: both;
}
.anim-500 {
    animation-duration: 500ms;
    animation-timing-function: ease-in-out;
    animation-fill-mode: both;
}
.anim-800 {
    animation-duration: 800ms;
    animation-timing-function: ease-in-out;
    animation-fill-mode: both;
}
.anim-1000 {
    animation-duration: 1000ms;
    animation-timing-function: ease-in-out;
    animation-fill-mode: both;
}
.anim-1500 {
    animation-duration: 1500ms;
    animation-timing-function: ease-in-out;
    animation-fill-mode: both;
}
.anim-2000 {
    animation-duration: 2000ms;
    animation-timing-function: ease-in-out;
    animation-fill-mode: both;
}

.anim-fade-in {
    opacity: 0;
    animation: fade-in 300ms forwards ease-out;
}

@keyframes fade-in {
    0% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}

.anim-slide-in-up {
    opacity: 0;
    transform: translateY(50pt);
    animation: slide-in-up 300ms forwards ease-out;
}

.anim-slide-in-up-dismiss{
    opacity: 1;
    transform: translateY(0);
    animation: slide-in-up-dismiss 300ms forwards ease-in;
}

@keyframes slide-in-up {
    0% {
        opacity: 0;
        transform: translateY(50pt);
    }

    100% {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes slide-in-up-dismiss { 
    0% {
        opacity: 1;
        transform: translateY(0);
    }
    100% {
        opacity: 0;
        transform: translateY(50pt);
    }
}

.anim-slide-in-down {
    opacity: 0;
    transform: translateY(-50pt);
    animation: slide-in-down 300ms forwards ease-out;
}

@keyframes slide-in-down {
    0% {
        opacity: 0;
        transform: translateY(-50pt);
    }

    100% {
        opacity: 1;
        transform: translateY(0);
    }
} 
 

.anim-delay {
    animation-delay: 200ms;
}