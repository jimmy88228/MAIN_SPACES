<template>
  <Modal v-model="isShowModal" :title="title">
    <div class="class-organize-view">
      <classOrganizeView 
      ref="classOrganizeRef" 
      @on-change="changeClassOrganize"
      :isRelation="isRelation"
      :multiple="multiple"
      :expandNode="expandNode"
      :selectNode="selectNode"
      :showCheckbox="showCheckbox"
      :type="type"
      :isModal="isModal"
      :isShowAdd="isShowAdd"
      :searchClick="searchClick"
      :isShowSearch="isShowSearch"
      :isLImitMain="isLImitMain"
      :isShowAllBtn="isShowAllBtn"
      ></classOrganizeView>
    </div>
    <div slot="footer">
        <Button type="default" @click="isShowModal = false">取消</Button>
        <Button type="primary" @click="confirm">确定</Button>
      </div>
  </Modal>
</template>
<script>
  import classOrganizeView from "@/components/view-components/class-organize-view/index.vue"
  export default {
    props: {
        title: {
          type: String,
          default: "选择班级"
        },
        multiple: {
          type: Boolean,
          default: false,
        },
        expandNode: {
          type: Boolean,
          default: true,
        },
        selectNode: {
          type: Boolean,
          default: true,
        },
        showCheckbox: {
          type: Boolean,
          default: true,
        },
        isRelation: { // true 则存在勾选父，子不可取消，不勾选父则子项自由选择
          type: Boolean,
          default: false
        },
        type: String | Number, //请求数据： 1.代表获取全部组织架构，2.获取管理员有权限的组织架构
        isModal:{
          type: Boolean,
          default: false
        },
        isShowAdd:{
          type: Boolean,
          default: true
        },
        searchClick:{
          type: Boolean,
          default: false
        },
        isShowSearch:{
          type: Boolean,
          default: true
        },
        isLImitMain: { // 手动限制选择主体
          type: Boolean | String,
          default: ""
        },
        isShowAllBtn: Boolean
    },
    components: { classOrganizeView },
    data(){
      return {
        isShowModal: false,
        selectData: []
      }
    },
    methods:{
      showModal(params){
        this.isShowModal = true;
        console.log("params", params);
        this.$refs["classOrganizeRef"] && this.$refs["classOrganizeRef"].showModal(params);
      },
      changeClassOrganize(data){
        this.selectData = data;
      },
      getData(){
        let selectData = this.selectData || [];
        return selectData;
      },
      confirm(){
        this.$emit("success", this.getData());
        this.isShowModal = false;
      }
    }
  }
</script>
<style lang="less">
.class-organize-view{
  width: 100%;
  height: 540px;
}
</style>
