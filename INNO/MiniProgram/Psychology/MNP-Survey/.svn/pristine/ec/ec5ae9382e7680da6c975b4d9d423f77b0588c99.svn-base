.answer{
  .H5{ 
    .btn{
      width: 180rpx;
      height: 64rpx;
      background: #ffffff;
      border-radius: 12rpx;
      border: 1px solid #dbf1d9;
    }
    .progress-box{
      background: rgba($color: #f5fcf4, $alpha: 0.9);
      padding: 60rpx 40rpx;
      width: 100%;
    }
    .popup-content{
      font-size: 72rpx;
      box-shadow: unset;
      background-color: unset;
    }

    @media screen and (max-width: $small-screen) {
      .msg-box {
        flex: 1;
        padding-right: 50rpx;
        box-sizing: border-box;
      }
      .answer-box {
      }
      .answer-item {
        width: 480rpx;
        padding: 0 20rpx;
        border: none;
        background-color: rgba($color: #fafafa, $alpha: 1);
      }
      .btn { 
        width: 130rpx;
        padding: 0;
      }
      .popup-content {
        font-size: 60rpx;
      }
      .goon-btn {
        width: 380rpx;
        height: 120rpx;
        border-radius: 70rpx;
      } 
    }
  }
}