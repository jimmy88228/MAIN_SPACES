.frame-box{
  &.H5{
    background-color: #F0F6EE;
  }
  .H5-box{
    height: 100vh;
    margin: 0 auto;
    .header{
      background: #fff;
      border-radius: 12rpx;
      padding:0 20rpx;
      box-sizing: border-box;
      margin-top: 30rpx;
    }
    .login-logo{
      width: 120rpx;
      height: 120rpx;
    }
    .body{
      position: relative;
      background: #fff;
      overflow-y: scroll;
      overflow-x: hidden;
      border-radius: 20rpx;
      margin: 30rpx 0;
      text-align: justify;
      word-break: break-all;
      // perspective: 100rpx;
      // width: 100%;
    }
    .msg{
      padding-right: 200rpx;
      box-sizing: border-box;
    }
    .item{ 
      position: relative;
      padding: 0 20rpx;
      padding-left: 30rpx;
      box-sizing: border-box;
      flex-wrap: wrap; 
      line-height: 40rpx;
      &::after{
        content: "";
        width: 1px;
        height: 34rpx;
        background: #979797;
        position: absolute;
        right: 0;
        top: 50%;
        transform: translateY(-50%);
      }  
      &:last-child { 
        &::after{
          display: none; 
        } 
      }
    } 
    .content {
      word-break: break-all;
      font-family: PingFangSC-Medium;
    }
    .left-box{
      position: relative;
      &::after{
        content: "";
        width: 1px;
        height: 50rpx;
        background: #bfbfbf;
        position: absolute;
        right: 0;
        top: 50%;
        transform: translateY(-50%);
      }
    }
    .right-box{
      .item{ 
        &::after{
          display: none;
        }
      }
    }
    .logout{
      width: 160rpx;
      height: 72rpx;
      background: #FAFAFA;
      border-radius: 12rpx;
    }
    .footer{
      position: sticky;
      bottom: 0;
    }
  }
  @media screen and (max-width: $small-screen) {
    .H5-box{
      max-width: 690rpx; 
      min-width: auto;  
      .header{
        padding:10rpx 10rpx 10rpx 0;
      }
      .login-logo {
        width: 90rpx;
        height: 90rpx;
      }
      .item{
        justify-content: start;
        padding-left: 20rpx;
      }
      .logout{
        width: 130rpx;
        height: 62rpx;
        font-size: 20rpx;
        padding: 0;
      }

    }
  }
  @media screen and (min-width: $small-screen) and (max-width: $mid-screen) {
    .H5-box{
      max-width: 900rpx;
      min-width: 900rpx;
    }
  }
  @media screen and (min-width: $mid-screen) {
    .H5-box{
      max-width: 1840rpx;
      min-width: 1840rpx;
    }
  }
}