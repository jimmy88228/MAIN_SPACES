                    <div class="msg-box flex-c-c">
                        <image :src="staticAddress + keyType[item.type].img" class="img-logo m-r-30" mode="aspectFit"></image>
                        <div>{{item.title}}</div>
                    </div>
                    <div class="switch-area"  @click="toggle(item)">
                        <div class="switch-box" :class="{active:item.state == 1}">
                            <div class="switch"></div>
                        </div>
                    </div>
                </div>
            </div>
        </ori-scroll-view>
    </div>
</template>

<script> 
import oriScrollView from "@/components/ori-comps/scroll/ori-scroll-view.vue";
const pageOption = Page.BasePage({
    components: {
        oriScrollView,
    },
    data() {
        return {
            listData:[{
                id:0,
                title:"视频咨询",
                state:0,
                type:"video",
            },{
                id:1,
                title:"语音咨询",
                state:1,
                type:"audio"
            }],
            keyType:{
                video:{
                    img:"/common/camera-v2.png"
                },
                audio:{
                    img:"/common/voice-v2.png"
                },
            }
        }
    },
    components: { 
    },
    onLoad(){

    },
    methods: {
        
        toggle(e) {
            e.state = e.state == 1?0:1;
        }
    },
})
export default pageOption
</script>

<style lang="scss" scoped> 
.reserve-setting{
    height: 100vh;
    background-color: #f7f7f7;
    padding: 30rpx;
    box-sizing: border-box;
    .list-box{
        height: 100%;
        .list{
            width: 100%;
            height: 100rpx;
            background: #FFFFFF;
            border-radius: 10rpx;
            padding:0 14rpx 0 44rpx;
