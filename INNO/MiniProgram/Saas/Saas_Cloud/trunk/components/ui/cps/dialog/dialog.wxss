@import "/static/wxss/common.wxss";
@import "/static/wxss/tags.wxss";

.window-ext {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.dialog-box {
    z-index: 101;
    box-shadow: 0 0 20rpx 10rpx rgba(0, 0, 0, 0.1);
    background-color: var(--card-bg-color);
    border-radius: 8rpx;
    width: 580rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    text-align: center;
}
.dialog-all {
    width: 100%;
    box-sizing: border-box;
    padding: 46rpx 30rpx;
}
.dialog-single {
    width: 100%;
    box-sizing: border-box;
    padding: 60rpx 30rpx;
}
.dialog-title {
    display: block;
    box-sizing: border-box;
    width: 100%;
    font-size: 28rpx;
    font-weight: bold;
    overflow: hidden;
    text-align: center;
}

.dialog-centent {
    display: block;
    box-sizing: border-box;
    width: 100%;
    max-height: 200rpx;
    overflow-y: scroll;
    word-wrap: break-word;
    word-break: normal;
    white-space: pre-wrap;
    text-overflow: ellipsis;
    font-size: 28rpx;
    color: var(--sub-color);
}
.dialog-all .dialog-centent {
    margin-top: 20rpx;
    /* min-height: 60rpx; */
}

.dialog-btn-box {
    box-sizing: border-box;
    width: 100%;
    height: 86rpx;
    border-top: solid 1rpx var(--line-color);
    display: flex;
    flex-direction: row;
}

.dialog-btn {
    font-size: 30rpx;
    flex-grow: 1;
    text-align: center;
    line-height: 86rpx;
}

.dialog-btn,
.dialog-btn::after {
    border: none;
    background: none;
    border-radius: 0rpx;
}

.dialog-btn.start,
.dialog-btn.middle {
    color: var(--tips-color);
}

.dialog-btn.middle,
.dialog-btn.end {
    border-left: solid 1rpx var(--line-color);
}

.dialog-btn.start-hover {
    background-color: rgba(0, 0, 0, 0.1);
    border-radius: 0 0 0rpx 8rpx;
}

.dialog-btn.middle-hover {
    background-color: rgba(0, 0, 0, 0.1);
}

.dialog-btn.end-hover {
    background-color: rgba(0, 0, 0, 0.1);
    border-radius: 0 0 8rpx 0rpx;
}

.dialog-btn.single-hover {
    background-color: rgba(0, 0, 0, 0.1);
    border-radius: 0 0 8rpx 8rpx;
}
