.main {
    position: fixed;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    z-index: 1111;
}

.toast_box {
    position: relative;
    left: 0;
    top: 0;
    display: inline-flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 0rpx 40rpx;
    min-width: 230rpx;
    min-height: 230rpx;
    background: rgba(0, 0, 0, 0.7);
    color: #fff;
    border-radius: 4rpx;
}

.toast_box.longText {
    min-width: 340rpx;
}

.toast_box.shortText {
    min-width: 180rpx;
}

.img_logo {
    margin-bottom: 26rpx;
    width: 66rpx;
    height: 66rpx;
}

.toast_text {
    font-size: 30rpx;
    text-align: center;
}
