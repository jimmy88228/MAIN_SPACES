.act-prize-box{
  border-radius: 50%; 
  flex-shrink: 0;
  background-color: #fff;
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  z-index: 2;
} 
.act-prize-cir{
  position: absolute;
  z-index: 1;
  border-radius: 50%;
  border: 4rpx solid #efefef;
  box-sizing: border-box;
}
.act-prize-cir-box{
  position: absolute;
  z-index: 100;
}
.cir-point{
  position: absolute;
  background-color: #fff;
  width: 8rpx;
  height: 8rpx;
  z-index: 3;
  border: 4rpx solid #efefef;
  border-radius: 50%;
  position: absolute;
  top: 0;
  left: 50%;
  transform:translate(-50%,-50%);
}
.cir-point.active{
  border-color: rgba(255,58,0,1);
}
