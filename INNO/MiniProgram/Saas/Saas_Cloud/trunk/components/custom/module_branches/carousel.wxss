.swiper_module {
    position: relative;
}
.custom_swiper_item {
    position: relative;
}
.s_item_view{
    position: relative;
}
.video_swiper{
  min-height: 422rpx !important;
}
.videoBox{
  position:absolute;
  top:50%;
  left:50%;
  transform: translate(-50%,-50%);
  width: 750rpx;
  height: 422rpx;
}
.swiper_img {
    width: 100%;
    display:block;
    background-color:#fff;
}

.switch_point {
    position: absolute;
    width: 100%;
    bottom: 16rpx;
    left:0;
    padding-right: 24rpx;
    box-sizing: border-box;
    text-align: center;
}

.switch_point .point {
    background: #fff;
    width: 10rpx;
    height: 10rpx;
    border-radius: 10rpx;
    display: inline-block;
    margin: 0px 6rpx;
    transition: all 0.32s;
    border:2rpx solid #ccc;
}

