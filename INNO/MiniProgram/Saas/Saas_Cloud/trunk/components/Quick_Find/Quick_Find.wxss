
.main {
  height: 100%; 
}

.nav {
  position: fixed;
  display: flex;
  flex-direction: column;
  height: 80%;
  z-index: 99;
  top: 50%;
  right: 0;
  transform: translateY(-50%);
  box-sizing: border-box; 
}
.scroll{
  height: 100%;
  box-sizing: border-box;
  padding-left: 50rpx;
}
.box{
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
  box-sizing: border-box;
  padding-top: 100rpx;
  width: 100rpx;
}
