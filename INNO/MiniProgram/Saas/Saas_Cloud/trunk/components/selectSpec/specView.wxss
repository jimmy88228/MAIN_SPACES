@import "/static/iconFont/font.wxss";
@import "/static/wxss/common.wxss";
.service_popup{ 
    width:100%;
    background-color:#fff; 
    box-sizing: border-box;
    padding-bottom: 90rpx;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
}
.service_popup .tit {
    padding-bottom: 20rpx;
}
.select_goods_area{
  padding:25rpx 30rpx;
  min-height: 90rpx;
  display: flex;
}
.select_goods_img {
    padding: 10rpx;
    border-radius: 10rpx;
    background-color: #fff;
    width: 180rpx;
    height: 180rpx;
    flex-shrink: 0;
    margin-top: -70rpx;
}

.select_goods_img_stay {
    width: 100%;
    height: 100%;
    overflow: hidden;
    position: relative;
}

.select_goods_icon {
    display: block;
    width: 100%;
    height: 100%;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    -ms-transform: translate(-50%, -50%);
    -moz-transform: translate(-50%, -50%);
    -webkit-transform: translate(-50%, -50%);
    -o-transform: translate(-50%, -50%);
    background-color:#efefef;
}

.select_goods_info {
    /* margin-left: 250rpx;
    margin-top: -50rpx;
    vertical-align: middle;
    padding: 15rpx 0; */
    line-height: 38rpx;
    box-sizing: border-box;
    width: 100%;
    padding-left: 30rpx;
}

.select_goods_price {
    display: inline-block;
    font-weight: bold;
}

.select_goods_point {
    font-size: 28rpx;
    margin-left: 10rpx;
}

.goods_price_box {
    /* line-height: 26rpx; */
}

.goods_price_margin {
    /* margin-bottom: 12rpx; */
}
.add_cart_btn_area {
    display: flex;
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
}

.add_cart_btn {
    flex: 1;
    -ms-flex: 1;
    -webkit-flex: 1;
    border-radius: 0px;
    /* width:50%; */
    line-height: 88rpx;
    height: 100%;
    text-align: center;
    color:#fff;
}
.style_select .tit {
    padding-bottom: 20rpx;
}

.color_select {
    /* border-bottom: 1px solid #efefef;
    border-top: 1px solid #efefef; */
    padding: 28rpx 0px;
    padding-bottom: 14rpx;
}

.size_select {
    border-top: 1px solid #efefef;
    padding: 28rpx 0px;
    padding-bottom: 14rpx;
}

.style_select_cont {
    width: 690rpx;
    margin: 0 auto;
    max-height: 350rpx;
    min-height: 160rpx;
    border-top: 1px solid #efefef;
    border-bottom: 1px solid #efefef;
    /* padding: 14rpx 0px 0rpx 0; */
}

.select_item_stay {
    display: inline-block;
    margin: 0px 14rpx 14rpx 0px;
    vertical-align: middle;
}

.color_select_item button {
    padding: 0px 35rpx;
    border: 1px solid #e9e9e9;
    border-radius: 6rpx;
    height: 60rpx;
}

.size_select_item button {
    padding: 0px 35rpx;
    border: 1px solid #e9e9e9;
    border-radius: 6rpx;
    height: 56rpx;
}

.goods_count {
    position: relative;
    width: 690rpx;
    margin: 0px auto;
    /* vertical-align: center; */
    height: 100rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid #efefef;
}

.goods_text_box {
    display: inline-flex;
    vertical-align: center;
}

.check_inventory_link {
    position: absolute;
    top: 0px;
    right: 0px;
    line-height: 40rpx;
}

.check_inventory_link image {
    width: 30rpx;
    margin-right: 10rpx;
    display: inline-block;
    vertical-align: middle;
}

.check_inventory_link text {
    display: inline-block;
    vertical-align: middle;
}

.goods_operate {
    width: 100%;
    display: table;
}

.goods_count_operate {
    display: inline-flex;
    vertical-align: middle;
    line-height: 50rpx;
    /* width: 300rpx; */
}

.count_operate {
    width: 20rpx;
    display: inline-block;
    vertical-align: middle;
    overflow: hidden;
}

.reduce_btn {
    /* padding: 0 15rpx; */
    border: 1px solid rgba(239, 239, 239, 1);
    width:50rpx;
    height: 50rpx;
    text-align:center;
}

.add_btn {
    /* padding: 0 15rpx; */
    border: 1px solid rgba(239, 239, 239, 1);
    width:50rpx;
    height: 50rpx;
    text-align:center;
}

.count_operate image {
    width: 20rpx;
    margin-top: -4rpx;
    /* width: 100%; */
    height: 50%;
    display: inline-block;
    vertical-align: middle;
}

.count_input {
    width: 75rpx;
    height: 50rpx;
    display: inline-block;
    vertical-align: middle;
    box-sizing: border-box;
    /* border: 1rpx solid #e9e9e9; */
    padding: 0px;
    text-align: center;
}

.inventory {
    display: table-cell;
    vertical-align: middle;
    margin-left: 14rpx;
    opacity: 0.6;
    letter-spacing: 1rpx;
}
.box{
    padding: 0 4rpx;
    box-sizing: border-box;
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
}
.btn-box{
    border: 1px solid;
    box-sizing: border-box;
    height: 90rpx;
}
.btn-cart,.btn-buy{
    /* height: 90rpx; */
    height: 100%;
}
.btn-buy{
    color: #fff;
}
.service_popup.customTab{
    padding-bottom: calc(180rpx) !important;
}
.service_popup.ipx{
    padding-bottom: calc(90rpx + 34px) !important;
}
.service_popup.customTab.ipx{
    padding-bottom: calc(180rpx + 34px) !important;
}

#discountPopup .spec_scroll_box {
    position: static;
}