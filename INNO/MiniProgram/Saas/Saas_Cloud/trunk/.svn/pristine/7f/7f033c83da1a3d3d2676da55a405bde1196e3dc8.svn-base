/* pages/micro_mall/lottery/lottery_record/lottery_record.wxss */
page{
    background: #efefef;
}
.header{
    background: rgba(255,247,226,1);
    color: rgba(234,191,131);
    font-size: 26rpx;
    line-height: 60rpx;
    position: fixed;
    width: 100%;
    top: 0;
    left: 0;
    z-index: 2;
    text-align: center;
}
.line{
    background: #efefef;
    width: 100%;
    height: 20rpx;
    position: fixed;
    z-index: 2;
    left: 0;
    top: 60rpx;
}
.record{
    padding-top: 80rpx;
    position: relative;
}
.record_item{
    width: 100%;
    background: #fff;
    margin-bottom: 16rpx;
    padding: 30rpx 0 26rpx 30rpx;
    box-sizing: border-box;
}
.record_header{
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1px solid #efefef;
    padding-bottom: 24rpx;
    font-size: 22rpx;
    color: #333;
}
.record_bottom{
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 24rpx;
    padding-right: 22rpx;
}
.item_btn{
    width: 112rpx;
    height: 56rpx;
    line-height: 56rpx;
    text-align: center;
    border-radius: 4px;
    font-size: 26rpx;
    color: #fff;
}
.empty_data{
    margin-top: 400rpx;
    font-size: 30rpx;
    text-align: center;
}
.create_time{
    color: #333;
}
.prize_img{
    width: 110rpx;
    margin-right: 20rpx;
}
.prize_name{
    font-size: 26rpx;
    font-weight: 600;
}
.prize_img, .prize_name{
    display: inline-block;
    vertical-align: middle;
}

.filtrate {
    box-sizing: border-box;
    position: fixed;
    bottom: 0px;
    left: 15rpx;
    width: 720rpx;
    /* height: 430rpx;  */
    transform: translateY(100%);
    z-index: 333;
    transition: all 0.4s;
    background: rgba(255, 255, 255, 1);
    border-radius: 10rpx;
    padding-bottom: 15rpx;
}

.filtrate.isShow {
    transform: translateY(-15rpx);
}

.filtrate_content {
    width: 100%;
    border-bottom: 1px solid #dfdfdf;
    padding: 35rpx 0;
    text-align: center;
}

.noborder {
    border: none;
}

.filtrate_cancel {
    margin: 0 15rpx;
    color: #fff;
    border-radius: 6rpx;
    text-align: center;
    padding: 25rpx 0;
}

.black_bg {
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    position: fixed;
    z-index: 222;
    background: rgba(0, 0, 0, 0.7);
    display: none;
}

.black_bg.isShow {
    display: block;
}