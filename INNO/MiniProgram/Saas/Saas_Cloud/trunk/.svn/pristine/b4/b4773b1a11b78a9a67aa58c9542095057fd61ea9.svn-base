/*支付弹框*/
.pay_pop_bg{
  position:fixed;
  top:0px;
  left:0px;
  width:100%;
  height:100%;
  background:rgba(0,0,0,0.7);
  z-index:10;
  display:none;
}
.pay_pop_bg.isshow{
  display:block;
}
.pay_pop{
  width:100%;
  position:fixed;
  bottom:0px;
  left:0px;
  z-index:10;
  background:#EEEEEE;
  transform:translateY(110%);
}
.pay_pop.isshow{
  animation: show_pop .32s;
  -moz-animation: show_pop .32s;
  -ms-animation: show_pop .32s;
  -o-animation: show_pop .32s;
  -webkit-animation: show_pop .32s;
	animation-fill-mode: forwards;
  -moz-animation-fill-mode: forwards;
  -ms-animation-fill-mode: forwards;
  -o-animation-fill-mode: forwards;
  -webkit-animation-fill-mode: forwards;
}
.pay_pop.ishide{
  animation: hide_pop .32s;
  -moz-animation: hide_pop .32s;
  -ms-animation: hide_pop .32s;
  -o-animation: hide_pop .32s;
  -webkit-animation: hide_pop .32s;
	animation-fill-mode: forwards;
  -moz-animation-fill-mode: forwards;
  -ms-animation-fill-mode: forwards;
  -o-animation-fill-mode: forwards;
  -webkit-animation-fill-mode: forwards;
}
@keyframes show_pop {
  0% {
    transform:translateY(110%);
  }
  100% {
    transform:translateY(0);
  }
}
@keyframes hide_pop {
 0% {
    transform:translateY(0);
  }
  100% {
    transform:translateY(110%);
  }
}

