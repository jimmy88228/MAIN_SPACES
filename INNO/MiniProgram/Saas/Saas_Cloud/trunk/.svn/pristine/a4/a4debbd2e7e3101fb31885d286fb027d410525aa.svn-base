/* pages/store_pay/cards/select_prepaid.wxss */
.radio_icon{
  display:table-cell;
  vertical-align: middle;
  width:50rpx;
}
.radio_icon image{
  width:50rpx;
  vertical-align: middle;
}
.no_use_prepaid{
  position:absolute;
  background:#FFF;
  width:100%;
  line-height:100rpx;
  height:100rpx;
  z-index:2;
  padding:0px 20rpx;
}
.no_use_prepaid text{
  display:table-cell;
  vertical-align: middle;
}

.prepaid_scroll{
  position:fixed;
  top:0px;
  left:0px;
  width:100%;
  height:100%;
  box-sizing:border-box;
  padding:100rpx 0rpx;
}
.prepaid_list{
  padding:0px 20rpx;
  box-sizing:border-box;
}
.prepaid_item{
  width:100%;
  display:table;
  margin:10rpx 0px;
}
/* .prepaid_item .radio_icon{
  padding:0px 10rpx;
} */
.prepaid_cont{
  display:table-cell;
  position:relative;
}
.prepaid_bg{

}
.prepaid_bg image{
  width:100%;
  display:block;
}
.prepaid_msg{
  width:100%;
  position:absolute;
  top:0px;
  left:0px;
  color:#fff;
  height:254.7rpx;
  padding:20rpx;
  box-sizing:border-box;
}
.card_balance{
  position:absolute;
  left:20rpx;
  bottom:15rpx;
}
.card_balance_num{
  margin-top:10rpx;
  font-size:60rpx;
}
.card_value{
  position:absolute;
  bottom:15rpx;
  right:20rpx;
}
.card_tip{
  width:90%;
  margin:0 auto;
  border-bottom-left-radius:10rpx;
  border-bottom-right-radius:10rpx;
  background:#F2F2F2;
  text-align:center;
  font-size:24rpx;
  padding:20rpx 0px;
  border:1px solid #e9e9e9;
  border-top:0px;
}


.no_prepaid{
  width:100%;
  margin-top:200rpx;
  text-align:center;
}
.no_prepaid image{
  width:200rpx;
  display:inline-block;
}
.no_prepaid .text{
  color:#ccc;
}


.confirm_use_box{
  position:fixed;
  bottom:0px;
  left:0px;
  z-index:2;
  width:100%;
  text-align:center;
  box-sizing:border-box;
  color:#fff;
}
.confirm_use_btn{
  line-height:100rpx;
}


.slide-image{
  width:100%;
}