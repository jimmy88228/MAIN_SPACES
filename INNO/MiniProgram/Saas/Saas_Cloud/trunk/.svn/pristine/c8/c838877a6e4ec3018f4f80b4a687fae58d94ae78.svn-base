/* pages/goods/popup/service.wxss */

.service_popup {
    background: #fff;
    position: fixed;
    left: 0px;
    bottom: 0px;
    width: 100%;
    min-height: calc(100vh - 480rpx);
    max-height: calc(100vh - 250rpx);
}

.service_tit {
    position: relative;
    font-size: 28rpx;
    padding: 30rpx 0px;
    font-weight: bold;
    text-align: center;
}

.close_area {
    position: absolute;
    top: 50%;
    right: 0px;
    padding: 20rpx 25rpx;
    transform: translateY(-50%);
}

.close_area image {
    width: 20rpx;
    display: block;
}

.service_scroll {
    min-height: 500rpx;
    max-height: 500rpx;
}

.service_item {
    padding: 0px 25rpx;
    display: table;
    width: 100%;
    box-sizing: border-box;
}

.s_item_icon {
    display: table-cell;
    vertical-align: top;
    width: 100rpx;
}

.s_item_icon image {
    width: 50rpx;
    height: 50rpx;
    display: block;
    margin: 0 auto;
}

.s_item_info {
    display: table-cell;
    vertical-align: top;
}

.s_item_name {
    font-size: 26rpx;
    margin-bottom: 22rpx;
}

.s_item_desc {
    font-size: 24rpx;
    color: #7f7f7f;
    margin-bottom: 49rpx;
}
.service_btn_area {
    padding: 25rpx;
    position: absolute;
    left: 0;
    bottom: 0;
    box-sizing: border-box;
    width: 100%;
}
.service_btn_area.ipx_b{
    bottom: 34px !important;
}
.confirm_btn {
    width: 100%;
    display: flex;
    height: 88rpx;
    justify-content: center;
    align-items: center;
    background: #000;
    color: #fff;
    border-radius: 6rpx;
}
.server_close{
    width: 20rpx;
    position: absolute; 
    padding: 10rpx;
    top: 33rpx;
    right: 18rpx;
}