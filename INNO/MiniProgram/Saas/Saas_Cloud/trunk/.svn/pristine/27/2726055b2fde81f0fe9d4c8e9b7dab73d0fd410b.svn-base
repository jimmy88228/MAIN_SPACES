/* pages/component/login/login_by_phone.wxss */
.login_page{
  position:fixed;
  top:50%;
  left:50%;
  z-index:100;
  width:600rpx;
  /* height:717rpx; */
  /* background:#fff; */
  transform: translate(-50%,-50%);
  /* border-radius:20rpx; */
}
.login_page_cont{
  width:100%;
  /* background:#fff; */
  border-radius:20rpx;
  overflow: hidden;
}
.login_view_bg{
  width:100%;
  height:480rpx;
  display:block;
  background-color: #efefef;
}
.login_view_logo{
  width:258rpx;
  height:258rpx;
  display:block;
  margin:0 auto;
  margin-top:116rpx;
  margin-bottom:129rpx;
}
.operate_btn_view{
  width:100%;
  height:100rpx;
  display:flex;
  justify-content: center;
  align-items: center;
  margin:0 auto;
  /* background:#FB171E; */
  background:linear-gradient(180deg,rgba(254,31,14,1) 0%,rgba(250,96,34,1) 100%);
  color:#fff;
  font-size:30rpx;
}
.get_number_btn{
  position:absolute;
  top:0px;
  left:0px;
  width:100%;
  height:100%;
}
.component_close{
  position: absolute;
  padding: 20rpx;
  width: 70rpx;
  height: 70rpx;
  opacity: 1;
  top: 0px;
  right: 0px;
  transform: rotate(45deg);
  border-radius: 100%;
  overflow: hidden;
  z-index:10;
  box-sizing:border-box;
}
.component_close::before{
  content:"";
  width:30rpx;
  height:4rpx;
  position:absolute;
  top:50%;
  left:50%;
  transform: translate(-50%,-50%);
  background-color:#000;
}
.component_close::after{
  content:"";
  height:30rpx;
  width:4rpx;
  position:absolute;
  top:50%;
  left:50%;
  transform: translate(-50%,-50%);
  background-color:#000;
}