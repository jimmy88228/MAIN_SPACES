/* pages/component/address/areaSelect.wxss */
.confirm_btn{
  position:relative;
}
.confirm_btn_float{
  position:absolute;
  top:0px;
  left:0px;
  width:100%;
  height:100%;
  background:none;
}
.region_select_bg{
  position:fixed;
  top:0px;
  left:0px;
  width:100%;
  height:100%;
  background:rgba(0,0,0,.6);
  z-index:2;
}
.region_select{
  width:100%;
  position:fixed;
  left:0px;
  bottom:0px;
  overflow:hidden;
  text-align:center;
  background:#fff;
  z-index:2;
}
.picker_list{
  font-size:0;
  text-align:center;
  padding:20rpx 0px;
}
.picker_item{
  font-size:26rpx;
  display:inline-block;
  width:30%;
  margin:0px 1%;
  height:80rpx;
  line-height:80rpx;
  border:1px solid #E9E9E9;
  border-radius:6rpx;
  box-sizing:border-box;
  vertical-align: middle;
}
.operate_btns{
  width:100%;
  font-size:0px;
}
.operate_btn{
  font-size:26rpx;
  width:50%;
  line-height:100rpx;
  height:100rpx;
  display:inline-block;
  background:#ccc;
}
.operate_btn.ok_btn{
  color:#fff;
}
.confirm_btn{
  text-align:right;
  font-size:30rpx;
  padding:10rpx 20rpx;
  padding-top:40rpx;
  color:#81D740;
}
.region_select_picker{
  width:100%;
  height:500rpx;
}

.region_select_item{
  line-height:100rpx;
  height:100rpx;
}