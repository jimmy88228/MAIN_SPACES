/* pages/micro_mall/search/search_goods.wxss */
page{
  background:#fff;
}
.search_page{
  padding:37rpx 25rpx 0 25rpx;
}
.search_goods{
  position:relative;
  padding-right:130rpx;
}
.search_goods_stay{
  border-bottom:1rpx solid #e6e6e6;
}
.search_icon{
  position:absolute;
  top:0px;
  left:0px;
  width:68rpx;
  height:68rpx;
  text-align:center;
  line-height:68rpx;
}
.search_icon image{
  width:30rpx;
  display:inline-block;
  vertical-align: middle;
}
.search_input{
  width:100%;
  padding:10rpx;
  padding-left:70rpx;
  box-sizing:border-box;
  font-size:0px;
}
.search_input input{
  width:100%;
  height:28rpx;
  line-height:28rpx;
  font-size:20rpx;
  display:inline-block;
  vertical-align: middle;
}
.search_btn{
  position:absolute;
  bottom:0px;
  right:0px;
  width:120rpx;
  height:48rpx;
  line-height:48rpx;
  font-size:26rpx;
  border-radius:5rpx;
  /* border:1rpx solid #ddd; */
}
.record_history{
    padding-bottom: 32rpx;
  border-bottom:1px solid #EFEFEF;
  display:table;
  width:100%;
  margin: 36rpx 0; 
}
/* .record_history text{
  padding:10rpx 15rpx;
} */
.hot_search_tit{
  /* display:table-cell; */
  /* width:4em; */
  /* text-align:center; */
}
.hot_search_list{
    padding-left: 4rpx;
    margin-top: 18rpx;
  /* display:table-cell; */
}
.hot_search{
  display:inline-block;
  margin-right: 12rpx;
  margin-bottom: 12rpx;
  min-width:160rpx;
  height:66rpx;
  line-height:66rpx;
  cursor:pointer;
  text-align:center;
  background-color:rgba(239, 239, 239, 1);
  border-radius:5rpx;
}
.clear_record{
  text-align:center;
  padding:20rpx;
}
.clear_record text{
  display:inline-block;
  line-height:30rpx;
  padding:20rpx 30rpx;
  margin:20rpx 0px;
  cursor:pointer;
  border-radius:10rpx;
  font-size:26rpx;
}

.common_place{
    color: #CECECE;
    font-size:24rpx;
}
.search_wrapper{
    display: flex;
    align-items: center;
    height: 74rpx;
}
.input{
    /* display: flex;
    align-items: center; */
    width: 569rpx;
    /* flex-basis: 569rpx; */
    height: 66rpx;
    border-bottom: 1rpx solid #EFEFEF;
}
.toSearch{
    width:150rpx;
    height:66rpx;
    line-height: 66rpx;
    border-radius:5rpx;
    color: white;
    font-size:26rpx;
    margin-left: 12rpx;
}
.icon_search{
    display: inline-block;
    vertical-align: middle;
    width: 40rpx;
    height: 40rpx;
    padding-left: 12rpx;
    margin-bottom:3rpx;
    flex: none 1 1 30rpx;
}
.input_content{
    display: inline-block;
    vertical-align: middle;
    padding-left: 34rpx;
    width: 400rpx;
    flex: none 1 1 400rpx;
    height: 66rpx;
    line-height: 66rpx;
    font-size: 24rpx;
}
.disabled{
    display: block;
    width:200rpx;
    margin: 0 auto;
    height:50rpx;
    line-height: 50rpx;
    background:rgba(178,178,178,1);
    border-radius:5px;
    color: white;
    text-align: center;
    font-size:22rpx;
}