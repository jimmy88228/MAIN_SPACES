/* pages/goods/popup/service.wxss */

.coupon_tip{
  background: #fff;
  padding:20rpx 30rpx;
  font-size:24rpx;
  width:100%;
  box-sizing: border-box;
  border-top:1px solid #efefef;
}
.tip_cont{
  height:90rpx;
  width:100%;
  border-radius:200rpx;
  padding:0px 20rpx;
  display:flex;
  justify-content: space-between;
  align-items: center;
  color:#fff;
  background:linear-gradient(90deg,#F73F1D,#FB8A3E);
  box-sizing: border-box;
  position:relative;
  padding-right:100rpx;
}
.link_btn{
  position:absolute;
  top:0px;
  left:0px;
  width:100%;
  height:100%;
  background: none;
}
.tip_info{
  display:flex;
  width:100%;
  align-items: center;
}
.txt_area{
  display:inline-block;
  padding-right:20rpx;
}
.tip_txt{
  width:90rpx;
  height:40rpx;
  display:flex;
  justify-content: center;
  align-items:center;
  background-color:#fff;
  border-radius:200rpx;
  color:#F93D20;
}
.act_area{
  box-sizing:border-box;
  text-align:left;
  word-break:break-all;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space: nowrap; 
  -webkit-line-clamp:1;
  -webkit-box-orient:vertical;
}
.act_name{
  display:inline-block;
  vertical-align: middle;
  margin-right:10rpx;
}
.tip_circle{
  white-space:nowrap;
  position:absolute;
  top:50%;
  right:20rpx;
  transform: translateY(-50%);
}
.circle{
  width:10rpx;
  height:10rpx;
  display:inline-block;
  vertical-align: middle;
  margin-right:10rpx;
  border-radius:100%;
  background-color:#fff;
}
.tip_circle .circle:nth-of-type(1){
  opacity: 0.5;
}
.tip_circle .circle:nth-of-type(2){
  opacity: 0.7;
}
