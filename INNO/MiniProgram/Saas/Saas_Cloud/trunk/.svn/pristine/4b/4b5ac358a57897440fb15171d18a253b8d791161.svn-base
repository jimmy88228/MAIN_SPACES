page {
    height: 100%;
    background: #fff;
}

.main {
    width: 100%;
    height: 100%;
    padding: 30rpx 30rpx 30rpx 30rpx;
    box-sizing: border-box; 
}

.header {
    width: 100%;
    text-align: end;
    color: #fff;
}

.header_publish {
    padding: 15rpx 32rpx;
    line-height: 26rpx;
}

.header_publish.m_right{
    margin-right: 35rpx;
    padding:15rpx 28rpx;
}

.header_text {
    word-break: break-all;
    width: 460rpx;
    margin-left: 20rpx;
}

.content {
    height: 255rpx;
    width: 100%;
    margin-top: 35rpx;
    /* box-sizing: border-box; */
    display: inline-flex;
    justify-content: flex-start;
    align-items: center;
    border-bottom: 1px solid rgba(196, 196, 196, 0.4);
    /* flex-shrink: 0; */
}

.img_goods {
    width: 196rpx;
    height: 196rpx;
}

.title_box {
    width: 100%;
    display: flex;
    height: 76rpx;
    align-items: center;
    justify-content: space-between;
    margin-top: 20rpx;
}

.img_title {
    width: 28rpx;
    height: 28rpx;
}

.title_right {
    width: 629rpx;
    height: 100%;
    display: inline-flex;
    justify-content: space-between;
    align-items: center;
}

.img_right {
    width: 50rpx;
    height: 50rpx;
}

.labels_list_box {
    width: 100%;
    box-sizing: border-box;
    display: flex;
    flex-wrap: wrap;
}

.labels_list_item {
    padding: 8rpx 12rpx;
    margin: 0 11rpx 11rpx 0;
    border: 1px solid;
    border-radius: 10rpx;
}

.labels_list_item2 {
    width: 180rpx;
    margin-right: 45rpx;
    margin-bottom: 35rpx;
}

.item2_title{
    line-height: 22rpx;
    box-sizing:border-box;
    text-align:left;
    word-break:break-all;
    overflow:hidden;
    text-overflow:ellipsis;
    white-space: nowrap; 
    -webkit-line-clamp:1;
    -webkit-box-orient:vertical;
    min-width: 0;
}

.img_selected_goods {
    width: 100%;
    height: 167rpx;
    margin-bottom: 18rpx;
}

.line {
    margin-top: 20rpx;
    width: 645rpx;
    margin-left: 45rpx;
    height: 1px;
    background: rgba(196, 196, 196, 0.4);
}

.line2 {
    margin-top: 20rpx;
    width: 100%;
    height: 1px;
    background: rgba(196, 196, 196, 0.4);
}

.loading {
    position: fixed; 
    z-index: 113;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    display:none;
}

.loading_text {
    position: relative;
    top: 45%;
    left: 50%;
    transform: translate(-50%,-50%);
    padding:28rpx 38rpx;
    background:rgba(0, 0, 0, 0.5);
    color: #fff; 
    border-radius: 8rpx;
    line-height:26rpx; 
}