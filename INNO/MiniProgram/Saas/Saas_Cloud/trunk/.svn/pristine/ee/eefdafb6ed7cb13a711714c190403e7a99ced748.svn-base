.goods_list {
  background: #fff;
  /* margin-bottom: 10rpx; */
  box-sizing: border-box;
  padding-left: 30rpx;
}
.goods_item {
  position: relative;
  /* padding: 34rpx 25rpx; */
  padding:30rpx;
  padding-left: 0;
  box-sizing: border-box;
  border-bottom: 1px solid #efefef;
  display: flex;
}

/* .goods_item + .goods_item {
  border-top: 1px solid #efefef;
} */

.goods_img_box {
  display: inline-block;
  vertical-align: top;
  width: 180rpx;
  height: 180rpx;
  position: relative;
  overflow: hidden;
  margin-right: 25rpx;
}

.goods_img_box image {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 100%;
  height:100%;
}

.goods_info_box {
  display: inline-block;
  vertical-align: top;
  width: 482rpx;
}

.goods_name {
  width: 482rpx;
  /* display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical; 
  overflow: hidden;
  text-overflow: ellipsis; 
  white-space: nowrap; */ 
  word-wrap: break-word;
   
}

.goods_sn {
  color: #777;
  margin-top: 16rpx;
}

.comment_model {
  position: absolute;
  right: 25rpx;
  bottom: 34rpx;
  
}

.comment_btn {
  /* border: 1px solid #ac7f6c; */
  /* color: #ac7f6c; */
  /* padding: 0 50rpx; */
  /* line-height: 58rpx; */
  text-align: center;
  border-radius: 30rpx;
  padding: 13rpx 34rpx;
  border: 1px solid #bfbfbf;  
}
.is_comment_tip{
  position:absolute;
  top:50%;
  right:20rpx;
  transform: translateY(-50%);
  /* transform: translateY(-50%) rotate(-45deg); */
  width:180rpx;
  height:180rpx;
}
.comment_tip_txt{
  position:absolute;
  top:50%;
  left:50%;
  transform: translate(-50%,-50%);
  border-bottom:6rpx solid #DEDEDE;
  text-align:center;
}


.commented {
  width: 118rpx;
  right: 32rpx;
}

.logistics_comment {
  background: #fff;
}

.logistics_comment.hascommented .comment_item:last {
  border-bottom: none;
}

.comment_item {
  position: relative;
  margin-left: 25rpx;
  border-bottom: 1px solid #efefef;
  line-height: 104rpx;
}

.comment_title_box {
  position: relative;
  color: #7f7f7f;
}
.c_title_tip{
  position: absolute;
  left: -25rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 22rpx;
  background: #ac7f6c;
}
.score_box {
  position: absolute;
  right: 25rpx;
  top: 50%;
  transform: translateY(-50%);
}

.start {
  width: 36rpx;
  height:36rpx;
  margin-right: 25rpx;
}

.confirm_comment_btn_box {
  text-align: right;
  padding-right: 25rpx;
  line-height: 116rpx;
}

.confirm_comment_btn {
  display: inline-block;
  border-radius: 4px;
  /* border:1px solid #ac7f6c;
  color:#ac7f6c; */
  color: #fff;
  line-height: 58rpx;
  padding: 0 30rpx;
}
.img_comment{
  width: 100%;
  height: 100%;
}