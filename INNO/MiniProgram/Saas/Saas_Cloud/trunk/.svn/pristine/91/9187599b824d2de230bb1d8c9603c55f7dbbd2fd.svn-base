.grass_user_data{
  position:fixed;
  top:0px;
  left:0px;
  width:100%;
  background-color:#fff;
  padding:30rpx;
  box-sizing:border-box;
  box-shadow:0px 4px 6px 0px rgba(0, 0, 0, 0.06);
  border:1px solid rgba(239, 239, 239, 1);
  z-index:10;
}
.grass_user_head{
  width:80rpx;
  height:80rpx;
  margin-right:20rpx;
}
.grass_user_head image{
  width:100%;
  height:100%;
  display:block;
  border-radius:100%;
}
.user_val{
}
.val_item{
  width:145rpx;
  text-align:center;
  position:relative;
}
.val_item ._tit{
  font-size:24rpx;
  margin-bottom:19rpx;
  color:#333;
  opacity: 0.6;
}
.val_item ._val{
  color:#333;
  font-size:28rpx;
  font-weight:bold;
}
.item_v_line::after{
  display:inline-block;
  content:"";
  position:absolute;
  top:50%;
  right:0px;
  transform: translateY(-50%);
  width:1px;
  height:50%;
  background-color:#515151;
  opacity:.5;
}
.user_publist{
  /* position:fixed;
  top:0px;
  left:0px;
  padding-top:142rpx; */
  padding-top:142rpx;
  width:100%;
}
.publists{
  padding:42rpx 23rpx;
  overflow:hidden;
}
.publist{
  padding:0px 13rpx;
  width:50%;
  float:left;
  box-sizing:border-box;
}
.publist_item{
  position:relative;
  padding:0 10rpx;
  padding-bottom:33rpx;
  background-color:#fff;
}
.p_item_img{
  position:relative;
  overflow:hidden;
  border-radius:10rpx;
}
.p_item_img image{
  width:100%;
  display:block;
  min-height:100rpx;
}
.p_item_tit{
  padding:23rpx 0px;
  font-size:26rpx;
}
.p_item_tip{
  font-size:22rpx;
  color:rgba(170,170,170,1);
}
.user_portrait{
  width:50rpx;
  height:50rpx;
  border-radius:100%;
  display:inline-block;
  vertical-align: middle;
  margin-right:7rpx;
}
.like_icon{
  width:22rpx;
  height:17rpx;
  margin-right:7rpx;
  display:inline-block;
  vertical-align: middle;
}
.like_txt{
  display:inline-block;
  vertical-align: middle;
}

.p_item_play{
  position:absolute;
  top:0px;
  left:0px;
  width:100%;
  height:100%;
  background-color:rgba(0,0,0,0.3);
}
.p_item_play image{
  display:block;
  width:76rpx;
  height:76rpx;
  position:absolute;
  top:50%;
  left:50%;
  transform: translate(-50%,-50%);
}
.p_item_status{
  position:absolute;
  top:4rpx;
  right:4rpx;
  min-width:100rpx;
  height:38rpx;
  padding:0px 10rpx;
  font-size:22rpx;
  box-shadow:0px 0px 24rpx 0px rgba(174,35,81,0.43);
  border-radius:4rpx;
  color:#fff;
  background-color:#B2B2B2;
  text-align:center;
}
.p_item_status.fail{
  color:#efefef;
  background-color:#B2B2B2;
  box-shadow:0px 0px 24rpx 0px rgba(107, 104, 105, 0.43);
}
.item_click_btn{
  position:absolute;
  top:0px;
  left:0px;
  width:100%;
  height:100%;
}