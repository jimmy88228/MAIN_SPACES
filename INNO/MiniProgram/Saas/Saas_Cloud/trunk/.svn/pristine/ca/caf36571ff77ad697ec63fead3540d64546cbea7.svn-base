@import "../module/gift_goods.wxss";
page{
  background-color:#F04F05;
}
.gift_page{
  padding:30rpx;
}
.gift_page_tip_box{
  display:inline-block;
}
.gift_page_tip{
  background: #B53A00;
  border-radius: 100rpx;
  padding:0px 25rpx;
  height:50rpx;
  margin-bottom:30rpx;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #FFFFFF;
  letter-spacing: 0;
  text-align: justify;
}
.min_line{
  display: block;
  margin:0px 20rpx;
}
.gift_detail{
  padding:40rpx;
  background-color:#fff;
  border-radius:30rpx;
  position:relative;
}
.steps_title{
  position: absolute;
  top:-2rpx;
  left:50%;
  transform: translateX(-50%);
}
.steps_title_icon{
  width:252rpx;
  display: block;
}
.detail_tip{
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #7F7F7F;
  letter-spacing: 0;
  text-align: justify;
  margin-top:78rpx;
  margin-bottom:50rpx;
  text-align: center;
}
.is_finished_tip{
  margin-top:10rpx;
  margin-bottom:15rpx;
  color:#B2B2B2;
}
.operate_box{
  margin-top:76rpx;
  margin-bottom:20rpx;
}
.operate_btn{
  position:relative;
  border-radius: 50rpx;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  letter-spacing: 0;
  text-align: justify;
  width:520rpx;
  height:88rpx;
  display:flex;
  justify-content: center;
  align-items: center;
  margin: 0 auto;
  margin-bottom:18rpx;
  background: #F04C05;
  color: #fff;
}
.hasFew{
  background: rgba(221,221,221,0.46);
  color: #7f7f7f;
}
.my_gifts_btn{
  background:none;
  border:1px solid #D9D9D9;
  color:#848484;
  margin-top:20rpx;
  box-sizing: border-box;
}
.choose_store{
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #7E7E7E;
  letter-spacing: 0;
  text-align: justify;
  line-height: 38rpx;
  text-align:center;
  margin:0 auto;
  padding:10rpx;
  display:block;
}
.choose_store_txt{
  color: #0083CE;
  margin:0px 5rpx;
}
.gift_notice{
  border-top: 1px solid #efefef;
  padding-top: 50rpx;
  overflow: hidden;
  width:100%;
}
.notice_tit{
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #7F7F7F;
  letter-spacing: 0;
  text-align: justify;
  margin-bottom:15rpx;
}
.notice_con{
  font-family: PingFangSC-Regular;
  font-size: 22rpx;
  color: #7F7F7F;
  letter-spacing: 0;
  /* text-align: justify; */
  line-height: 44rpx;
  overflow: hidden;
  width:100%;
}