
.comment_tit {
  position: relative;
  padding: 20rpx 25rpx;
}

.high_praise {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
}

.goods_comment {
  background: #fff;
  padding-bottom: 14rpx;
}

.comment_list {
  padding: 0px 15rpx;
}

.comment_item {
  background: #f6f6f6;
  border-radius: 6rpx;
  margin-bottom: 10rpx;
}

.comment_info_tip {
  position: relative;
  padding: 15rpx;
}

.border_bottom {
  border-bottom: 1px solid #efefef;
}

.user_img_box, .user_name {
  display: inline-block;
  vertical-align: middle;
  color: #333;
}

.user_img_box {
  width: 50rpx;
  height: 50rpx;
  border-radius: 100%;
  position: relative;
  margin-right: 10rpx;
  overflow: hidden;
}

.user_img_box image {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  border-radius: 100%;
  overflow: hidden;
}

.comment_info {
  padding: 15rpx;
  padding-top: 23rpx;
}

.time {
  position: absolute;
  right: 8rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #7f7f7f;
}

.goods_share_img_list {
  overflow: hidden;
  margin-left: -18rpx;
}

.goods_share_img_item {
  float: left;
  width: 162.5rpx;
  height: 162.5rpx;
  position: relative;
  border: 1px solid #efefef;
  box-sizing: border-box;
  font-size: 0;
  margin: 10rpx 0 10rpx 20rpx;
  background: #fff;
}

.goods_share_img_item image {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 100%;
  height: 100%;
}

.reply_msg_view {
  padding: 30rpx;
  padding-right: 15rpx;
  border-top: 1px solid #efefef;
}

.reply_msg_table {
  color: #b2b2b2;
}

.reply_msg_tip .tip_line {
  width: 6rpx;
  height: 20rpx;
  margin-right: 10rpx;
  display: inline-block;
  vertical-align: middle;
}

.reply_msg_tip .tip_txt {
  display: inline-block;
  vertical-align: middle;
  font-size: 18rpx;
}

.reply_msg_cont {
  padding-top: 15rpx;
}

.order_goods_info {
  color: #7f7f7f;
  margin-top: 4rpx;
  margin-bottom: 10rpx;
  position: relative;
  opacity: 0.5;
}

.more_comment_box {
  text-align: center;
}

.more_comment {
  margin: 14rpx auto;
  margin-bottom: 0;
  width: 170rpx;
  height: 52rpx;
  padding: 0 25rpx;
  /* border-radius: 56rpx; */
  box-sizing: border-box;
  border: 1px solid rgba(221, 221, 221, 0.8);
  border-radius: 24rpx;
  color:#7f7f7f;
}
