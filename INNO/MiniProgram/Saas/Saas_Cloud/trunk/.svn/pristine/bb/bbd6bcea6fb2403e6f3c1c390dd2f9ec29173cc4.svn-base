/* pages/micro_mall/employee_center/activity/tip_toast/tip_toast.wxss */
.tip_toast{
  position:fixed;
  top:0px;
  left:0px;
  width:100%;
  height:100%;
}
.tip_toast_cont{
  position:absolute;
  top:50%;
  left:50%;
  transform: translate(-50%,-50%);
  padding:40rpx;
  border-radius:8rpx;
  background:rgba(0,0,0,0.7);
  display:flex;
  justify-content: center;
  align-items: center;
  text-align:center;
  color:#fff;
  font-size:26rpx;
  white-space:nowrap;
}