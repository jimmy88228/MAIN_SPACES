.txt_tip {
  color: #bbb;
  padding: 4rpx 10rpx;
  font-size: 20rpx;
  word-wrap:break-word;
}
.user_center{
padding-bottom:1rpx;
}
.user_area {
  /* background: #fff; */
  position: relative;
  z-index: 1;
  margin-bottom:10rpx;
}
.user_area_cont {
  position: relative;
  background-repeat: no-repeat;
  background-size: 100%;
}
.bg_img_box {
  width: 670rpx;
  height: 260rpx;
  position: relative;
  overflow: hidden;
  left: 50%;
  transform: translateX(-50%);
}
.bg_img {
  border-radius: 20rpx 20rpx 0 0;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  width:669rpx;
  height:360rpx;
  z-index: 1;
}
.area_cont_title {
  position: relative;
  padding: 12rpx 0px 12rpx 24rpx;
}
.area_cont_title.underline {
  padding-left: 0;
  margin-left: 24rpx;
  padding-bottom: 12rpx;
  border-bottom: 1px solid #efefef;
}
.area_title {
  display: inline-block;
  line-height: 50rpx;
}
.title_vertical {
  display: inline-block;
  height: 18rpx;
  margin-right: 16rpx;
  border-left: 6rpx solid #ac7f6c;
}
.rankTip{
  position: absolute;
  right: -20rpx;
  top: -10rpx;  
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.r_t_name{
  padding: 6rpx 8rpx;
  font-size: 16rpx;
  line-height: 16rpx;
  color: #fff;
  border-radius: 12rpx;
  background-color: #FF3400;
}
.r_t_arrow{
  width: 0;
  height: 0;
  border-top: 8rpx solid #FF3400;
  border-right: 16rpx solid transparent;
  margin-left: -12rpx;
}
.r_arrow {
  display: inline-block;
  width: 50rpx;
  vertical-align: middle;
}
.zIndex3{
  z-index: 3;
}