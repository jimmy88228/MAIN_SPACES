.main{
  width:580rpx;
  border-radius:20rpx;
  top: 50%;
  left: 50%;
  position: fixed;
  transform: translate(-50%,-50%);
  box-sizing: border-box;
  background-color:#F0F0F0;
  font-family:PingFangSC-Regular,PingFang SC;
  text-align:center;
}


.main_title{
  display:flex;
  padding:13rpx;
  background:linear-gradient(180deg,rgba(255,239,230,1) 0%,rgba(255,251,251,1) 100%);
  border:2rpx solid rgba(255,97,0,0.23);
  border-radius:100rpx;
  align-items: center;
  justify-content: flex-start;
  position:absolute;
  top:0px;
  left:50%;
  transform: translate(-50%,-50%);
  background-color:#fff;
  padding-right:40rpx;
  text-align:left;
}
.tip_arrow{
  width:52rpx;
  height:25rpx;
  position:absolute;
  right:80rpx;
  bottom:0px;
  transform: translate(0,100%);
}
.user_header_area{
  padding-right:13rpx;
}
.user_header{
  width:80rpx;
  height:80rpx;
  display:block;
  border-radius:100%;
  background-color:#efefef;
}
.real_name{
  font-size:26rpx;
  font-weight:bold;
  color:#F14D00;
  opacity: .43;
  line-height:40rpx;
  white-space:nowrap;
}
.send_tip{
  font-size:26rpx;
  font-weight:bold;
  color:#F14D00;
  line-height:40rpx;
  white-space:nowrap;

}
.main_cont{
  padding:50rpx 0px;
  padding-top:106rpx;
  font-size:32rpx;
  font-weight:400;
  color:rgba(23,23,23,1);
  line-height:56rpx;
}
.operate_btns{
  border-top:1px solid #DDDDDD;
}
.o_btn{
  position:relative;
  line-height:90rpx;
  height:90rpx;
  font-size:28rpx;
  font-weight:400;
  color:rgba(127,127,127,1);
}
._o_btn{
  position:absolute;
  top:0px;
  left:0px;
  width:100%;
  height:100%;
  background:none;
}