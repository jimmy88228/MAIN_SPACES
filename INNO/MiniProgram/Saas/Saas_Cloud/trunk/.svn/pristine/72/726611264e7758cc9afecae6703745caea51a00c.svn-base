<!--pages/micro_mall/spread-page/spread-page.wxml-->
<view class="main">
  <view class="box">
    <image src="{{actInfo.poster_img}}" class="img-bg" mode="widthFix"></image>
  </view>
  <view class="btn" bindtap="onTap" data-type="btn">
    <image
      bindload="_imgLoad" 
      data-key="btnInfo" 
      class="img-btn"
      src="{{actInfo.button_img}}" 
      mode="aspectFit"
      style="width:{{btnInfo.width}}rpx;height:{{btnInfo.height}}rpx;"
      ></image>
  </view>
</view>