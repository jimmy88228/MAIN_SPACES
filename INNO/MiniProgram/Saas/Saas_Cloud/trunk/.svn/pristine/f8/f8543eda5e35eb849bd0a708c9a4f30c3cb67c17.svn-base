/* pages/goods/popup/service.wxss */
.service_popup{
  background:#fff;
  position:fixed;
  left:0px;
  bottom:0px;
  width:100%;
}
.service_tit{
  position:relative;
  font-size:28rpx;
  padding:30rpx 0px;
  font-weight:bold;
  text-align:center;
}
.close_area {
    position: absolute;
    top: 50%;
    right: 0px;
    padding: 20rpx 25rpx;
    transform: translateY(-50%);
}
.close_area image {
    width: 20rpx;
    display: block;
}
.service_scroll{
  min-height:300rpx;
  max-height:400rpx;
}
.service_item{
  padding:0px 25rpx;
}
.s_item_name{
  font-size:26rpx;
  margin-bottom:22rpx;
}
.s_item_desc{
  font-size:24rpx;
  color:#7f7f7f;
  margin-bottom:49rpx;
}
.service_btn_area{
  padding:25rpx;
}
.confirm_btn{
  width:100%;
  display:flex;
  height:88rpx;
  justify-content: center;
  align-items: center;
  background:#000;
  color:#fff;
}