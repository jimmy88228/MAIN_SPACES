}
.font_34 {
    font-size: 34rpx;
}
.font_24 {
    font-size: 24rpx;
}
.b_t {
    border-top: 1px solid #efefef;
}
.b_b {
    border-bottom: 1px solid #efefef;
}
.bold {
    font-weight: bold;
}
.inline_b {
    display: inline-block;
}
.table {
    display: table;
    width: 100%;
}
.table_cell {
    display: table-cell;
}
.v_m {
    vertical-align: middle;
}
.t_l {
    text-align: left;
}
.t_r {
    text-align: right;
}
.mr_10 {
    margin-right: 10rpx;
}
.ml_10 {
    margin-left: 10rpx;
}
.spec_list_area {
    width: 100%;
    background-color: white;
    position: fixed;
    bottom: 0;
}
.close_area {
    position: absolute;
    top: 7rpx;
    right: 0px;
    padding: 20rpx;
}
.close_area image {
    width: 20rpx;
    display: block;
}
.select_spec_view {
    padding-bottom: 30rpx;
}
.spec_list_area_stay {
    padding: 0px 30rpx;
}
.spec_img {
    width: 151rpx;
    height: 151rpx;
    padding: 6rpx;
    border-radius: 4rpx;
    margin-top: -40rpx;
    display: inline-block;
    vertical-align: middle;
    background-color: #fff;
    box-shadow: 2px 4px 5px rgba(51, 51, 51, 0.1);
}
.spec_img_stay {
    width: 100%;
    height: 100%;
    overflow: hidden;
    position: relative;
}
.spec_img_stay image {
    width: 100%;
    height:100%;
    display:block;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    -webkit-transform: translate(-50%, -50%);
}
.select_spec_info {
    display: inline-block;
    vertical-align: middle;
    padding-left: 33rpx;
    padding-top: 38rpx;
}
.product_price {
    color:rgba(221, 4, 4, 1);
    margin-bottom: 8rpx;
}
.spec_list {
    min-height: 320rpx;
    max-height: 504rpx;
}
.spec_list_row {
    padding-bottom: 15rpx;
}
.spec_list .spec_list_row:last-child {
    border-bottom: none;
}
.spec_name {
    padding-top: 28rpx;
    padding-bottom: 23rpx;
}
.spec_val_item {
    display: flex;
    min-width: 116rpx;
    line-height: unset;
    padding: 12rpx 20rpx;
    text-align: center;
    margin-right: 14rpx;
    margin-bottom: 14rpx;
    vertical-align: middle;
    border: 1px solid #ddd;
    /* box-sizing:border-box; */
    font-size: 26rpx;
}
.spec_val_item.selected {
    background-color: #000;
    color: #fff;
}
.goods_count {
    height: 117rpx;
}
.confirm_spec_area {
    width: 100%;
    padding: 10rpx;
    padding-top: 0rpx;
    box-sizing: border-box;
}
.confirm_spec_stay{
  width:100%;
}
.confirm_spec {
    height: 88rpx;
    color:#fff;
}
.bg_000 {
    background: #000;
    color: #fff;
}

.old_price {
  text-decoration: line-through;
  margin-left: 10rpx;
}
