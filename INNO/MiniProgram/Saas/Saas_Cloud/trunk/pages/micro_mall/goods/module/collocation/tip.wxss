}
.colloction_price{
  font-family: PingFangSC-Medium;
  letter-spacing: 0;
  text-align: justify;
}
.collocation_time{
  font-family: PingFangSC-Regular;
  color: #B2B2B2;
  letter-spacing: 0;
  text-align: justify;
}