/* pages/micro_mall/order/order_exchange_info.wxss */

.order_exchange_page {
    /* padding:20rpx; */
    box-sizing: border-box;
    padding-bottom: 80rpx;
    min-height: 100vh;
    width: 100%;
    background-color: #f3f3f3;
}

.phcolor {
    color: #7f7f7f;
}

.padding_box .padding_0 {
    padding: 10rpx 10rpx 10rpx 0;
}

.padding_box {
    color: #7f7f7f;
    padding: 20rpx;
    padding-left: 40rpx;
    background: #fff;
    margin-bottom: 18rpx;
    font-size: 26rpx;
    border-top:1px solid rgba(243,243,243,1);
}

.b_box_title {
    padding-top: 10rpx;
    padding-bottom: 10rpx;
}

.b_box_row {
    padding: 10rpx 0;
}

.b_box_tit {
    vertical-align: middle;
    width: 120rpx;
    /* text-align:justify;
  text-align-last:justify; */
}

.flex_between {
    display: flex;
    justify-content: space-between;
}
.msg_content{
    display: inline-block;
    min-width: 150rpx;
    box-sizing: border-box;
    padding-right: 20rpx;
    text-align: left;
}
.flex_style{
    padding: 10rpx 0;
    font-size: 26rpx; 
}
.flex_style.title_p{
    padding: 0; 
    padding-bottom: 20rpx;
}
.return_order_num {
    width: 200rpx;
}

.b_box_cont {
    text-align: left;
    vertical-align: middle;
    /* padding-left: 10rpx; */
}

.img_box {
    width: 215rpx;
}

.img_box_stay {
    width: 215rpx;
    height: 215rpx;
    margin: 0px auto;
    border: 1px solid #e6e6e6;
    position: relative;
    overflow: hidden;
    margin-right: 24rpx;
}

.img_box_stay image {
    width: 100%;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    -moz-transform: translate(-50%, -50%);
}

.g_info_row {
    /* padding:10rpx 0px; */
}

.goodsPrice {
    position: absolute;
    bottom: 6rpx;
    left: 0;
    font-weight: 600;
}

.order_num_tip {
    margin-top: 15rpx;
    margin-bottom: 15rpx; 
    color: #d72929;
    font-size: 22rpx;
}

.return_order_operate {
    overflow: hidden;
}

.return_order_num_input {
    color: #171717;
    display: inline-block;
    vertical-align: middle;
    background: rgba(243, 243, 243, 1);
    font-size: 24rpx;
    width: 520rpx; 
    /* border: 1px solid #e6e6e6; */
    border-radius: 5rpx;
    line-height: 70rpx;
    height: 70rpx;
    /* float: left; */
    box-sizing: border-box;
    padding-left: 20rpx;
    /* margin-right: 20rpx; */
}
.shipping_box{
    margin-top: 15rpx;
}
.shipping_name{
    /* margin-top: 15rpx; */
}
.cell_top {
    vertical-align: top;
    position: relative;
}

.goodsName {
    margin: 16rpx 0 12rpx 0;
    overflow: hidden;
    text-overflow: ellipsis;  
    display: -webkit-box;
    -webkit-line-clamp:1;
    -webkit-box-orient:vertical;
}

.goodsColor {
    display: inline-block;
}

.goodsSize {
    display: inline-block;
    padding-left: 10rpx;
}

.goodsNum {
    margin: 10rpx 0;
    margin-top: 6rpx;
}

.save_order_input {
    display: inline-block;
    vertical-align: middle;
    width: 145rpx;
    /* float: right; */
    font-size: 26rpx;
    border-radius: 5rpx;
    line-height: 70rpx;
    height: 70rpx;
    text-align: center;
    margin-left: 15rpx;
}

.back_box { 
    position: fixed; 
    left: 0;
    right: 0;
    bottom: 0;
    padding: 14rpx 28rpx;
    text-align: right;
    background: #fff;
    border-top: 1px solid rgba(243,243,243,1);
}

.back {
    display: inline-flex;
    justify-content: center;
    align-items: center;
    width: 136rpx;
    height: 52rpx;
    border: 1rpx solid rgba(178, 178, 178, 1);
    border-radius: 6rpx;
}

.name,.phone{
    display: inline-block;
}

.name_padding{
    padding-right: 45rpx;
}

.address_box{
    width: 100%;
    box-sizing: border-box;
}

.address_top{
    padding: 10rpx 0;   
}

.head_status{
    width: 100%;
    padding: 34rpx 0;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color: #ffffff;
}

.init_h{
    height: 20rpx;
}
.adress_title,.adress_name{
    padding-bottom:12rpx; 
    word-break: break-all;
} 

.m_b_0{
    margin-bottom: 0;
}
.m_b_10{
    margin-bottom: 10rpx;
}
.border_0{
    border: none;
}
.break{
    word-break: break-all; 
}
.p_t_5{
    padding-top: 5rpx;
}
.p_t_15{
    padding-top: 15rpx;
}
.p_t_12{
    padding-top: 12rpx;
}
.p_10{
    padding: 10rpx;
}