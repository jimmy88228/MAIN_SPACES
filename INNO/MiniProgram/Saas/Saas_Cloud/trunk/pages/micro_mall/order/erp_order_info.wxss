.orderGood {
    padding: 13rpx 0px 13rpx 0;
    display: flex;
}

.goods_info_img {
    width: 210rpx;
    overflow: hidden;
    margin-right: 30rpx;
    position: relative;
    border: 1px solid rgba(243, 243, 243, 1);
}

.goods_info_img_stay {
    width: 99%;
    height: 0px;
    padding-top: 99%;
    position: relative;
    overflow: hidden;
}

.goods_info_img_stay image {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    -moz-transform: translate(-50%, -50%);
    width: 100%;
    height: 100%;
    vertical-align: middle;
}
.goods_info_box{
    width: 210rpx;
    height: 210rpx;
    margin-right: 30rpx;
    position: relative;
    border: 1px solid rgba(243, 243, 243, 1);
}
.img_goods{
    width: 100%;
    height: 100%;
}
.orderGood .good_msg {
    flex: 1;
    padding: 10rpx 0px;
    padding-bottom: 30rpx;
    position: relative;
}

.good_info {
    margin-top: 7rpx;
    color: rgba(127, 127, 127, 1);
}
.money_bottom{
    position: absolute;
    bottom: 0;
}
