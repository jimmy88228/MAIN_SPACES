/* pages/micro_mall/classify/adaptive_ classify/classify_two/classify_two.wxss */
.two_main{
  position: fixed;
  top: 1rpx;
  left: 0px;
  width: 100%;
  height: 100%;
  overflow: hidden;
  text-align: center;
  box-sizing: border-box; 
  padding-top: 100rpx;
}
.main_scroll{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}
.categorysStyle{
  position: relative;
  box-sizing: border-box;
  padding: 0 50rpx 0 54rpx;
  padding-top: 120rpx;
}
.categorysStyle.p_t_0{
  padding-top: 0;
}
.tab_box{
  position: fixed;
  top: 100rpx;
  left: 0;
  width: 100%;
  height: 100rpx;
  padding-left:54rpx;
  box-sizing: border-box;
  z-index: 10;
  background: #fff;
}
.tab_item_box{
  width: 100%;
  height: 100%;
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
}
.tab_item{
  height: 100%;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  /* min-width: 120rpx; */
  margin-right: 25rpx;
  max-width: 200rpx;
  position: relative;
  padding: 0 25rpx;
}
.tab_item:first-child{
  padding: 0;
}
.tab_item:first-child .line{
  width: 100%;
}
.t_i_title{
  width: 100%;
  text-align: center;
  position: relative;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  font-size: 28rpx;
  line-height: 38rpx; 
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.t_i_title._bold{
  font-weight: bold;
}
/* .t_i_t_box{
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
} */
.line{
  position: absolute; 
  bottom: 20rpx; 
  width: calc(100% - 50rpx);
  /* width: 60rpx; */
  height: 4rpx;
  background: #303030;
  left: 50%;
  transform: translateX(-50%);
}
.content_box{
  position: relative; 
  box-sizing: border-box;
}

.item_title_box{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  box-sizing: border-box;
  position: relative;
  font-size: 42rpx;
  font-weight: bold;
  line-height: 74rpx;
  letter-spacing: 4rpx;
}
.item_title_box.p_b_0{
  padding-bottom: 20rpx;
}
.isActive{
  position: relative;
  width: 40rpx;
  height: 40rpx;
}
.isActive .style{
  position: absolute;
  background: #303030;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%); 
}
.isActive .row{ 
  height: 4rpx;
  width: 65%;
}
.isActive .col{ 
  width: 4rpx;
  height: 65%; 
}
.c_i_child_box{ 
  color: #000;
  font-size: 28rpx;
  line-height: 80rpx;
  /* letter-spacing: 4rpx; */
} 
