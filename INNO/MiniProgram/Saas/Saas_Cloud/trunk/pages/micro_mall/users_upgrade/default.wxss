.user-header-img{
     color:#000;
     text-align:center;
     width:100%;
     position: absolute;
     top: 50%;
     left: 50%;
     transform:translate(-50%,-50%);
}
._user_header_img{
     background:rgba(255,255,255,0.8);
     display:inline-block;
     border-radius: 100%;
     box-shadow:0px 0px 10rpx #969696;
     width:163rpx;
     height:163rpx;
     padding:7rpx;
     margin-bottom:32rpx;
}
.user_header_img_stay{
     width:163rpx;
     height:163rpx;
     display:block;
     border-radius: 100%;
     overflow:hidden;
     position:relative;
     
}
.user_header_img_stay image{
     width:100%;
     position:absolute;
     top:50%;
     left:50%;
     border-radius: 100%;
     transform:translate(-50%,-50%);
}
.top_btn{
     position:absolute;
     top:30rpx;
