}
.tixian_btn_link{
     border:1px solid #fff;
     border-radius: 40rpx;
     line-height:50rpx;
     height:50rpx;
     width:120rpx;
     padding:0px;
     box-sizing: border-box;
     background-color:rgba(0,0,0,0.25);
}
.buy-button{
     /* position: fixed;
     bottom:0; */
     width:100%;
     background-color:#fff;
     padding: 80rpx 70rpx;
     box-sizing:border-box;
     z-index:10;
}
.buy-button .but_btn{
     height:90rpx;
     background:#000;
     color:#fff;
     font-size:26rpx;
     text-align:center;
     border-radius: 8rpx;
}
.buy-button .invalid_btn{
     background: none;
}
.buy-button .invalid_date{
     margin-top:20rpx;
     opacity:.8;
     text-align:center;
}
.share_tip_bg{
     position:fixed;
     top:0px;
