.goods_list {
  background: #fff;
  margin-bottom: 10rpx;
}
.goods_item {
  position: relative;
  padding: 34rpx 25rpx;
}

.goods_item + .goods_item {
  border-top: 1px solid #efefef;
}

.goods_img_box {
  display: inline-block;
  vertical-align: top;
  width: 146rpx;
  height: 146rpx;
  position: relative;
  overflow: hidden;
  margin-right: 26rpx;
}

.goods_img_box image {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 100%;
}

.goods_info_box {
  display: inline-block;
  vertical-align: top;
}

.goods_name {
  max-width: 380rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  font-weight: bolder;
}

.goods_sn {
  color: #777;
  margin-top: 24rpx;
}

.comment_model {
  position: absolute;
  right: 25rpx;
  bottom: 34rpx;
}

.comment_btn {
  padding: 0 50rpx;
  line-height: 58rpx;
  text-align: center;
  border-radius: 4px;
}
.is_comment_tip{
  position:absolute;
  top:50%;
  right:20rpx;
  transform: translateY(-50%) rotate(-45deg);
  width:160rpx;
  height:160rpx;
  border-radius:100%;
  border:6rpx solid #DEDEDE;
  font-size:26rpx;
  font-weight:bold;
  color:#DEDEDE;
}
.comment_tip_txt{
  position:absolute;
  top:50%;
  left:50%;
  transform: translate(-50%,-50%);
  border-bottom:6rpx solid #DEDEDE;
  text-align:center;
}


.commented {
  width: 118rpx;
  right: 32rpx;
}

.store_experience_comment {
  background: #fff;
}

.comment_item {
  position: relative;
  margin-left: 25rpx;
  border-bottom: 1px solid #efefef;
  line-height: 104rpx;
}

.comment_title_box {
  position: relative;
  color: #7f7f7f;
}

.comment_title_box:before {
  content: '';
  position: absolute;
  left: -25rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 22rpx;
  background: #ac7f6c;
}

.score_box {
  position: absolute;
  right: 25rpx;
  top: 50%;
  transform: translateY(-50%);
}

.start {
  width: 36rpx;
  margin-right: 25rpx;
}

.confirm_comment_btn_box {
  text-align: right;
  padding-right: 25rpx;
  line-height: 116rpx;
}

.confirm_comment_btn {
  display: inline-block;
  border-radius: 4px;
  border:1px solid #ac7f6c;
  color:#ac7f6c;
  line-height: 58rpx;
  padding: 0 30rpx;
}
.pics{
    width: 100%;
    height: 100%;
}