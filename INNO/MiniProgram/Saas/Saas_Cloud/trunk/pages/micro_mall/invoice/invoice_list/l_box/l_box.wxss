.main{
  width: 100%;
  height: 100%;
}
.tab_box{
  width: 100%;
  height: 120rpx;
  display: flex;  
  /* box-shadow: 0 4rpx 4rpx 1px rgba(0, 0, 0, 0.05); */
}
.tab{
  width: 50%;
  height: 100%;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}
.t_title{
  font-size: 26rpx; 
}
.t_line{
  position: absolute;
  bottom: 16rpx;
  width: 60rpx;
  height: 4rpx;
  border-radius: 12rpx;
  left: 50%;
  transform: translateX(-50%);
}
._bold{
  font-weight: bold;
}
.list_box{
  width: 100%;
  height:100%;
  box-sizing: border-box;
  padding: 0 20rpx;
}
.scroll_box{
  width: 100%;
  height: calc(100% - 120rpx); 
}
.l_item{
  padding: 30rpx;
  box-sizing: border-box;
  border: 1px solid #dfdfdf;
  margin-bottom: 20rpx;
}
.i_title{
  line-height: 26rpx;
  padding-bottom: 40rpx;
}
.i_content_box{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.i_c_left{
  display: inline-flex;  
  align-items: center;
}
.i_price{
  font-size: 36rpx;
  line-height: 36rpx;  
}
.i_tip{
  font-size: 20rpx;
  line-height: 20rpx;
  padding:6rpx 10rpx;
  color: #7f7f7f;
  background: #efefef;
  margin-left: 4rpx;
}
.i_c_right{
  font-size: 24rpx;
  line-height: 24rpx;
  color: #7f7f7f;
}
.empty{
  text-align: center;
  padding-top:330rpx;
  font-size:28rpx;
}