page{
  height: 100%;
}
.main{
  height: 100%;
}
.content_box{
  padding: 30rpx;
  padding-bottom: 0;
  box-sizing: border-box;
  height: 100%;
}
.box{
  border-radius: 12rpx;
  background: #fff;
  overflow: hidden;
  padding:20rpx;
  position: relative;
  margin-bottom: 20rpx;
  z-index: 1;
  box-sizing: border-box;
  box-shadow: 0 0 10rpx 4rpx rgba(0,0,0,0.05);
}
.title_box{
  padding-bottom: 30rpx;
} 
.tip{
  padding:4rpx 10rpx;
  font-size: 20rpx;
  line-height: 20rpx;
  margin-bottom: 2rpx;
  margin-left: 18rpx;
}
._i_block{
  display: inline-block;
  vertical-align: bottom;
}
.msg{
  color: #cccccc;
  font-size: 24rpx;
}
.edit{
  padding:30rpx 0;
  padding-right: 20rpx;
  font-size: 24rpx;
  line-height: 24rpx;
  position: absolute;
  right: 0rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #cccccc;
  z-index: 2;
  width: 90rpx;
  text-align: center;
}
.edit.delete{
  right: 110rpx;
  padding-right: 0;
}
.btn_box{
  width: 100%;
  height: 100rpx;
  background: #fff;
  position: absolute;
  left: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
}
.btn{
  width: 720rpx;
  height: 80rpx;
  border-radius: 8rpx; 
  color: #fff;
  margin-top: 10rpx;
}
.scroll_box{
  width: 100%;
  height: calc(100% - 100rpx);
}
.scroll_box.ipx_box{
  height: calc(100% - 168rpx);
}
.empty{
  text-align: center;
  padding-top: 400rpx;
  color: #7f7f7f;
}