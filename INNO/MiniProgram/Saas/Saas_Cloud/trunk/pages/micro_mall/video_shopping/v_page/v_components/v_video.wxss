/* pages/micro_mall/video_shopping/v_page/v_components/v_video.wxss */

 

.swiper{
  width: 100%;
  height: 100%;
  z-index: 2;
}
.s_item{
  width: 100%;
  height: 100%;
  position: relative;
} 
.video_item{
  width: 100%;
  height: 100%;
}
.progress_box{
  width: 100%;
  height: 4rpx;
  background: transparent;
  display: flex;
  position: fixed;
  z-index: 5;
  left: 0;
  bottom: 0;
}
.progress{
  display: inline-block;
  height: 1px;
  background: #fff;
  border-radius: 0 4rpx 4rpx 0;
}
.progress_load_box{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  position: absolute;
  left: 0;
  bottom: 1px;
  background: transparent;
}
.progress_load{
  height: 100%;
  border-radius: 30%;
  opacity: 1;
  background: #fff;
  animation: animLoad 0.4s linear infinite;
}


@keyframes animLoad
{
  0% {width: 20%;}
  25% {width: 40%;}
  50% {width: 60%;}
  75% {width: 80%;}
  100% {width: 100}
}
.cover_box{
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 2;
  left: 0;
  top: 0;
  overflow: hidden;
}
.img_cover{
  width: 100%;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}