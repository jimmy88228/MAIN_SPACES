    width: 46rpx;
    height:46rpx;
    margin-bottom: 20rpx;
}

.name {
    line-height: 24rpx;
    font-size: 24rpx;
    color: #303030;
}

.button {
    width: 100rpx;
    height: 38rpx;
    border: 1px solid rgba(228, 228, 228, 1);
    border-radius: 19rpx;
    padding: 10rpx 20rpx;
    font-size: 20rpx;
}

.decoration {
    position: absolute;
    width: 6rpx;
    height: 19rpx;
    left: 27rpx;
    top: 32rpx;
    /* background: rgba(205, 113, 143, 1); */
}

.circle {
    /* min-width: 27rpx;
    min-height: 27rpx; */
    line-height: 20rpx;
    color: #fff;
    background: rgba(205, 113, 143, 1);
    /* box-sizing: border-box; */
    position: absolute;
    padding: 4rpx 10rpx;
    border: 2rpx solid rgba(255, 255, 255, 1);
    border-radius: 50%;
    left: 59%;
    top: 10rpx;
    font-size: 20rpx;
    transform: translate(-50%, -50%);
}

