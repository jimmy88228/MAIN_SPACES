.main {
    background: #fff;
    position: relative;
    margin-bottom: 12rpx;
    /* display: flex; */
}

.title_box {
    padding: 27rpx 40rpx 37rpx 45rpx;
    height: 34rpx;
    align-items: center;
    width: 665rpx;
    display: flex;
    justify-content: space-between;
    /* height: 87rpx; *//* align-items: center; */
}

.normal_title {
    font-size: 24rpx;
    line-height: 24rpx;
    font-weight: bold;
}

.all_orders {
    /* vertical-align:middle; *//* width: 200rpx; */
    /* line-height: 24rpx; */
    height: 100%;
    display: flex;
    align-items: center;
    /* width: 200rpx; */
}

.all_orders_title {
    display: inline-block;
    vertical-align: middle;
    font-size: 22rpx;
    /* line-height: 22rpx; */
    color: rgba(127, 127, 127, 1);
}

.img_right {
    width: 9rpx;
    margin-left:9rpx;
    display: inline-block;
    vertical-align: middle;
}

.box {
    display: flex;
    flex-wrap: wrap;
    width: 750rpx;
}

.content {
    position: relative;
    width: 25%;
    display: inline-flex;
    flex-direction: column;
    align-items: center;
    padding: 0rpx 0 42rpx 0;
}

