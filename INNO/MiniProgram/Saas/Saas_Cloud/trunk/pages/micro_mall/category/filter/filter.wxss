page{
    height: 100%;
} 
.filter{
    position:fixed;
    z-index: 1;
    top:80rpx;
    left:0px;
    width:100%;
    height:calc(100% - 80rpx);
    background:rgba(0,0,0,0.5);
}  
.right_panel{
    position: absolute;
    right: 0;
    top: 90rpx; 
    width: 578rpx;
    /* height: 100%; */
    padding: 0 0 0 28rpx;
    /* top: 76rpx; */
    background: #fff;
    transform: translateX(110%);
    transition: all .32s;
    box-shadow: 0px 15px 10px -15px #efeded inset;
    /* padding-top:14px; */
}
.hide_panel{
    transform: translateX(0);
}
.showFilter{
    visibility: visible;
}
.hideFilter{
    visibility: hidden;
}
.icon_wrapper{
    position: relative;
}
.arrow{
    display: block;
    width: 20rpx;
    height: 20rpx;
}
.arrow:before{
    content: "";
    display: block;
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    left: 5rpx;
    top: 10rpx;
}
.arrow:after{
    content: "";
    display: block;
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    left: -30rpx;
    top: -10rpx;
}
.header{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.title{
    font-size: 24rpx;
    color: #333;
}
.content{
    display: flex;
    flex-wrap: wrap;
    margin-top: 29rpx;
