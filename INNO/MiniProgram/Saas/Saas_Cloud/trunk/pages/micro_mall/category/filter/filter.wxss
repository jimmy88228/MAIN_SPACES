.item{
    height:66rpx;
    line-height: 66rpx;
    text-align: center;
    background:rgba(255,255,255,1);
    border:1px solid rgba(221, 221, 221, 1);
    border-radius:4px;
    margin-right: 15rpx;
    font-size:24rpx;
    margin-bottom: 15rpx;
    min-width: 164rpx;
    padding: 0 30rpx;
    box-sizing:border-box;
}
.item.active{
    background:rgba(205,113,143,1);
    color: white;
}
.right_inner{
    margin-right: 28rpx;
}
.fixed{
    max-height: 152rpx;
    overflow: hidden;
}
.lines{
    border-top: 1rpx solid rgba(221, 221, 221, 1);
    margin: 33rpx 0 32rpx 0;
}
.right_inner:last-child .lines{
    display: none;
}
.right_inner:last-child{
    padding-bottom: 20rpx;
}
.btn_group{
    position: absolute;
    right: 0;
    width: 606rpx;
    height: 126rpx;
    background: white;
    bottom: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    transform: translateX(110%);
    transition: all .32s;
    visibility: hidden;
    box-shadow: 0px 15px 10px -15px #efeded inset;
}
.hide_btn{
    transform: translateX(0);
    visibility: visible;
}
.btn_reset{
    width:262rpx;
    height:86rpx;
    background:rgba(255,255,255,1);
    border:1px solid white;
    border-right: none;
    border-radius: 6rpx 0 0 6rpx;
    font-size:28rpx;
}
.btn_confirm{
    width:262rpx;
    height:86rpx;
    border-radius: 0 6rpx 6rpx 0;
