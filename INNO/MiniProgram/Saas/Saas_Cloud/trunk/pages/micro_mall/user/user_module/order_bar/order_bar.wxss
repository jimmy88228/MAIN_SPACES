.area_cont_title .all_order_tip {
  float: right;
}
.all_order_tip_text {
  color: #7f7f7f;
  font-size: 22rpx;
  line-height: 50rpx;
  background-repeat: no-repeat;
  background-position: center right;
  background-size: 30rpx;
  margin-right: 20rpx;
  padding-right: 30rpx;
}
.order_area {
  display: flex;
  width: 100%;
  text-align: center;
}
.order_item {
  position: relative;
  flex: 1;
  vertical-align: top;
  padding: 20rpx 0px 40rpx 0px;
}
.order_item .num_tip {
  position: absolute;
  top: 18rpx;
  left: 50%;
  transform: translateX(-50%);
  margin-left: 23rpx;
  border: 4rpx solid #ff5454;
  background: #fff;
  color: #ff5454;
  min-width: 30rpx;
  min-height: 30rpx;
  text-align: center;
  line-height: 30rpx;
  border-radius: 100%;
  font-weight: bold;
  font-size: 22rpx;
  z-index: 1;
}
