.f_box {
  display: flex;
  flex-wrap: nowrap;
  height: 100%;
}
.f_time{
  width: 100%;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break:break-all;
  text-align: center;
  line-height: 30rpx;
}
/* ::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
} */
.f_item {
  display: flex;
  border-radius: 6rpx 6rpx 0 0;
  height: 100%;
  flex-shrink: 0;
  min-width: 28.5%;
  flex: 1;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.active {
  font-weight: bold;
  background: rgba(248,248,248,1);
}

.over {
  color: #7f7f7f;
}

.f_title {
  line-height: 22rpx;
  padding-top: 8rpx;
}

