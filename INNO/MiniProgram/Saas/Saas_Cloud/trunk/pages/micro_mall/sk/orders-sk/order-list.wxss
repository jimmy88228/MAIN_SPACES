page{
  height: 100%;
  background: #fbfbfb;
  --theme_color:'';
} 
.main{
  height: 100%;
  /* padding: 0 25rpx; */
} 
.tab{
  width: 100%;
  height: 100rpx;
  display: flex;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1;
  background: #fff;
}
.tab_item{
  flex: 1;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  color: #7f7f7f;
}
.line {
  width: 33.33%;
  box-sizing: border-box;
  height: 4rpx;
  border-radius: 6rpx;
  position: absolute;
  display: flex;
  justify-content: center;
  bottom: -2rpx;
  left: 0;
  transition: left .32s;
}
.line::after{
  content:"";
  width: 20%;
  height: 100%;
  background: var(--theme_color); 
}
.list_box{
  padding-top: 100rpx;
  box-sizing: border-box;
  height: 100%;
  padding-bottom: 96rpx;
}
.list_box.ipx{
  padding-bottom: 164rpx;
}
.list_f_box{
  display: flex;
  background: #fbfbfb;
  align-items: center;
  flex-direction: column;
}
.list_item{
  border-radius: 6rpx;
  background: #fff;
  /* padding: 25rpx; */
  box-sizing: border-box;
  width: 700rpx;
  margin-bottom: 20rpx;
  box-shadow:0px 4rpx 14rpx 2rpx rgba(0, 0, 0, 0.04);
}
.list_item:first-child{
  margin-top: 20rpx;
}
.list_item:last-child{
  margin-bottom: 0;
}
.l_msg{
  position: relative;
  display: flex;
  flex-wrap: nowrap;
  padding: 25rpx;
  box-sizing: border-box;
}
.l_msg.wrap{
  flex-wrap: wrap;
}
.img_list{
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
}
.msg_box{
  padding: 8rpx 0;
  padding-left: 20rpx;
  width: 100%;
  min-height: 200rpx;
  position: relative;
  box-sizing: border-box;
}
.title_box{
  display: flex;
  justify-content: space-between;
  padding-bottom: 30rpx;
}
.sku{
  font-size: 24rpx;
  padding-bottom: 32rpx;
}
.price_box{
  position: absolute;
  bottom: 0;
  padding-right: 20rpx;
  box-sizing: border-box;
  font-size: 30rpx;
}
.price::before{
    content: "¥";
    margin-right: 4rpx;
    font-size: 70%;
}
.price_sm{
  padding-left: 10rpx;
  font-size: 22rpx;
  text-decoration: line-through;
}
.price_sm::before{
    content: "¥";
    font-size: 80%;
}
.btn_box{
  padding: 20rpx 12rpx 20rpx 0;
  box-sizing: border-box;
  display: flex;
  justify-content:flex-end;
  align-items: center;
  position: relative;
  border-top: 1px solid rgba(0,0,0,0.05);
}
.record{
  padding: 16rpx 36rpx;
  border-radius: 6rpx;
  border: 1px solid transparent;
}
.detail{
  padding: 16rpx 36rpx;
  border-radius: 6rpx;
  border: 1px solid transparent;
  color: #fff;
  margin-left: 20rpx;
  /* background: #000000; */
} 
.none{
  padding-top: 100rpx;
  text-align: center;
  color: #7f7f7f;
}
.polling{
  position: absolute;
  left: 36rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #7f7f7f;
  font-size: 24rpx;
}
.poll_text{
  line-height: 24rpx;
}
.poll_cir{
  position: absolute;
  top: 50%;
  left: 0;
  width: 16rpx;
  height: 16rpx;
  background: #000;
  transform: translate(-140%,-50%);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.poll_cir::after{
  content:"";
  width: 8rpx;
  height: 8rpx;
  background: #fff;
  border-radius: 50%;
}

.list_item.over{
  color: #B2B2B2;
}