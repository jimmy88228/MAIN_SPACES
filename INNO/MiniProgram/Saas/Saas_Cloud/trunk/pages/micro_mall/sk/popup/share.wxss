/* pages/goods/popup/service.wxss */
.service_popup{
  background:#fff;
  position:fixed;
  left:0px;
  bottom:0px;
  width:100%;
  z-index:999;
}
.service_popup._pb{
  bottom: 90rpx;
}
.service_popup._xpb{
 bottom: 158rpx;
}
.service_tit{
  position:relative;
  font-size:28rpx;
  padding:30rpx 0px;
  font-weight:bold;
  text-align:center;
}
.service_scroll{
  min-height:300rpx;
  max-height:400rpx;
}
.service_item{
  padding:0px 66rpx;
}
.s_item_name{
  font-size:26rpx;
  margin-bottom:22rpx;
}
.s_item_desc{
  font-size:24rpx;
  color:#7f7f7f;
  margin-bottom:49rpx;
}
.service_btn_area{
  padding-top:10rpx;
  background-color:#EFEFEF;
}
.confirm_btn{
  width:100%;
  display:flex;
  height:88rpx;
  justify-content: center;
  align-items: center;
  background:#fff;
  color:#333;
}
.share_item{
  text-align:center;
  border-bottom:1px solid #efefef;
}
.share_item .share_item_btn{
  height:100rpx;
}