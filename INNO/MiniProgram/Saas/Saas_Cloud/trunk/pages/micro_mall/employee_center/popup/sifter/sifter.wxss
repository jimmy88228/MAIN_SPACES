.dateFilter {
  width: 750rpx;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 36rpx;
  box-sizing: border-box;
  /* background: rgba(255, 245, 248, 1); */
}
.dateText {
  color: #fff;
  padding: 18rpx 27rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
  min-width: 46rpx;
  min-height: 30rpx;
}
.titleText {
  display: inline-block;
  color: #7f7f7f;
  font-size: 26rpx;
}
.sign {
  min-width: 16rpx;
  color: #333;
  font-weight: bold;
}
.date_box {
  position: fixed;
  bottom: 0px;
  left: 25rpx;
  width: 700rpx;
  background: #fff;
  border-radius: 16rpx;
  transform: translateY(100%);
  z-index: 111;
  transition: all 0.4s;
}
.fix_iphoneX{
padding-bottom:34px !important;
}
.date_box.isShow {
  transform: translateY(0);
}
.title {
  font-size: 28rpx;
  color: rgba(127, 127, 127, 1);
  line-height: 28rpx;
  padding: 30rpx 0 30rpx 30rpx;
}
.quickBox {
  width: 100%;
  height: 138rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.quickSelect {
  width: 183rpx;
  height: 86rpx;
  border-radius: 10rpx;
  background: #f8f8f8;
  font-size: 28rpx;
}
.picker {
  width: 100%;
  height: 86rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 54rpx 30rpx 30rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}
.C_7f {
  color: #7f7f7f;
}
.img {
  width: 12rpx;
  position: absolute;
  right: 25rpx;
  top: 50%;
  transform: translateY(-50%);
}
.button {
  width: 660rpx;
  height: 86rpx;
  color: #fff;
  border-radius: 10rpx;
}
.button_box {
  width: 100%;
  height: 110rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.black_bg {
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  position: fixed;
  z-index: 11;
  background: rgba(0, 0, 0, 0.7);
  display: none;
}

.black_bg.isShow {
  display: block;
}