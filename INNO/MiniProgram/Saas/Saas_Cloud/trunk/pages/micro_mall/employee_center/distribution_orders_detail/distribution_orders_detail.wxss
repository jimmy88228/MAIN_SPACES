/* order_info.wxss */

page {
    background: rgba(243, 243, 243, 1);
}

image {
    width: auto;
    height: auto;
}
.relation_tip{
  color:#DE0016;
  font-size:20rpx;
  padding:0px 20rpx;
}
.orderInfoPage {
    padding-bottom: 90rpx;
    /* padding-bottom: 180rpx; */
    line-height: 40rpx;
    font-size: 24rpx;
}

.orderBox {
    /* border:1px solid #d2d2d2; */
    width: 750rpx;
    /* border-radius:4px; */
    box-sizing: border-box;
    margin-top: 10rpx;
    padding: 30rpx;
    background: #fff;
}

.orderBox.top0 {
    margin-top: 0;
}

.orderBox .d_flex {
    margin: 7rpx 0px;
    align-items: flex-start;
    color: #333;
    font-size: 26rpx;
}

.d_flex.inline {
    display: inline-flex;
    margin-right: 40rpx;
}

.orderBox .tit {
    display: block;
    /* padding-top: 22rpx; */
    padding-bottom: 10rpx;
    color: #7f7f7f;
}

.orderBox .tit.top30 {
    /* padding-top: 30rpx; */
}

.orderInfoTit {
    width: 750rpx;
    display: flex;
    align-items: center;
    line-height: 40rpx;
    padding: 0px;
    /* background: #fff; *//* height:200px; *//* background: linear-gradient(-53deg, rgba(205, 113, 143, 1), rgba(233, 144, 173, 1)); */
}

.orderInfoTit .itemL {
    width: 25%;
    text-align: center;
}

.orderStatus {
    font-size: 36rpx;
    color: rgba(255, 255, 255, 1);
    line-height: 36rpx;
    margin-bottom: 28rpx;
    font-weight: 600;
    letter-spacing: 2rpx;
}

.order_sn {
    font-size: 22rpx;
    margin-bottom: 15rpx;
}

.order_sn, .createTime {
    white-space: pre;
    font-size: 22rpx;
}
.copy{
  margin-left: 20rpx;
  font-size: 24rpx;
  line-height: 24rpx;
  color:#fff;
  border-radius: 6rpx;
  padding: 4rpx 6rpx;
  border: 1px solid #fff;
}
.createTime.between{
  display: inline-flex;
  justify-content: space-between;
  width: 100%;
  padding-right: 20rpx;
  box-sizing: border-box;
}

.itemR {
    font-size: 0;
}

.orderInfoTit .itemR {
    padding: 45rpx 0rpx 30rpx 30rpx;
    line-height: 22rpx;
    /* border-left: 1px solid #d2d2d2; */
    color: #fff;
    width: 100%;
}

.orderGood {
    padding: 20rpx 0px 0 0;
    display: flex;
}

.goods_info_img {
    width: 210rpx;
    overflow: hidden;
    margin-right: 30rpx;
    position: relative;
    border: 1px solid rgba(243, 243, 243, 1);
}

.goods_info_img_stay {
    width: 99%;
    height: 0px;
    padding-top: 99%;
    position: relative;
    overflow: hidden;
}

.goods_info_img_stay image {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    -moz-transform: translate(-50%, -50%);
    width: 100%;
    height: 100%;
    vertical-align: middle;
}

.orderGood .good_msg {
    flex: 1;
    padding: 10rpx 0px;
    position: relative;
}

.good_info {
    margin-top: 7rpx;
    color: rgba(127, 127, 127, 1);
}

.money_bottom {
    position: absolute;
    bottom: 0;
}

.csName {
    display: inline-block;
}

.csName.csName_mid {
    margin-left: 10rpx;
}

.csName.csName_right {
    margin-left: 20rpx;
}

.originalPrice {
    text-decoration: line-through;
    color: #b2b2b2;
    font-size: 24rpx;
    line-height: 24rpx;
    margin-top: 2rpx;
}

.presentPrice {
    font-weight: bold;
}

.font_w {
    /* position: absolute;
    bottom: 0; */
    line-height: 28rpx;
    /* left: -1rpx; *//* color: rgba(205, 113, 143, 1); */
}

.operable {
    text-decoration: underline;
}

.comment_tip_box {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    border-top: 1px solid #efefef;
    line-height: 102rpx;
    height: 102rpx;
    background: #fff;
}

.comment_tip_icon, .comment_tip {
    display: inline-block;
    vertical-align: middle;
}

.comment_tip_icon {
    width: 22rpx;
    margin-left: 27rpx;
    margin-right: 14rpx;
}

.comment_btn {
    position: absolute;
    right: 50rpx;
    top: 50%;
    transform: translateY(-50%);
    line-height: 60rpx;
    height: 60rpx;
    text-align: center;
    border-radius: 60rpx;
    padding: 0 36rpx;
    font-size: 22rpx;
}

.good_name {
    word-break: break-all;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2; /*设置两行的时候*/
    -webkit-box-orient: vertical;
    padding-right: 60rpx;
}

.good_count {
    position: absolute;
    top: 10rpx;
    right: 0px;
}
.comm_amount{
    position: absolute;
    bottom: 0;
    right: 0;
    color:#BE4956;
    font-size:26rpx;
}
.row_tit_box {
    display: flex;
    justify-content: space-between;
}

.row_tit {
    font-weight: normal;
    width: 130rpx;
    /* text-align: justify;
    text-align-last: justify; */
    vertical-align: top;
}

.tit_box {
    display: flex;
    justify-content: space-between;
    color: #1b1b1b;
    font-size: 26rpx;
    line-height: 48rpx;
}

.relative {
    position: relative;
    font-size: 26rpx;
}

.order_button {
    width: 134rpx;
    height: 56rpx;
    border: 1px solid rgba(178, 178, 178, 1);
    border-radius: 6rpx;
    position: absolute;
    bottom: 19rpx;
    right: 36rpx;
    color: #333;
}

.get_self_tip {
    margin: 10rpx 0px;
}

.cancel_order_picker {
    display: inline-block;
}

.rmbPrice {
    display: inline-flex;
}
.user{
    margin-top: 0;
}
.userName {
    display: flex;
    align-items: center
}
.userName>text:first-of-type {
    max-width: 80%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.express_tit{
    margin-top: 20rpx;
}
.express_btn{
    width: 134rpx;
    height: 56rpx;
    border: 1px solid rgba(178, 178, 178, 1);
    border-radius: 6rpx;
    color: #333;
}
.express_no{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.express_wrapper{
    width: 560rpx;
    display: flex;
    align-items: center;
    flex-direction: column;
}
.express_inner{
    width: 100%;
    display: flex;
    align-items: center;
    justify-content:space-between;
    /* margin-bottom: 15rpx; */
}
.company, .company_name{
    display: inline-block;
    vertical-align: middle;
}
.company, .invoice{
    width: 130rpx;
}
.invoice{
    line-height: 56rpx;
}