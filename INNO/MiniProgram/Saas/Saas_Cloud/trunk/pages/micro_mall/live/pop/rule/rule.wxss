/* pages/component/login/login_by_phone.wxss */
.login_page{
  position:fixed;
  top:50%;
  left:50%;
  z-index:100;
  width:630rpx;
  background:#fff;
  transform: translate(-50%,-50%);
  border-radius:10rpx;
}
.help_title{
  width:100%;
  height:90rpx;
  line-height:90rpx;
  text-align:center;
  border-bottom:1px solid #efefef;
}
.list_stay{
  padding:20rpx;
}
.join_user_list{
  width:100%;
  min-height:300rpx;
  max-height:70vh;
}
.rule_cont{
  padding:10rpx 20rpx;
}
.component_close{
  position:absolute;
  padding:20rpx;
  width:20rpx;
  height:20rpx;
  top:0px;
  right:0px;
  transform: rotate(45deg);
}
.component_close::before{
  content:"";
  width:30rpx;
  height:4rpx;
  position:absolute;
  top:50%;
  left:50%;
  transform: translate(-50%,-50%);
  background-color:#797979;
}
.component_close::after{
  content:"";
  height:30rpx;
  width:4rpx;
  position:absolute;
  top:50%;
  left:50%;
  transform: translate(-50%,-50%);
  background-color:#797979;
}