/* pages/micro_mall/buy/buy_coupon.wxss */
page{
    background: #fff;
}
.no_use_coupon{
  padding:0px 25rpx; 
  background:#fff;
  width:100%;
  position:fixed;
  top:0px;
  left:0px;
  box-sizing:border-box;
  z-index:10;
  height:90rpx;
  line-height:90rpx;
  border-top: 1rpx solid rgba(239, 239, 239, 1);
  border-bottom: 1rpx solid rgba(239, 239, 239, 1);
}
.no_use_coupon .txt{
  display:table-cell;
  vertical-align: middle;
  font-size:28rpx;
    color:rgba(51,51,51,1);
}
.coupon_radio{
  display:table-cell;
  vertical-align: middle;
  width:36rpx;
  padding-right: 44rpx;
  height: 230rpx;
}
.coupon_radio image{
  display:block;
}
.coupon_radio .radio_icon{
  width:36rpx;
  height: 36rpx;
}
.coupon_radio_header{
    height: 90rpx;
}
.coupon_list{
  width:100%;
  padding-top: 90rpx;
}
.coupon_item{
    position: relative;
  width:100%;
  display:flex;
  padding: 36rpx 0 40rpx 25rpx;
  box-sizing:border-box;
  border-bottom: 1rpx solid rgba(239, 239, 239, 1);
}
.coupon_cont{
    width: 600rpx;
  /* display:table-cell;
  vertical-align: middle; */
}
.coupon_info{
  position:relative;
  width: 600rpx;
  height:180rpx;
  background:transparent;
  border-radius: 10rpx;
  overflow: hidden;
}
.coupon_txt{
  position:absolute;
  left:20rpx;
  bottom:20rpx;
  color:#fff;
  z-index:3;
}
.couponTxt .valueUnit{
  display:inline-block;
  vertical-align: middle;
  font-size:26rpx;
  line-height:normal;
}
.bonus_type{
  display:inline-block;
  vertical-align: middle;
  border:1px solid #fff;
  border-radius:10rpx;
  padding:0px 10rpx;
  margin-left:20rpx;
}
.conponValue{
    display: inline-block;
    vertical-align: middle;
  font-size:100rpx;
  margin-right:10rpx;
}
.price{
    display: inline-block;
    vertical-align: middle;
}
.coupon_img{
  width:100%;
  display:block;
  border-radius: 10rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.coupon_crumbs{
  margin:0 auto;
  width:94%;
  background:#fff;
  border-bottom-left-radius: 6rpx;
  border-bottom-right-radius: 6rpx;
  border-left: 1rpx solid rgba(216, 216, 216, 1);
  border-right: 1rpx solid rgba(216, 216, 216, 1);
}
.useLimitTxt{
  padding:10rpx 0;
  margin: 0 20rpx;
  font-size:24rpx;
  border-bottom: 1rpx solid rgba(216, 216, 216, 1);
  color:rgba(130,130,130,1);
  line-height:40rpx;
}
.crumbs_indicator{
    font-size: 24rpx;
    padding:11rpx 0 15rpx 0;
  text-align:center;
  border-bottom: 1rpx solid rgba(216, 216, 216, 1);
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  color:rgba(130,130,130,1);
}
.crumbs_indicator image{
  width:50rpx;
  vertical-align: middle;
  display:inline-block;
}

/*可用优惠券为空*/
.has_no_use_coupon{
  margin-top:150rpx;
  width:100%;
  text-align:center;
}
.has_no_use_coupon image{
  width:200rpx;
  display:block;
  margin:0 auto;
}
.has_no_use_coupon text{
  margin-top:10rpx;
  color:#7f7f7f;
}
.minUse{
    font-size:20rpx;
    margin-top: 10rpx;
    margin-bottom: 16rpx;
}
.crumbs_indicator.active .arrow {
    transform: rotate(180deg);
}
.drop{
    font-size: 26rpx;
    display: inline-block;
    vertical-align: middle;
}
.coupon_radio_son{
    padding-top: 90rpx;
}