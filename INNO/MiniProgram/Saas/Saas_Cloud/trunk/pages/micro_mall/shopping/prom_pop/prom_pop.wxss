/* pages/micro_mall/shopping/prom_pop/prom_pop.wxss */
.window-ext{
  z-index: 120 !important;
}
.main{
  position:fixed;
  bottom:0;
  left:0;
  width:100%;
  background-color:#fff;
  transform: translate(0%,100%);
  transition: all 0.32s ease-in-out; 
}
.box{
  position: relative;
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx;
}
.goods-box{
  display: flex;
  position: relative;
}
.img-box{
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
}
.img-goods{
  width: 100%;
  height: 100%;
}
.msg-box{
  width: 100%;
  box-sizing: border-box;
  padding: 0 60rpx 0 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.msg-title{
  width:100%;
  overflow: hidden;
  text-overflow: ellipsis; 
  word-break: break-all; 
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical; 
}
.msg-price{
  color: #F04D00;
  font-weight: bold;
}
.close-box{
  position: absolute;
  right: 0;
  top: 0;
  width: 36rpx;
  height: 36rpx;
  background: rgba(229, 229, 229, 1);
  border-radius: 50%;
  transform: rotate(45deg);
}
.close{
  background: #fff;
  border-radius: 10rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}
.close-row{
  width: 60%;
  height: 4rpx;
}
.close-col{
  width: 4rpx;
  height: 60%;
}
.rule-list-box{
  min-height: 350rpx;
}
.rule-title{
  font-size: 28rpx;
  margin: 40rpx 0;
}
.rule-list{
  display: flex;
  align-items: center;
  margin:20rpx 0;
  padding:10rpx 0;
}
.rule-sel-box{
  width: 36rpx;
  height: 36rpx;
  border: 1px solid #dfdfdf;
  background: #fff;
  border-radius: 50%;
  position: relative;
  display: flex;
  justify-content:  center;
  align-items: center;
  flex-shrink: 0;
}
.rule-sel-box.active{
  background: #F04D00;
}
.rule-sel-cir{
  width: 40%;
  height: 40%;
  border-radius: 50%;
  background: #fff;
  flex-shrink: 0;
}
.rule-identify{
  padding:  4rpx 8rpx;
  background: rgba(244, 77, 0, 0.1);
  color: rgba(244, 77, 0, 1);
  margin:0 20rpx;
  flex-shrink: 0;
  font-size: 20rpx;
}
.rule-msg{
  width: 100%;
  /* overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap; */
  overflow: hidden;
  text-overflow: ellipsis; 
  word-break: break-all; 
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical; 
}
.btn-box{
  height: 88rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.btn{
  color: #fff;
  background: #F04D00;
  border-radius: 12rpx;
  width: 100%;
  height: 100%;
  font-size: 28rpx;
}