/* pages/micro_mall/prepaid/prepaid_card_erp.wxss */
page{
  background:#fff;
}
.prepaid_card{
  text-align:center;
  padding:40rpx 0px;
  padding-bottom:120rpx;
}
.brand_logo{
  margin:20rpx 0px;
}
.brand_logo image{
  width:40%;
  margin:0 auto;
  display:block;
}
.cont_title{
  padding:30rpx 0px;
}
.prepaid_card_info{
  margin:0 auto;
  width:640rpx;
  height:320rpx;
  background-repeat:no-repeat;
  background-size:100% 100%;
  background-position:center center;
  text-align:left;
  position:relative;
}
.brand_card_logo{
  padding-top:30rpx;
  padding-left:30rpx;
  width:40%;
}
.brand_card_logo image{
  display:block;
}
.prepaid_card_tip{
  padding:30rpx 0px;
}
.card_msg{
  position:absolute;
  left:0px;
  bottom:0px;
  padding-left:30rpx;
}
.card_msg_row{
  padding:20rpx 0px;
}
.bind_phone{
  padding-bottom:30rpx;
}
.card_phone_icon{
  width:20rpx;
  display:inline-block;
  vertical-align: middle;
}

/* add */
.note_pic image{
  width:100%;
  display:block;
}
.mini_logo{
    width: 100rpx;
    height: 100rpx;
}
.phone_number{
    vertical-align: middle;
    margin-left: 20rpx;
}
.scan_code_wrapper{
    width: 300rpx;
    margin: 30rpx auto;
}
.scan_code{
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 26rpx;
    border-radius: 5px;
}
.recharge_wrapper{
    position:fixed;
    left:0px;
    bottom:0px;
    padding:0px 55rpx;
    width: 640rpx;
    background-color:#fff;
}
.recharge, .recharge_none{
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 26rpx;
    border-radius: 5px;
    color: #fff;
    margin:20rpx 0px;
}
.recharge_none{
    color: #000;
    background: #e1e1e1;
}
.bind_row{
    display: inline-block;
}