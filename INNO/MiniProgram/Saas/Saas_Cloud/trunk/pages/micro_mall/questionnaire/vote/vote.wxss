.box{
  padding: 30rpx;
  box-sizing: border-box;
}
.title{
  line-height: 26rpx;
  padding-bottom: 15rpx; 
}
.is_required {
  padding-right: 4rpx;
  color: red;
}
.tips{  
  padding-left: 10rpx; 
  padding-bottom: 4rpx;
  font-size: 24rpx;
  line-height: 24rpx;
  color: #7f7f7f;
} 
._C_7f{
  color: #7f7f7f;
}
.select_box{
  padding-left: 30rpx;
  box-sizing: border-box;
  border:  1px solid #bebebe;
  border-radius: 8rpx;
}
.f_box{
  display: flex;
  align-items: center;
}
.s_item{
  display: flex; 
  align-items: center;
  border-bottom: 1px solid #bebebe;
  box-sizing: border-box;
  padding: 24rpx 0;
}
.s_item:last-child{
  border-bottom: 0;
}
.img_select{
  /* border: 1px solid transparent; */
  width: 30rpx;
  height: 30rpx;
}
.s_t{
  padding-left: 8rpx;
  line-height: 24rpx;
}
.select_box_pic{
  display: flex;
  flex-wrap: wrap;
  position: relative;
}
.s_item_pic{
  display: flex;
  flex-direction: column;
  position: relative;
  width: 100%;
}
.s_item_pic1{
  width: 100%;
}
.s_item_pic2{
  width: 50%;
}
.img_select_pic{
  width: 30rpx;
  height: 30rpx;
}
.img_select_pic_bg{
  width: 100%;  
}
.select_pic_box{
  position: absolute;
  right: 0;
  top: 0;
  display: flex;
  align-items: center; 
  padding: 22rpx 26rpx;
  background: rgba(0,0,0,0.3);
  color: #fff;
  font-size: 24rpx;
  border-radius: 4rpx;
}