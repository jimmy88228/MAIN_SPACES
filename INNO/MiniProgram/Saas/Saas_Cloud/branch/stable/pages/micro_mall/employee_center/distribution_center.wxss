@import '../../../static/iconFont/font.wxss';
page{
    background: #efefef;
    height: 100%;
}
.main{
    width: 750rpx;
    height: 100%;
}
 
.main_top{
    width: 100%;
    /* height: 200rpx; */
    padding: 20rpx 43rpx;
    box-sizing:border-box;
}
.main_top_user{
    display: flex;
    align-items: center;
    padding: 20rpx 0;
}
.manager_area{
    padding: 20rpx 20rpx 10rpx 20rpx;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    color: #fff;
}
.m_picker{
    width: 100%;
    height: 100%;
}
.change_icon{
    margin-right: 20rpx;
    flex-shrink: 0;
}
.main_top_left{
    display: flex;
    align-items: center;
    box-sizing:border-box;
    flex: 1;
    margin-right: 20rpx;
}
.main_top_right{
    color: #ffffff;
}
.user{
    border: 1px solid #fff;
    width: 83rpx;
    height: 83rpx;
    overflow: hidden;
    border-radius: 50%;
    margin-right: 20rpx;
    flex-shrink: 0;
}
.main_content{ 
    width: 750rpx;
}
.name{
    color: #fff;
}