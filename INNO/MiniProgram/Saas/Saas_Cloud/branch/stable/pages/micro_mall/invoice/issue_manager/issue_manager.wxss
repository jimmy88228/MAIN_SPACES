.main{
  padding:20rpx;
  box-sizing: border-box;
}
.box{
  border-radius: 12rpx;
  overflow:hidden;
  margin-bottom: 25rpx;
  box-sizing: border-box;
  box-shadow: 0 0 10rpx 4rpx rgba(0,0,0,0.05);
}
.box:last-child{
  margin-bottom: 0;
}
.title_type_box{
}
._flex{
  display: flex;
  align-items: center; 
}
.right{
  height: 100%;
  display: flex;
  align-items: center; 
}

.title_type_item{
  height: 100%;
}
.title_type_item:last-child{
  padding-left: 30rpx; 
}
.img_select{
  width: 30rpx;
  height: 30rpx;
  padding-right: 8rpx;
}
.invoice_input{
  width: 400rpx;
  text-align: right;
}
.plc_font{
  color: #7f7f7f;
  text-align: right;
}
.btn_box{
  width: 100%;
  height: 100rpx;
  background: #fff;
  position: absolute;
  left: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
}
.btn{
  width: 720rpx;
  height: 80rpx;
  border-radius: 8rpx; 
  color: #fff;
  margin-top: 10rpx;
}
.invoice_fill_text{
  width: 100%;
}
.line{
  width: 60rpx;
  height: 1px;
  background: #dfdfdf;
}
.units{
}
.dotted_box{
  background: #fff;
  box-sizing: border-box;
  padding: 0 40rpx;
}
.dotted{
  border-top: 4rpx dotted #efefef;
}
.invoice_title_box{
  width: 100%;
  justify-content: flex-end;
}
.img_right{
  width: 50rpx;
  height: 50rpx;
  margin-right: -14rpx;
}