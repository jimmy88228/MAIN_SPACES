page {
    background: #fff;
}
.tab_list{
  display:flex;
  align-items: center;
  height:80rpx;
  line-height:80rpx;
  position:relative;
  justify-content: center;
  text-align:center;
  width:100%;
}
.tab_current{
  color:rgba(225, 9, 12, 1);
}
.tab_item{
  flex:1;
}
.tab_line{
  width:50%;
  border-radius:20rpx;
  position:absolute;
  left:0px;
  bottom:0px;
  transition: left .35s;
  transform: translateX()
}
.line_txt{
  content:"";
  display:block;
  margin:0 auto;
  width:100rpx;
  height:6rpx;
  background-color:rgba(225, 9, 12, 1);
}
.main {
    padding: 40rpx 55rpx 0 40rpx;
    width: 100%;
    box-sizing: border-box;
}

.title {
    font-size: 38rpx;
    line-height: 38rpx;
    color: #333;
    font-weight: bold;
}

.nickName {
    margin-top: 68rpx;
    font-size: 34rpx;
    color: rgba(51, 51, 51, 1);
    line-height: 34rpx;
    margin-bottom: 10rpx;
}

.input_header {
    position: relative;
    width: 100%;
    box-sizing: border-box;
    padding: 40rpx 0 20rpx 0;
    border-bottom: 1px solid #e6e6e6;
}

.input_header.header {
    padding-top: 0rpx;
}

.placeholderClass {
    color: #cbcbcb;
    font-size: 26rpx;
    line-height: 26rpx;
}

.input {
    font-size: 26rpx;
    line-height: 26rpx;
    display: inline-block;
    vertical-align: middle;
}

.input.name {
    width: 480rpx;
}

.input.phone {
    width: 400rpx;
}

.input.code {
    width: 300rpx;
}

.get_code {
    display: inline-flex;
    width: 160rpx;
    height: 58rpx;
    border: 1px solid rgba(236, 21, 21, 1);
    border-radius: 10rpx;
    font-size: 24rpx;
    color: rgba(225, 9, 12, 1);
    line-height: 24rpx;
    vertical-align: middle;
    /* margin-left: 80rpx; */
    margin-left: 180rpx;
}

.fill_code {
    display: inline-block;
    font-size: 24rpx;
    color: rgba(51, 51, 51, 1);
    line-height: 24rpx;
    vertical-align: middle;
    margin-left: 182rpx;
}

.apply {
    margin: 0 auto;
    width: 532rpx;
    height: 100rpx;
    background: rgba(225, 9, 12, 1);
    border-radius: 11rpx;
    margin-top: 268rpx;
    margin-bottom: 18rpx;
    font-size: 28rpx;
    font-weight: bold;
    color: rgba(255, 255, 255, 1);
}

.tips {
    width: 100%;
    display: flex;
    justify-content: center;
    font-size: 20rpx;
    line-height: 30rpx;
    color: #afafaf;
}

.line {
    color: #333;
    text-decoration: underline;
}

.black_bg {
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    position: fixed;
    z-index: 11;
    background: rgba(0, 0, 0, 0.7);
    display: none;
}

.black_bg.isShow {
    display: block;
}

.applyWindow {
    box-sizing: border-box;
    position: fixed;
    top: 40%;
    transform: translateY(-50%);
    left: 75rpx;
    width: 600rpx;
    background: #fff;
    opacity: 0;
    z-index: -1;
    transition: opacity 0.4s;
    background: rgba(255, 255, 255, 1);
    border-radius: 16rpx;
}

.apply_for_text {
    width: 100%;
    height: 280rpx;
    border-bottom: 1px solid #e6e6e6;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 30rpx;
    font-weight: bold;
}

.apply_for_confirm {
    width: 100%;
    height: 80rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 30rpx;
    font-weight: bold;
}

.applyWindow.isShow {
    /* transform: translateY(-25rpx); */
    z-index: 111;
    opacity: 1;
}
