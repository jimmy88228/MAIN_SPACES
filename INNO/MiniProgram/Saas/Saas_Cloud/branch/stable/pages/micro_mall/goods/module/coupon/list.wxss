/* pages/goods/popup/service.wxss */

.service_popup {
    background: #fff;
    position: fixed;
    left: 0px;
    bottom: 0px;
    width: 100%;
    box-sizing: border-box;
}

.service_tit {
    position: relative;
    font-size: 28rpx;
    padding: 30rpx 0px;
    font-weight: bold;
    text-align: center;
}

.close_area {
    position: absolute;
    top: 50%;
    right: 0px;
    padding: 20rpx 25rpx;
    transform: translateY(-50%);
}

.close_area image {
    width: 20rpx;
    display: block;
}

.service_scroll {
    min-height: 600rpx;
    max-height: 600rpx;
    padding: 0px 25rpx;
    width:100%;
    box-sizing: border-box;
}

.service_item {
    display: table;
    width: 100%;
    box-sizing: border-box;
    border-radius:20rpx;
    overflow: hidden;
    margin-bottom:20rpx;
}
.server_close{
    width: 20rpx;
    position: absolute; 
    padding: 10rpx;
    top: 33rpx;
    right: 18rpx;
}
.item_cont{
  display:table;
  width:100%;
}
.item_cont_l{
  display:table-cell;
  vertical-align: middle;
  background-color:#EA008C;
  color:#fff;
  width:72%;
  padding:30rpx 0px;
  padding-left:30rpx;
  position:relative;
  overflow: hidden;
}
.bonus_bg{
  position:absolute;
  top:0px;
  left:0px;
  width:100%;
  height:100%;
}
.item_cont_l_float{
  position:relative;
  z-index:1;
  min-height:84rpx;
}
.item_name{
  margin-bottom:5rpx;
  opacity: 0.7;
}
.item_cont_r{
  display:table-cell;
  vertical-align: middle;
  background-color:#F2F2F2;
  color:#C4C4C4;
  text-align:center;
  font-size:30rpx;
  position: relative;
}
.item_cont_r.can_use{
  background-color:#FFF5F4;
  color:#E93841;
}
.cont_area{
  display:flex;
  align-items: center;
}
.cont_area_l{
  font-size:80rpx;
}
.cont_area_r{
  opacity: 0.9;
  padding-left:10rpx;
  font-size:24rpx;
}
.cont_limit{
}
.type_txt{
}
.use_period{
  background-color:#FBFBFB;
  color:#7B7B7B;
  font-size:20rpx;
  padding:10rpx 0px;
  padding-left:30rpx;
}
.receive_btn{
  width:100%;
  height:100%;
  position:absolute;
  top:0px;
  left:0px;
  background:none;
}