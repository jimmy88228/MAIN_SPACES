.search_box{
  height: 90rpx;
  position: fixed;
  z-index: 2;
  background: #fff;
  top: 0;
  left: 0;
  width: 100%;
}
.search_box_place{
  height: 90rpx;
  position: relative;
  z-index: 1;
}
.search_content{
  width: 690rpx;
  height: 60rpx;
  border-radius: 36rpx;
  box-sizing: border-box;
  padding:0 30rpx;
}
.icon_search{
  display: inline-block;
  vertical-align: middle;
  width: 40rpx;
  height: 40rpx;
}


.search_input{
  display: inline-block;
  vertical-align: middle;
  margin-left: 20rpx;
  width: 100%;
  font-size:24rpx;
  height: 60rpx;
  line-height: 60rpx;
}