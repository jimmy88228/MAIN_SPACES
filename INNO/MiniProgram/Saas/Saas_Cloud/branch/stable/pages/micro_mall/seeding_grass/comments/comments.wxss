page {
    height: 100%;
    background: #fff;
}

.main {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    padding: 0 10rpx;
    padding-bottom: 100rpx;
}

.scroll {
    height: 100%;
}

.comment_info {
    height: 90rpx;
    width: 100%;
    box-sizing: border-box;
    padding: 12rpx 0;
    padding-left: 15rpx;
    padding-top: 30rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    /* position: relative; */
    flex-shrink: 0;
}

.load_more {
    margin-top: 10rpx;
    padding-top: 15rpx;
    padding-bottom: 5rpx;
    width: 100%;
    text-align: center;
    font-size: 22rpx;
}

.comment_info_left {
    /* width: 400rpx; */
    height: 100%;
    display: inline-flex;
    align-items: center;
}

.comment_list_item {
    padding-bottom: 30rpx;
    border-bottom: 1px solid rgba(239, 239, 239, 1);
    width: 100%;
}

.comment_list_item:last-child {
    margin-right: 0;
}

.img_comment_user {
    width: 56rpx;
    height: 56rpx;
    /* padding-right: 10rpx; */
    margin-right: 20rpx;
    border-radius: 50%;
}

.comment_user {
    /* width: 500rpx; */
    height: 100%;
    display: inline-flex;
    flex-direction: column;
    justify-content: center;
}
.comment_time{
    color: #999;
}
.comment_like_box {
    height: 100%;
    display: inline-flex;
    align-items: center;
    padding-right: 20rpx;
    position: relative;
}

.comment_like {
    height: 100%;
    /* padding-right: 10rpx; */
    display: inline-flex;
    align-items: center;
}
/* .reply_operate{
  padding:
} */
.reply_operate_txt{
  padding:10rpx 15rpx;
  display:inline-block;
}

.recomment {
    height: 100%;
    display: inline-flex;
    align-items: center;
    padding: 0 20rpx;
    position: relative;
}

.comment_like_num {
    /* padding: 26rpx 15rpx 26rpx 0rpx; */
    min-width: 16rpx;
}

.img_comment_like {
    width: 22rpx;
    height: 20rpx;
    padding: 0 5rpx 0 15rpx;
}

.comment_text {
    width: 100%;
    box-sizing: border-box;
    padding-left: 88rpx;
    padding-right: 40rpx;
}

.comment_parent {
    /* padding-right: 26rpx; */
    width: 100%;
    box-sizing: border-box;
    word-break: break-all;
}

.comment_line {
    width: 1px;
    background: rgba(127, 127, 127, 0.5);
    height: 22rpx;
    /* display: inline-block;
    vertical-align: middle; */
}

.childComments_box {
    /* box-sizing: border-box; */
    width: 630rpx;
    margin-top: 25rpx;
    margin-left: 80rpx;
    margin-right: 40rpx;
    background: rgba(246, 246, 246, 1);
    border-radius: 6rpx;
    padding-bottom: 20rpx;
}

.childComments_item {
    padding-top: 20rpx;
    padding-left: 15rpx;
}

.bottom_box {
    width: 100%;
    /* height: 100rpx; */
    background:#fff;
    box-shadow: 0px 0px 10px 0px rgba(205, 113, 143, 0.1);
    box-sizing: border-box;
    padding: 36rpx 25rpx;
    padding-right: 0;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 111;
}
.bottom_button{
    width: 100%;
    height: 134rpx; 
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 113;
}
.inputStyle {
    padding-left: 20rpx;
    border: 1px solid rgba(153, 153, 153, 0.5);
    border-radius: 35rpx;
    height: 58rpx;
    width: 558rpx;
    /* margin-right: 15rpx; */
    display: inline-block;
    font-size: 24rpx;
    vertical-align: middle;
}

.placeholder_style {
    color: rgba(51, 51, 51, 0.5);
    font-size: 24rpx;
    /* padding-left: 20rpx; */
}

.comment_confirm {
    display: inline-block;
    vertical-align: middle;
    padding: 8rpx 25rpx 8rpx 15rpx;
}

.none {
    height: calc(100% - 100rpx);
    color: #7f7f7f;
    display: flex;
    justify-content: center;
    padding-top: 320rpx;
    box-sizing: border-box;
}

.login_reply,.login_like{
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 113;
} 
.break_style{
    word-break: break-all;
}