.window-ext{
  z-index: 200;
}
.main{
  position: absolute;
  left: 50%;
  z-index: 150;
  background-color: #f5f5f5;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  bottom: 0;
  width: 90%;
  transform: translateX(-50%);
  padding: 20rpx;
  box-sizing: border-box;
}
.header{
  text-align: center;
  line-height: 40rpx;
  margin-bottom: 20rpx;
  font-size: 32rpx;
}
.employee_list{
  box-sizing: border-box;
  max-height: 66vh;
  margin-bottom: 20rpx;
}
.employee_item{
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #ffffff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 15rpx;
  transition: border 0.1s ease;
  box-sizing: border-box;
  border: 1px solid #ffffff
}
.employee_item.active{
  border: 1px solid currentColor;
}
.employee_item:last-of-type{
  margin-bottom: 0;
}
.employee_name{
  color: #333333;
}
.e_radio{
  width: 38rpx;
  height: 38rpx;
}
.e_radio>.radio_icon{
  width: 100%;
  height: 100%;
  display: block;
}
.footer>button{
  color: #ffffff;
  border-radius: 10rpx;
  height: 64rpx;
  transition: opacity 0.2s ease;
}
.footer>button.active{
  opacity: 0.8;
}
::-webkit-scrollbar {
  display:none;
  width:0;
  height:0;
  color:transparent;
}
.no_data_area{
  text-align: center;
  padding: 20rpx;
  color: #999999;
}