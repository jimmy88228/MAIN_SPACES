page{
  --main_color: "#fff";
  --light_color:"#fff";
}
.text_crossed {
  text-decoration: line-through;
  color: #777;
  font-size: 24rpx;
  margin: 0px 5rpx;
}

.goods_module {
  width: 100%;
  font-size: 0px;
  padding: 0px 10rpx;
  box-sizing: border-box;
  letter-spacing: 0.5px;
}

.goods_item {
  width: 50%;
  display: inline-block;
  vertical-align: top;
  font-size: 24rpx;
  padding: 0px 12rpx;
  box-sizing: border-box;
  /* text-align: center; */
  margin-bottom: 10rpx;
  position: relative;
}

.goods_item_stay {
  width: 100%;
  background: #fff;
}

.good_img_stay {
  width: 100%;
}

.good_img {
  width: 100%;
  padding-top: 100%;
  position: relative;
  overflow: hidden;
}

.good_img image {
  width: 100%;
  height: 100%;
  display: block;
  position: absolute;
  top: 50%;
  left: 0px;
  transform: translateY(-50%);
  background-color:#fff;
}
.property_box {
  background: #f8f8f8;
  position: relative;
  width: 100%;
  padding: 15rpx 7rpx 12rpx 7rpx;
  color: #7f7f7f;
  box-sizing: border-box;
}

.property {
  height: 100%;
  display: flex;
  align-items: center;
  text-align: left;
  margin-left: 8rpx;
  font-size: 20rpx;
  color: rgba(127, 127, 127, 1);
}
.goods_info{
  padding:15rpx 0px;
}
.tag_img_list {
  text-align: left;
  max-width: 100%;
}

/* .tag_img_list image {
  display: inline-block;
  vertical-align: top;
  margin: 8rpx 6rpx;
} */

.tag_img_list .tag_img {
  max-width: 100%;
  max-height: 200rpx;
  display: inline-block;
  vertical-align: top;
  margin: 8rpx 6rpx;
}

.good_name {
  /* margin-left: 15rpx; */
  padding-left: 10rpx;
  /* margin: 5rpx 0px; */
  box-sizing: border-box;
  text-align: left;
  word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 24rpx;
  /* min-height:60rpx; */
}

.good_sku {
  width: 100%;
  /* height: 75rpx; */
  font-size: 24rpx;
  display:flex;
  justify-content: space-between;
  justify-items: center;
  white-space:nowrap;
  margin-top:15rpx;
  font-weight:bold;
}


.present_p {
  text-align: left;
  font-size: 24rpx;
  padding: 3rpx 15rpx;
  font-weight: 600;
}

.original_p {
  padding: 0rpx 15rpx;
  margin-left: 0px;
  color: #545454;
  opacity: 0.5;
  font-size:24rpx;
  font-weight:normal;
}
.sales_vol_box{
  font-size: 20rpx;
  line-height: 22rpx;
  color: #777;
  text-align: left;
  padding-left: 14rpx;
  padding-top: 10rpx;
}
.sales_vol_title{
  padding-right: 4rpx;
}




/*商品详情列表 1、2、3、6*/

/*大图*/
.module_type1 .goods_item {
    width: 100%;
    display: block;
}

.module_type1 .good_name {
    font-size: 26rpx;
}

.module_type1 .price_tip {
    font-size: 25rpx;
}

.module_type1 .price_num {
    font-size: 25rpx;
}
.module_type1 .present_p{
    font-size: 25rpx;
}
.module_type1 .original_p {
    font-size: 25rpx;
}
.module_type1 .sales_vol_box {
    font-size: 20rpx;
    padding-left: 15rpx;
}
 
/*小图一行两*/
.module_type2 .goods_item {
    width: 50%;
}
.module_type2 .sales_vol_box {
  padding-top: 12rpx;
}



/*大小图*/
.module_type3 .goods_item:nth-child(3n+1) {
    width: 100%;
    display: block;
}

.module_type3 .goods_item:nth-child(3n+1) .good_name {
    font-size: 26rpx;
}

.module_type3 .goods_item:nth-child(3n+1) .price_tip {
    font-size: 25rpx;
}

.module_type3 .goods_item:nth-child(3n+1) .price_num {
    font-size: 25rpx;
}

.module_type3 .goods_item:nth-child(3n+1) .original_p {
    font-size: 24rpx;
}
.module_type3 .goods_item:nth-child(3n+1) .sales_vol_box {
  font-size: 22rpx;
  padding-top: 12rpx;
}

/* 一行三个 */
.module_type5 .good_sku{
  display:block;
  text-align:left;
}
.module_type5 .goods_item {
    width: 33.33%;
} 
.module_type5 .present_p {
    font-size: 24rpx;
}
.module_type5 .original_p{
  font-size:20rpx;
}
.module_type5 .sales_vol_box{
  font-size: 18rpx;
  padding-left: 15rpx;
  padding-top: 6rpx;
}

/*详细列表*/

.module_type6 {
    padding: 20rpx 10rpx;
}

.module_type6 .property_box {
    /* margin-top:-54rpx; */
}

.module_type6 .goods_item {
    width: 100%;
    display: block;
    margin: 0px;
}

.module_type6 .goods_item_stay {
    display: table;
    width: 100%;
    position: relative;
    padding: 15rpx 0px;
}

.module_type6 .goods_item_stay::after {
    content: "";
    border-bottom: 1px solid rgba(239, 239, 239, 1);
    width: 436rpx;
    position: absolute;
    right: 0px;
    bottom: 0px;
}

.module_type6  .goods_item:last-child .goods_item_stay::after {
    display: none;
}

.module_type6 .good_img_stay {
    display: table-cell;
    vertical-align: top;
    width: 166rpx;
}

.module_type6 .goods_info {
    display: table-cell;
    vertical-align: top;
    padding-left: 20rpx;
    position: relative;
}

.module_type6 .good_sku {
    position: absolute;
    left: 0px;
    bottom: 0px;
    height: auto;
    padding-left: 20rpx;
    box-sizing:border-box;
    justify-content: flex-start;
    align-items: flex-end;
}

.module_type6 .tag_img_list {
    padding: 0px;
}

.module_type6 .good_name {
    font-size: 26rpx;
    margin: 0;
}

.module_type6 .present_p {
    position: relative;
    font-size: 26rpx;
    line-height: 26rpx;
    padding-left: 0px;
    padding-right: 10rpx;
}

.module_type6 .original_p {
    font-size: 24rpx;
    line-height: 24rpx;
    padding-left: 0px;
    padding-right: 0px;
}
.module_type6 .sales_vol_box{
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  font-size: 22rpx;
  padding-top: 0;
  font-weight: normal;
}


/* common */

/*热区*/

.map_area {
  position: absolute;
  z-index: 10;
}

.play_icon_area {
  position: absolute;
  top: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
  z-index: 11;
}

.ad_module image.play_icon, .play_icon {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 120rpx;
  height: 120rpx;
  transform: translate(-50%, -50%);
  background: rgba(0, 0, 0, 0.4);
  border-radius: 100%;
}


.btn_link {
    position: absolute;
    top: 0px;
    left: 0px;
    right: 0px;
    bottom: 0px;
    z-index: 10;
    opacity: 0;
} 
 


.commission_box {
  border: 1px solid var(--light_color);
  color: var(--main_color);
  font-size: 18rpx;
  display: inline-flex;
  align-items: center;
  border-radius: 6rpx;
  margin-top: 6rpx;
  margin-left: 10rpx;
}

.commission_text {
  padding: 6rpx 8rpx;
  height: 100%;
  border-radius: 0 0 16rpx 0;
  box-sizing: border-box;
  color: #fff;
  background-image: linear-gradient(to bottom right, var(--light_color), var(--main_color));
  line-height: 18rpx;
}

.commission_price {
  font-size: 18rpx;
  line-height: 18rpx;
  padding: 0 6rpx;
}