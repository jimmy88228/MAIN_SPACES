  left: 72rpx;
}
.test2 {
  height: 80%;
}
.user_icon {
  width: 38rpx;
  height: 38rpx;
  border-radius: 38rpx;
  position: absolute;
  top: 36rpx;
  left: 40rpx;
  z-index: 11;
  opacity: 0;
}

.top_content {
  font-size: 22rpx;
  color: #000;
  line-height: 52rpx;
  height: 52rpx;
  display: flex;
  align-items: center;
  position: absolute;
  background: #fff;
  border-radius: 30rpx;
  left: 28rpx;
  top: 28rpx;
  box-sizing: border-box;
  padding: 0 34rpx;
  border:1px solid rgba(221, 221, 221, 1);
