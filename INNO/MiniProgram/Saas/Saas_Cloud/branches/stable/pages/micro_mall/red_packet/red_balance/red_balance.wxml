<nav_bar title="" page-type="normal" id="nav_bar" bindinit="nav_init" diyStyle="{{diyStyle}}"></nav_bar>
<view class="packet_cover">
    <view class="p_cover"></view>
</view>
<view class="packet_coin_area">
    <view class="packet_coin flex_global flex_c flex_al_c">
        <image class="packet_logo" src="{{redpack_logo}}" mode="aspectFit"/>
