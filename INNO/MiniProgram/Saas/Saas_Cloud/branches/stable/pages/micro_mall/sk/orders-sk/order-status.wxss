.btn_buy_box{
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  z-index: 2;
}
.btn_buy{
  position: relative;
  border-radius: 6rpx;
  width: 740rpx;
  height: 90rpx;
  color: #fff;
}

.btn_buy.polling{
  background: #fff;
  color: #7f7f7f;
  /* border: 1px solid #fbfbfb */
}
.poll_cir{
  width: 16rpx;
  height: 16rpx;
  background: #000;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 10rpx;
  position: relative;
}

.poll_cir::after{
  content:"";
  width: 8rpx;
  height: 8rpx;
  background: #fff;
  border-radius: 50%;
}

.unit::before {
    content: "¥";
    margin-right: 4rpx;
    font-size: 70%;
}
.unit_sm::before {
    content: "¥";
    font-size: 80%;
}
.status_box{
  display: flex;
  height: 350rpx;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  background: #fff;
}
.img_status{
  width: 116rpx;
  height: 116rpx;
  padding-bottom: 14rpx;
}
.status_msg{
  font-size: 36rpx;
  line-height: 36rpx;
  letter-spacing: 4rpx; 
}
.status_fail{
  color: #7f7f7f;
}