
.main{
  position: relative;
  box-sizing: border-box;
  padding-bottom: 113rpx; /* 95 + 18 */
  background-color: #f5f5f5;
}
.main.i_p_box{
  padding-bottom: 171rpx;
}
.time_tip{
  background: rgba(190, 190, 190, 1);
  text-align: center;
  color: #fff;
  font-size: 22rpx;
  padding: 30rpx 0;
}
.time{
  padding: 0 4rpx;
}
.box{
   padding: 30rpx;
   padding-right: 0;
   width: 100%;
   box-sizing: border-box;
   background: #fff;
   font-size: 24rpx; 
   margin-top: 10rpx;
} 
.box.p_t_n{
  padding-top: 0;
}
.box.p_b_n{
  padding-bottom: 0;
}
.address{
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
}

.img_adress{
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  top: 50%;
  transform: translateY(-50%);
}
.i_a_l{
    left: 0rpx;
}
.i_a_r{
    right: 20rpx;
}
.a_msg{
  padding: 20rpx 0;
  box-sizing: border-box; 
  padding-right: 30rpx;
  /* padding-top: 0; */
}
.a_a_d{
  word-break: break-all;
}
.a_n_p{
  padding-bottom: 30rpx;
}
.a_name{
  padding-right: 20rpx;
}
.title{
  color: #7f7f7f;
  width: 100%;
  border-bottom: 1px solid #fbfbfb;
  padding-bottom: 20rpx;
  box-sizing: border-box;
}

.goods{
  display: flex;
  flex-wrap: nowrap;
  position: relative;
  padding-top: 30rpx;
}

.img_goods_box{
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
}
.img_goods{
  width: 100%;
  height: 100%;
}
.msg{
  /* width: 100%; */
  width: 490rpx;
  min-height: 200rpx;
  box-sizing: border-box;
  padding-left: 30rpx;
  display: flex;
  flex-direction: column;
  position: relative;
}
.m_title{
  padding-bottom: 20rpx;
}
.sku{
  color: #7f7f7f;
}
.price_box{
  display: flex;
  justify-content: space-between;
  position: absolute;
  bottom: 0;
  padding-right: 30rpx;
  width: 100%;
  box-sizing: border-box;
}
.price{
  font-size: 30rpx;
}
.p_sm{
  font-size: 22rpx;
  padding-left: 10rpx;
  text-decoration:line-through;
}
.count{
  font-size: 28rpx;
}
.pay_msg{
  display: flex;
  justify-content: space-between;
  padding: 30rpx 30rpx 30rpx 0; 
  line-height: 30rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #fbfbfb;
}
._C_7f{
  color: #7f7f7f;
}
._bold{
  font-weight: bold;
}
