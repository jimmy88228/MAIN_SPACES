/* pages/micro_mall/category/category.wxss */

page {
    /* background-color: #efefef; */
    background-color: #fff;
    height: 100%;
}

.category_page {
    height: 100%;
    padding-top: 180rpx;
    box-sizing: border-box;
}

.goods_list {
    width: 100%;
    height: 100%;
    padding: 20rpx 10rpx;
    box-sizing: border-box;
    letter-spacing: 0.5px;
    font-size:0;
    /* width: 100%; *//* box-sizing: border-box; *//* padding-top: 200rpx; *//* padding-top: 100rpx; *//* display:inline-block; */
}


.goods_item_box {
    width: 100%;
    display: inline-flex;
    flex-wrap: wrap;
    margin-bottom: 30rpx;
    /* padding:0px 10rpx; */
    box-sizing: border-box;
    position:relative;
    padding-left:5rpx;
    font-size:0px;
}
.list_item{
  width:50%;
  display:inline-block;
  vertical-align: top;
  padding:10rpx;
  padding-bottom:0px;
  box-sizing:border-box;
}
.p_item{
  width:100%;
  position:relative;
}
.goods_item_box.right {
    padding-right: 5rpx;
    padding-left:0px;
}

.goods_item {
    width: 100%;
    height:100%;
    vertical-align: top;
    background: none;
    text-align: center;
    /* position: relative; */
    position:absolute;
    top:0px;
    left:0px;
    
}

.goods_list .goods_item:nth-child(odd) {
    /* margin-right: 20rpx; */
}

.goods_img_box {
    margin: 0 auto;
    width: 100%;
    height: 0px;
    padding-top: 100%;
    position: relative;
}

.goods_img_stay {
    /* width: 360rpx;
    height: 360rpx; */
    width: 100%;
    height: 100%;
    overflow: hidden;
    position: absolute;
    top: 0px;
    left: 0px;
}

.goods_img_stay image {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    /* background-color:#efefef; */
}

.prom_label_box{
    width: 100%;
    position: relative;
    padding: 12rpx 0;
}

.property_box {
    position: relative;
    width: 100%;
    /* background: rgba(248, 248, 248, 1); */
    padding: 15rpx 7rpx 12rpx 7rpx;
    color: rgb(176, 176, 176);
    /* bottom: 0; */
    box-sizing: border-box;
}

.propertyClass {
    height: 100%;
    display: flex;
    align-items: center;
    margin-left: 8rpx;
    font-size: 20rpx;
    color: rgba(127, 127, 127, 1);
    /* line-height: 37rpx; */
}

.goods_info {
    text-align: left;
    width: 100%;
    padding: 15rpx 10rpx;
    padding-bottom:25rpx;
    box-sizing: border-box;
    /* min-height:200rpx; */
}

.goods_name {
    word-break: break-all;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    color: rgba(51, 51, 51, 1);
    line-height: 30rpx;
    /* height:60rpx; */
}
 

.label_content {
    margin-right: 7rpx;
    margin-bottom: 5rpx;
    /* width: 52rpx; *//* width: ; *//* height: 23rpx; */
    display: inline-flex;
}
  
.goods_price {
    padding-top: 12rpx;
    display:flex;
    /* justify-content: space-between; */
}

.sales_box{
    font-size: 22rpx;
    padding-top: 22rpx;
    line-height: 22rpx;
    color: #777;
} 

.market_price {
    margin-left: 14rpx;
    text-decoration: line-through;
    color: #b2b2b2;
    font-size: 22rpx;
    line-height: 36rpx;
    transform: translateY(6rpx);
}

.shop_price {
    display: inline-flex;
    font-weight:bold;
    font-size: 36rpx;
}

.good_integral {
    display: inline-flex;
    font-size: 28rpx;
    line-height: 28rpx;
    margin-left: 5rpx;
}

.has_no_goods {
    width: 100%;
    text-align: center;
    padding-top: 200rpx;
}

.has_no_goods image {
    width: 200rpx;
    display: inline-block;
}

.has_no_goods .txt {
    margin-top: -20rpx;
    color: #7f7f7f;
}

.empty {
    min-height: 28rpx;
}
.stay_white{
    position:fixed;
    top:0px;
    left:0px;
    z-index:99;
    background-color:#fff;
    height:150rpx;
    width:100%;
}
._input_box {
    width: 100%;
    position: fixed;
    z-index: 99;
    top: 0;
    left: 0;
}

.commission_box {
    /* border: 1px solid var(--light_color); */
    border: 1px solid #F14D00;
    /* color: var(--main_color); */
    color: #F14D00;
    font-size: 20rpx;
    display: inline-flex;
    align-items: center;
    border-radius: 6rpx;
}

.commission_text {
    padding: 6rpx 8rpx;
    height: 100%;
    border-radius: 0 0 16rpx 0;
    box-sizing: border-box;
    color: #fff;
    background-image: linear-gradient(138deg, #F98400 0%, #F14D00 100%);
    /* background-image: linear-gradient(to bottom right, var(--light_color), var(--main_color)); */
    flex-shrink: 0;
    /* line-height: 20rpx; */
}

.commission_price {
    font-size: 18rpx;
    line-height: 20rpx;
    padding: 0 6rpx;
}