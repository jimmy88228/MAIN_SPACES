.info_group {
  padding: 0 0 0 20rpx;
  background: #fff;
  border-bottom: 12px solid #efefef;
}
.info_item{
  border-top: 1px solid #efefef;
  background:#fff;
  position:relative;
  display:flex;
  justify-content: center;
  align-items: center;
  min-height:120rpx;
}
.info_item + .info_item {
  border-top: 1px solid #efefef;
}

.info_item text,
.info_input {
  display: inline-block;
  vertical-align: middle;
  /* line-height: 120rpx; */
}
.info_tit{
  width:165rpx;
  /* min-height:120rpx; */
  text-align:right;
  padding-left:20rpx;
}
.info_input {
  display:inline-flex;
  /* width:400rpx; */
  height: 120rpx;
  margin-left: 40rpx;
  width:100%;
  color:#303030;
  line-height: 120rpx;
  position:relative;
}
.info_input_btn{
  position:absolute;
  top:0px;
  left:0px;
  width:100%;
  height:100%;
  background:none;
}
.info_input.C_7f{
  color:#7f7f7f;
}
.picker{
  width:500rpx;
  height:100%;
}

.info_input.tip {
  color: #b2b2b2;
}
.info_tip{
  padding:30rpx 0px;
}
.bind_mobile_input{
  width:300rpx;
}


.date_picker_box {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  text-align: center;
  background: rgba(0, 0, 0, .6);
  z-index: 2;
}

.date_picker {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
}

.date_btn_box {
  text-align: left;
  padding: 0 30rpx;
}

.date_btn {
  display: inline-block;
  font-size: 26rpx;
}

.right {
