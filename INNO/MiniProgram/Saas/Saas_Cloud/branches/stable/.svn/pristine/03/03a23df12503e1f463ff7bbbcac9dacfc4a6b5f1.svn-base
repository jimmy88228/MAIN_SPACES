/* order_list.wxss */

page {
    background: #f3f3f3;
}

.ordertTab {
    text-align: center;
    background: #fff;
    color: #777;
    width: 100%;
    position: fixed;
    z-index: 2;
    box-shadow: 0 -10px 10px 10px #efeded;
    overflow: visible;
}

.active {
    color: #cd718f;
    font-weight: bold;
}

.lines {
    position: absolute;
    bottom: -3rpx;
    left: 50%;
    transform: translateX(-50%);
    width: 52rpx;
    height: 4rpx;
    border-radius: 20rpx;
    border: 1rpx solid transparent;
}

.orderTabTit {
    position: relative;
    width: 50%;
    line-height: 80rpx;
    height: 80rpx;
    box-sizing: border-box;
    font-size:28rpx;
}

.ordertTab text {
    display: inline-block;
    vertical-align: middle;
}

.selectTab {
    color: #e38a18;
    box-shadow: 0px -3px 0px #e38a18 inset;
}

.orderLists {
    /*height:100%;*/
    padding-top:90rpx;
    box-sizing: border-box;
}
.shadow{
    padding-top:0;
    box-shadow: 0px 15px 10px -15px #efeded inset;
}
.fixed_shadow{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 10rpx;
    box-shadow: 0px 15px 10px -15px #efeded inset;
    z-index: 99;
}
.orderListItem {
    width: 100%;
}

.orderListItem .item {
    width: 100%;
    position: relative;
    margin-bottom: 10rpx;
    background: #fff;
}
.order_wrapper{
    padding-left: 24rpx;
}
.header_info{
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 76rpx;
    font-size: 24rpx;
    color: #000;
    padding-right: 26rpx;
    border-bottom: 1rpx solid #efefef;
}
.order_sn .number{
    color: #7f7f7f;
}
.number{
    margin-right: 10rpx;
}
.product{
    display: flex;
    /* margin: 18rpx 0 0 0; */
    border-bottom: 1rpx solid #efefef;
    padding: 18rpx 0px;
    padding-right:26rpx;
    width:100%;
    min-height:168rpx;
    /* white-space:nowrap; */
    box-sizing:border-box;
    word-wrap:break-word;
}
.pro_pic{
    width: 100%;
    height: 100%;
    /* border: 1rpx solid #f6f6f6; */
    /* display:inline-block;
    vertical-align: middle; */
}
.pro_pic_wrapper{
    width: 132rpx;
    height: 132rpx;
    border: 1rpx solid #f6f6f6;
    margin-right: 18rpx;
    display:inline-block;
    vertical-align: middle;
}

.pro_name{
  word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;/*设置两行的时候*/
  -webkit-box-orient: vertical;
}
.pro_item{
    margin-bottom: 16rpx;
    font-size: 24rpx;
}
.pro_attr, .pro_number{
    color: #7f7f7f;
}
.price_number{
    height: 68rpx;
    line-height: 68rpx;
    text-align: right;
    font-size: 26rpx;
    padding-right:26rpx;
}
.the_price{
    font-weight: 800;
}
.product_num,.product_price{
    margin-right: 10rpx;
}
.the_line{
    width: 100%;
    border-top: 1rpx solid #efefef;
}
.btn_group{
    display: inline-flex;
    justify-content: flex-end;
    align-items: center;
    height: 88rpx;
    padding-right: 26rpx;
    flex: 2;
}
.detail_btn{
    width: 149rpx;
    height: 57rpx;
    border-radius: 8rpx;
    color: white;
    font-size: 26rpx;
}
.orderListItem .itemL {
    width: 25%;
    text-align: center;
}

.orderListItem .itemR {
    padding: 12rpx 20rpx;
    border-left: 1px solid #d2d2d2;
}

.emptyOrder {
    position: absolute;
    left: 50%;
    top: 45%;
    /* top: 50%; */
    transform: translate(-50%, -50%);
    text-align: center;
}

.emptyOrder image {
    width: 200rpx;
    height: 200rpx;
    margin: 0 auto;
    margin-bottom: 20rpx;
}

.status_name {
    margin: 20rpx 0;
    font-weight: bolder;
}

.comment_btn {
    height: 57rpx;
    line-height: 57rpx;
    border-radius: 8rpx;
    padding: 0 40rpx;
    margin-right: 10rpx;
}


.label{
  display: inline-block;
  padding: 5rpx 10rpx;
  /* background: rgb(254, 234, 240);  */
  margin-left:20rpx; 
  border-radius: 16rpx;
}

.msg_box{
  width: 100%;
  display: flex;
}

.assist_guest{
  /* padding-left: 20rpx;  */
  flex: 2;
  display: inline-flex;
  align-items: center;
  justify-content: flex-start;
} 

.assist_guest_btn{ 
    padding:8rpx 14rpx;
    border-radius:50%; 
    color: white;
    font-size: 22rpx;
}