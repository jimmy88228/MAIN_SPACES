/* pages/integral/myIntegral.wxss */

page {
    background: #fff;
    height: 100%;
}

image {
    width: auto;
    height: auto;
    display: block;
}

.integralPage {
    line-height: 40rpx;
    height: 100%; 
    /* padding-top:318rpx; */
    box-sizing: border-box;
}
.integralPage.tab_top{
    /* padding-top: 412rpx; */
    padding-top:94rpx;
}
.integral_head{
    position: fixed;
    top: 0px;
    left: 0px;
    overflow: hidden;
    width:100%;
    box-sizing: border-box;
}
.integralState {
    /* position: fixed;
    top: 0px;
    left: 0px;   */
    height: 318rpx;
    overflow: hidden;
    width:100%;
    box-sizing: border-box;
}

.integralState image {
    width: 750rpx;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: -1;
}

.integralTxt {
    /* position: absolute;
    top: 0px;
    left: 0px;
    padding: 29rpx 50rpx 0 50rpx;
    color: #fff;
    width: 100%;
    box-sizing: border-box; */

    padding:29rpx 25rpx 0 25rpx;
    color:#fff;
    width:100%;
    position: relative;
    box-sizing: border-box;
}

.integral_operates {
    text-align: right;
}

.integral_operate {
    display: inline-block;
    padding: 5rpx 20rpx;
    border: 1px solid #fff;
    border-radius: 5rpx;
    margin-left: 10rpx;
    padding-left: 50rpx;
    background-repeat: no-repeat;
    background-position: left 10rpx center;
    background-size: auto 70%;
}

.integralTit, .table{
    font-size: 25rpx;
}
.integralTit{
    display: flex;
    justify-content: space-between;
    width: 100%;
}
.integralNum {
    line-height: normal;
}

.integralNumTxt {
    margin-top: 45rpx;
    font-size: 130rpx;
    vertical-align: text-top;
}

.integralNumTip {
    border-radius: 100rpx;
    padding: 5rpx 20rpx;
    position: relative;
    vertical-align: text-top;
}

.integralNumTip .num_tip_icon{
    position: absolute;
    right:auto;
    top:auto;
    left: 6rpx;
    bottom: 5rpx;
    transform: translateY(100%);
    -moz-transform: translateY(100%);
    width: 30rpx;
    z-index:2;
}
.list_area{
    width:100%;
    height:100%;
    display:block;
    padding-top:318rpx;
    box-sizing: border-box;
}
.integral_list {
    /* padding-top: 318rpx; */
    padding-left: 10rpx;
    width: 100%; 
    height:100%;
}

.integralItem {
    padding: 20rpx;
    border-bottom: 1px solid #d2d2d2;
}
.integral_item{
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 42rpx 0 36rpx 45rpx;
    border-bottom: 1rpx solid #d2d2d2;
    font-size: 0;
}
.integral{
    margin-right: 42rpx;
}
.time_info{
    font-size:22rpx;
    color: #7F7F7F;
    margin-bottom: 10rpx;
}
.remark{
    font-size:26rpx;
    color: #1B1B1B;
}
.integral{
    font-size:30rpx;
    color: #1F1A17;
    font-weight: bold;
}
.bg_color{
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: -2;
}


.ordertTab {
    text-align: center;
    background: #fff;
    color: #777;
    width: 100%;
    /* position: fixed;
    top: 0;
    left: 0; */
}

.active {
    color: #cd718f;
    font-weight: bold;
}

.lines {
    position:absolute;
    bottom:6rpx;
    left:50%;
    transform:translateX(-50%);
    width:72rpx;
    height:1px;
    border-radius:37rpx;
    border:1rpx solid transparent;
}

.orderTabTit {
    position: relative;
    width: 50%;
    line-height: 94rpx;
    height: 94rpx;
    box-sizing: border-box;
    font-size: 28rpx;
}

.ordertTab text {
    display: inline-block;
    vertical-align: middle;
}

.current {
    font-weight: 600;
}

.title_box{
    display: flex;
    border-bottom: 2rpx solid #d2d2d2;
}
.title_box .title{
    flex: 1;
    align-items: center;
    font-weight:600;
    height:90rpx;
    display:flex;
    justify-content:center; 
}
.expire_box{
    padding: 40rpx 0;
    display: flex;
    align-items: center;
    border-bottom: 1rpx solid #d2d2d2;
}
.flex_1{
    flex: 1; 
    text-align: center;
}