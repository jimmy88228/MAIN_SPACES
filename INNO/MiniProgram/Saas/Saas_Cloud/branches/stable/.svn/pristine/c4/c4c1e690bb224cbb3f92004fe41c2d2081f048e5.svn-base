/* pages/component/login/login_by_phone.wxss */
.verify_page{
  position:fixed;
  top:50%;
  left:50%;
  z-index:100;
  /* width:600rpx; */
  background:#fff;
  transform: translate(-50%,-50%);
  border-radius:10rpx;
}
.v_title{
  padding:30rpx;
  border-bottom:1px solid #efefef;
}
.v_cont{
  padding:20rpx;
}
.v_view{
  position: relative;
  width: 560rpx;
  min-height: 100rpx;
  background-color:#efefef;
  margin: 30rpx 0px;
}
.view_img{
  width:100%;
  display:block;
}
.target_view{
  position: absolute;
  top:0px;
  left:0px;
  width:80rpx;
  height:80rpx;
  background: #ffffff;
  box-shadow: inset 0 0 20rpx rgba(0,0,0,.8);
  border-radius: 6rpx;
  opacity: 0.6;
  border: 1px solid #c1c1c1;
  box-sizing:border-box;
}
.move_point{
  position: absolute;
  left:0px;
  /* bottom: 70rpx;  */
  width:80rpx;
  height:80rpx;
  background: #fff;
  box-shadow: 0 0 10rpx rgba(0,0,0,.6);
  border-radius:6rpx;
  overflow: hidden;
}
.move_img{
  position: absolute;
  top:0px;
  left:0px;
}
.v_operate{
  position: relative;
  width:100%;
  height:80rpx;
  margin-top:20rpx;
  background: #f7f9fa;
  color: #45494c;
  border: 1px solid #e4e7eb;
}
.slide_point{
  /* display:flex;
  justify-content: center;
  align-items: center;
  width:80rpx;
  height:80rpx;
  background: #fff;
  box-shadow: 0 0 6rpx rgba(0,0,0,.3);
  transition: all .35s; */
}
.slide_point_stay{
  display:flex;
  justify-content: center;
  align-items: center;
  width:80rpx;
  height:80rpx;
  background: #fff;
  box-shadow: 0 0 6rpx rgba(0,0,0,.3);
  transition: all .35s;
}
.slide_c{
  width: 30rpx;
  height: 10rpx;
  background-color: #999;
  margin-left: 5rpx;
  transition: all .35s;
}
.slide_a{
  border:10rpx solid #999;
  border-left-color: transparent;
  border-bottom-color: transparent;
  transform: translateX(-50%) rotate(45deg);
  transition: all .35s;
}
.fail .slide_c,.success .slide_c{
  background-color: #fff;
}
.fail .slide_a,.success .slide_a{
  border-color: #fff;
  border-left-color: transparent;
  border-bottom-color: transparent;
}
.v_operate.fail{
  background-color:#FBE0E0;
  border-color:#F57C7B;
}
.v_operate.success{
  background-color:#BAF3D1;
  border-color:#23D96E;
}
.slide_point_stay.fail{
  background-color:#F57C7B;
}
.slide_point_stay.success{
  background-color:#23D96E;
}