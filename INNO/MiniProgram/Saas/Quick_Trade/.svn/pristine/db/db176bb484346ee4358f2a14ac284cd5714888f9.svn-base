<view class="i-goods-list-container">
  <view class="i-goods-list">
    <view class="i-goods-item" wx:for="{{list}}" wx:key="index" hover-class="active" bindtap="handleGoodsTap">
      <view class="i-goods-item-main">
        <view class="i-goods-left">
          <view class="i-g-image-con">
            <!-- <view class="i-g-l-slogan">品牌</view> -->
            <image class="i-g-image" src="{{item.pic}}" />
          </view>
        </view>
        <view class="i-goods-right">
          <view class="i-goods-info">
            <view class="i-goods-title">{{item.name}}</view>
            <view class="i-goods-cliff">
              <view class="iconfont icon-xiajiang cliff-icon"></view>
              <text>直降￥40</text>
            </view>
            <view class="i-goods-price-con">
              <view class="i-goods-price">
                <text class="i-g-rmb">￥</text>
                <text class="i-g-price-number">239</text>
              </view>
              <view class="i-goods-original-price">
                <text class="i-g-o-rmb">￥</text>
                <text class="i-g-original-price-number">239</text>
              </view>
            </view>
          </view>
          <view class="i-goods-purchase-con">
            <!-- <view class="i-goods-count-down">
            <text class="i-c-d-pre">距结束</text>
            <text class="i-c-d-time">05:12:32</text>
          </view> -->
            <view class="i-goods-purchase-btn" hover-class="active">
              <btns bind:clickcallback="handlePurchaseTap">抢购</btns>
            </view>
          </view>
        </view>
      </view>
      <!-- <view class="i-g-purchase-tips">
        <text class="i-g-p-tip">·支持到店取货</text>
        <text class="i-g-p-tip">·每人限购1件</text>
        <text class="i-g-p-tip">·一件包邮到家</text>
      </view> -->
    </view>
  </view>
</view>
<sku />
<!-- public -->
<include src="/common/base/component/index.wxml" />