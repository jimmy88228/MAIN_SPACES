/* pages/main/staff-module/activity/index.wxss */
page{
    background-color: #F2F2F2;
    height: 100%;
}
.activity{
    height: 100%;
    padding: 25rpx;
    box-sizing: border-box;
}
.box{
    font-size: 30rpx;
    border-radius: 20rpx;
    background-color: #fff;
    padding: 30rpx;
    margin-bottom: 30rpx;
}
.time-box{
    padding: 0 0 0 15rpx;
}
.time-box:first-child{
    margin-bottom: 45rpx;
}
.goods-list{
    overflow: hidden;
}
.footer{
    width: 100%;
    height: 140rpx;
    opacity: 0;
    transition: all 0.3s;
}
.footer.inited{
  opacity: 1;
}
.preview-btn{
    width: 200rpx;
    height: 110rpx;
    border-radius: 20rpx;
    background-color: #fff; 
    margin-left: 18rpx;
}
.preview-btn:first-child{
  margin-left: 0;
}
.save-btn{
    width: 250rpx;
    height: 110rpx; 
    margin-left: 18rpx;
    background: var(--main-color);
    border-radius: 20rpx;
    color: #fff;
}
.setting{
    font-size: 30rpx;
    color: #B2B2B2;
}