.u_a_container{

}
.update_avatar_form{
  display: block;
}
.form_row_center{
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 1px dotted #bbbbbb;
}
.form_row{
  border-bottom: 1px dotted #bbbbbb;
  padding: 36rpx 36rpx 36rpx 150rpx;
  position: relative;
  font-size: 28rpx;
}
.form_row .prefix{
  position: absolute;
  top: 50%;
  left: 24rpx;
  z-index: 1;
  transform: translateY(-50%);
  font-weight: bold;
}
.form_row .mobile-input{

}
.avatar_wrapper {
  padding: 0;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}
.avatar-btn{
  border-radius: 50%;
}

.avatar {
  position: relative;
  display: block;
  width: 56px;
  height: 56px;
  border-radius: 50%;
  border: 2px solid #ddd;
  color: var(--main-color);
}

.avatar_wrapper.hover .avatar{
  border: 2px solid currentColor;
}

.avatar_alt{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.avatar_alt::before,
.avatar_alt::after{
  content: "";
  display: block;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: #515a6e;
  width: 35%;
  height: 5%;
}

.avatar_alt::after{
  transform: translate(-50%, -50%) rotate(90deg);
}

.container {
  display: flex;
}

.u_a_footer{
  position: fixed;
  bottom: 0;
  left: 0;
  height: 160rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.save_btn{
  height: 80rpx;
  border-radius: 100rpx;
  width: 400rpx;
  transition: all 0.2s ease;
  background-color: var(--main-color);
}
.save_btn:active{
  opacity: 0.6;
}
.form_row .mobile-btn{ 
  position:absolute;
  top:50%;
  right:30rpx;
  display:flex;
  justify-content: center;
  align-items: center; 
  color:#333;
  border: 1px solid #333;
  padding:0px 20rpx;
  width: 200rpx;
  height:50rpx;
  border-radius:100rpx;
  transform: translateY(-50%);
}