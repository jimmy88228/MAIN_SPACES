/* pages/main/staff-module/repository/goods/spec/edit/index.wxss */
.spec-edit{
    padding: 25rpx;
    padding-bottom: calc(25rpx + 154rpx);
}
.box{
    padding: 40rpx;
    font-size: 28rpx;
    background: #FFFFFF;
    border-radius: 20rpx;
    display: flex;
    justify-content: space-between;
    margin-bottom: 12rpx;
}
.box:last-of-type{
  margin-bottom: 0;
}
.box-right{
  flex-shrink: 0;
}
.box-button-group{
  display: flex;
}
.box-btn{
  padding: 8rpx 20rpx;
  border: 1px solid #dddddd;
  border-radius: 4rpx;
  font-size: 24rpx;
  margin-right: 16rpx;
  transition: opacity 0.1s ease;
}
.box-btn:last-of-type{
  margin-right: 0;
}
.box-btn.active{
  opacity: 0.7;
}
.name{ 
    margin-bottom: 26rpx;
}
.value{
    color: #B2B2B2;
}
.footer{
    position: fixed;
    left: 0;
    bottom: 0;
    width: 750rpx;
    height: 154rpx;
    background: #F2F2F2;
    border-top: 1px solid #E3E3E3;
    box-sizing: border-box;
    box-sizing: border-box;
    padding:0 30rpx;
}
.add-btn{
    width: 270rpx;
    height: 110rpx;
    background: var(--main-color);
    border-radius: 20rpx;
    color: #fff;
    font-size: 30rpx;
} 