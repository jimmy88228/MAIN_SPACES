/* pages/main/staff-module/staff-center/staff-center.wxss */
.staff-center-bg{
    position:absolute;
    top:0px;
    left:0px;
    width: 100%;
    height: 502rpx;
    background: linear-gradient(var(--main-color), var(--second-color));
}
.staff-center{
    position: relative;
    padding-bottom: 30rpx;
    box-sizing: border-box;
}
.staff-center-header{
  padding: 60rpx 25rpx;
}
.staff-center .header{
    width: 80rpx;
    height: 80rpx;
    margin-right: 20rpx;
    border-radius: 50%;
    overflow: hidden;
    position: relative;
    border: 6rpx solid #FC89A0;
    background-color: #fff;
}
.total-sale{
  display: inline-block;
  min-width: 168rpx;
  min-height: 88rpx;
  padding: 10px;
  background: #D83454;
  border-radius: 20rpx;
  font-size: 20rpx;
  box-sizing: border-box;
  text-align: center;
}
.total-sale .tip{
  color: #FFBAC7;
}
.total-sale .val{
  color: #FFE1E7;
  font-weight: 600;
}
.summary-box{
    box-sizing: border-box;
    padding: 0 30rpx;
    background: #FFFFFF;
    width: 700rpx;
    min-height: 206rpx;
    border-radius: 20px;
    margin: 0 auto;
    margin-bottom: 22rpx;
}
.price{
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #7F7F7F;
  line-height: 33rpx;
}
.price .sub{
  font-size: 20rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #171717;
  line-height: 28rpx;
  margin-right: 4rpx;
}
.price .val{
  font-size: 38rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #171717;
  line-height: 53rpx;
}
.order-box{
    /* margin-top: 60rpx; */
}
.name{
    font-size: 28rpx;
    color: #fff;
    font-weight: 600;
}