/* pages/main/staff-module/repository/cps/search-box/index.wxss */
.search-box{
    position: fixed;
    left: 0;
    top: 0;
    z-index: 98;
}
.category{
    position: fixed;
    left: 0;
    top: 0;
    width: 150rpx;
    height: 100%;
    background: #fff;
    z-index: 98;
    padding-bottom: 50rpx;
    box-sizing: border-box;
}
.cat-item-box{
  width: 100%;
  height: 100rpx;
  background: #FFFFFF;
  box-sizing: border-box;
  padding: 0 20rpx;
}
.cat-item-box.active{
  background: #F2F2F2;
}
.cat-item{ 
    color: #8f8f8f;
}
.active .cat-item{
    color: var(--main-color);
}
.input-box{ 
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    padding: 12rpx 22rpx 12rpx 168rpx;
    box-sizing: border-box;
    height: 106rpx;
    z-index: 97;
    background: #f2f2f2;
}
.search-input{
    width: 100%;
    height: 100%;
    background: #FAFAFA;
    border-radius: 10rpx;
    box-sizing: border-box;
    padding-left: 30rpx;
}
.placehold-text{
    color: rgba(51,51,51,0.3);
}
