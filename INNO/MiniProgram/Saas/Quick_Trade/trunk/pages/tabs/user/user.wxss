@import "/common/base/page/default-wxss/index.wxss";
page{
  height: 100%;
}
.page-bg{
  position: absolute;
  top: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
  z-index: -1;
  background: linear-gradient(var(--main-color), var(--second-color));
}
.user-page{
  overflow: hidden;
}
.login-btn{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
  background: transparent;
}
.scroll-view-box{ 
  /* height: calc(100% - var(--nav-bar-height)); */

  height: 100%;
}
.center-title{
  position: absolute;
  left: 50%;
  top:50%;
  transform: translate(-50%,-50%);
  color: #fff;
}