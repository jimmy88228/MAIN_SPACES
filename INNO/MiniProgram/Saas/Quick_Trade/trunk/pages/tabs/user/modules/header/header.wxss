@import "/common/base/component/default-wxss/index.wxss";
.user-header-container{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.u-h-info{
  width: 690rpx;
  height: 260rpx;
  position: relative;
  overflow: hidden;
  text-shadow: 1px 1px 1px #171717;
  color: #fff;
}
.u-h-info-z{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;  
  position: relative;
  z-index: 2;
}
.u-h-avatar-con{
  width: 98rpx;
  height: 98rpx;
  margin-bottom: 8rpx;
  position: relative;
}
.u-h-avatar{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.u-h-username{
  font-size: 28rpx;
  line-height: 40rpx;
  margin-bottom: 10rpx;
}
.change-avatar-icon{
  position: absolute;
  top: 0px;
  right: 0px;
  width: 35rpx;
  height: 35rpx;
  transform: translate(30%,-30%);
  padding: 10rpx;
}
.u-h-grade{
  background: rgba(255, 255, 255, 0.2);
  border: 1px solid rgba(255, 255, 255, 1);
  border-radius: 30rpx;
  font-size: 22rpx;
  min-width: 110rpx;
  text-align: center;
  padding: 0 10rpx;
  height: 32rpx;
  line-height: 32rpx;
  box-sizing: border-box;
}
.rank-img{
  border-radius: 20rpx 20rpx 0 0;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  width: 100%;
  z-index: 1;
}