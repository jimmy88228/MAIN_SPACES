@import "/common/base/component/default-wxss/index.wxss";

.change-order-status-pop{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 20;
  background-color: #ffffff;
  width: 600rpx;
  min-height: 200rpx;
  border-radius: 20rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
}
.change-order-status-title{
  text-align: center;
  line-height: 56rpx;
  font-size: 28rpx;
  color: #222222;
  font-weight: bold;
}
.change-order-status-content{
  padding: 24rpx;
}
.cosc-row{
  display: flex;
  align-items: center;
  padding: 16rpx;
}
.cosc-prefix{
  font-size: 24rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}
.cosc-input-container{
  flex: 1;
}
.cosc-input{
  width: 100%;
  height: 100%;
  border: 1px solid #dddddd;
  border-radius: 8rpx;
  padding: 4rpx 8rpx;
}
.change-order-status-footer{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding: 0 20rpx;
}
.cosf-btn-group{
  width: 100%;
  display: flex;
  align-items: center;
}
button.cosf-btn{
  width: 36%;
  padding: 16rpx 8rpx;
  border-radius: 20rpx;
  transition: opacity 0.1s ease;
}
button.cosf-btn.active{
  opacity: 0.7;
}
.cosf-btn.primary{
  background-color: var(--main-color);
  color: #ffffff;
}
