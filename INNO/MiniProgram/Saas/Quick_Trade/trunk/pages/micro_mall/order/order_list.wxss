@import "/common/base/page/default-wxss/index.wxss";
page{
  --order-list-tab-height: 120rpx;
  --tab-search-con-height: 120rpx;
}
.order-list-page{
  width: 100vw;
  height: 100vh;
  background-color: #F0F0F0;
}
.order-list-main,
.order-list-tabs-container{
  width: 100%;
  height: 100%;
}
.order-list-tabs{
  width: 100%;
  height: var(--order-list-tab-height);
  display: flex;
  align-items: center;
  background-color: #ffffff;
}
.order-list-tab{
  width: calc(100% / 4);
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.order-list-tab.active .order-list-tab-title{
  color: var(--main-color);
}
.order-list-tab-title{
  color: var(--tint-text-color);
  font-size: 26rpx;
}
.order-list-search-container{
  width: 100%;
  height: var(--tab-search-con-height);
  padding: 20rpx 16rpx 0 16rpx;
}
.order-search-con{
  width: 100%;
  height: 100%;
  background-color: #ffffff;
  border-radius: 20rpx;
}
.order-search{
  width: 100%;
  height: 100%;
  padding: 12rpx 20rpx 16rpx 32rpx;
  box-sizing: border-box;
  position: relative;
  font-size: 26rpx;
}
.order-search-placeholder{
  color: var(--tint-text-color);
}
.order-search-suffix{
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 114rpx;
  height: 68rpx;
  z-index: 6;
}
button.order-search-btn{
  width: 100%;
  height: 100%;
  background-color: rgba(127, 127, 127, 0.04);
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #333333;
  transition: opacity 0.1s ease;
}
button.order-search-btn.active{
  opacity: 0.7;
}
.order-list-tab-swiper{
  height: calc(100% - var(--order-list-tab-height) - var(--tab-search-con-height));
}
.order-list-tab-swiper-item{
  height: 100%;
  padding: 20rpx 16rpx;
  box-sizing: border-box;
}
.oltsi-content{
  width: 100%;
  height: 100%;
}
.oltsi-order-item{
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  padding: 28rpx 26rpx 24rpx 20rpx;
  border-radius: 20rpx;
  transition: opacity 0.1s ease;
  margin-bottom: 20rpx;
}
.oltsi-order-item:last-of-type{
  margin-bottom: 0;
}
.oltsi-order-item.active{
  opacity: 0.7;
}
.order-item-header{
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
  color: #171717;
  margin-bottom: 32rpx;
}
.order-item-main{
  margin-bottom: 46rpx;
}
.order-item-goods-item{
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}
.order-item-goods-item:last-of-type{
  margin-bottom: 0;
}
.order-item-m-img-con{
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
  background-color: #F1F1F1;
}
.order-item-m-img{
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.order-item-m-left{
  margin-right: 28rpx;
}
.order-item-m-right{
  flex: 1;
  display: flex;
  flex-direction: column;
  height: 160rpx;
}
.order-item-m-name{
  width: 100%;
  font-size: 26rpx;
  color: #171717;
  margin-top: 12rpx;
  margin-bottom: 18rpx;
}
.order-item-m-spec{
  font-size: 26rpx;
  color: #171717;
}
.order-item-footer{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.order-item-store-address{
  font-size: 22rpx;
  color: #171717;
}
.order-item-f-right,
.order-item-total-price{
  display: flex;
  align-items: center;
}
.order-item-total-number{
  font-size: 22rpx;
  color: var(--tint-text-color);
  margin-right: 4rpx;
}
.order-item-total-price{
  font-size: 22rpx;
  color: #222222;
}
.oitp-price-text{
  font-size: 28rpx;
}
.oitp-prefix{
  margin-right: 4rpx;
}
.oltsi-order-list-nodata{
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}