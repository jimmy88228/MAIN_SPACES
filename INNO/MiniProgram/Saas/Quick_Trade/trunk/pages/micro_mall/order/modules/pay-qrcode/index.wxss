.main{
  position: absolute;
  left: 50%;
  top: 50%;
  background-color: #f5f5f5;
  border-radius: 20rpx;
  width: 80%;
  transform: translate(-50%, -50%);
  padding: 36rpx;
  box-sizing: border-box;
  text-align: left;
  min-height: 600rpx;
  max-height: 600rpx;
  height: 600rpx;
  color: #333333;
  font-size: 24rpx;
  line-height: initial;
}

.header{
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  line-height: 64rpx;
}

.content{
  display: flex;
  flex-direction: column;
  align-items: center;
}