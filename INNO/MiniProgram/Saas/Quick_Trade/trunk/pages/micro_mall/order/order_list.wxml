<!-- public 必须是第一个元素 -->
<include src="/common/base/page/index.wxml" />

<view class="order-list-page">
  <view class="order-list-main">
    <view class="order-list-tabs-container">
      <!-- tabs -->
      <view class="order-list-tabs">
        <block wx:for="{{orderTabList}}" wx:key="state">
          <view class="order-list-tab {{index === activeTabIndex ? 'active': ''}}" bindtap="handleOrderTabTap" data-index="{{index}}">
            <view class="order-list-tab-title">{{item.title}}</view>
          </view>
        </block>
      </view>

      <view class="order-list-search-container">
        <view class="order-search-con">
          <input class="order-search" type="text" placeholder-class="order-search-placeholder" placeholder="请输入商品名称">
          <view class="order-search-suffix">
            <button class="order-search-btn">搜索</button>
          </view>
          </input>
        </view>
      </view>

      <swiper class="order-list-tab-swiper" current="{{activeTabIndex}}" bindchange="handleSwiperChange">
        <block wx:for="{{orderTabList}}" wx:for-item="orderTab" wx:for-index="orderTabIndex" wx:key="state">
          <swiper-item class="order-list-tab-swiper-item">
            <scroll-view class="oltsi-content" scroll-y>
              <view class="oltsi-order-list">
                <block wx:for="{{orderTab.list}}" wx:key="index">
                  <view class="oltsi-order-item" hover-class="active" bindtap="handleOrderItemTap">
                    <!-- header -->
                    <view class="order-item-header">
                      <view class="order-item-h-left">
                        <view class="order-item-h-order-sn">订单号 0309712976620045</view>
                      </view>
                      <view class="order-item-h-right">
                        <view class="order-item-h-status">已发货</view>
                      </view>
                    </view>

                    <!-- main -->
                    <view class="order-item-main">
                      <view class="order-item-m-left">
                        <view class="order-item-m-img-con">
                          <image class="order-item-m-img" src="http://gosoimg.igoso.com.cn/images/goso/index/gallery/20221212/20221212115416926_8783766.jpg_R1305_wmark.jpg" />
                        </view>
                      </view>
                      <view class="order-item-m-right">
                        <view class="order-item-m-name">针织磨毛提花复合绒圆领厚款套装</view>
                        <view class="order-item-m-spec">
                          <text>规格: 红色;</text>
                          <text>尺寸: XL</text>
                        </view>
                      </view>
                    </view>

                    <!-- footer -->
                    <view class="order-item-footer">
                      <view class="order-item-f-left">
                        <view class="order-item-store-address">广州市天河区天环广场A区328</view>
                      </view>
                      <view class="order-item-f-right">
                        <view class="order-item-total-number">共1件</view>
                        <view class="order-item-total-price">
                          <text class="oitp-prefix">合计</text>
                          <text class="oitp-price-text">￥199.00</text>
                        </view>
                      </view>
                    </view>
                  </view>
                </block>
              </view>
            </scroll-view>
          </swiper-item>
        </block>
      </swiper>
    </view>
  </view>
</view>