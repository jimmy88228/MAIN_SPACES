@import "/common/base/page/default-wxss/index.wxss";

/* pages/micro_mall/address/address_list.wxss */
page{
  background:#fff;
}
.address_page{
  padding:17rpx 24rpx 0 15rpx;
}
.add_address_btns{
  display:flex;
  align-content: space-between;
  padding:26rpx 0px;
}
.add_address_btn{
  flex:1;
}
.btns_stay{
  display:inline-flex;
  width:20rpx;
}
.add_address_btns .add_btn{
  /* width:348rpx; */
  width:100%;
  height:82rpx;
  border-radius:10rpx;
  color:#fff;
  background-color: var(--main-color);
  transition: opacity 0.1s ease;
}
.add_btn.active{
  opacity: 0.7;
}
.add_address_btns .addr_icon{
  width:36rpx;
  height:36rpx;
  margin-right:14rpx;
}
.add_address_btns .add_addr_icon{
  width:30rpx;
  height:30rpx;
}
.add_wx_addr_btn{
  background-color:#428F26;
  color:#fff;
  /* margin-right:15rpx; */
}
.addr_item{
  border-radius:5rpx;
  border:1px solid #e9e9e9;
  margin-bottom:32rpx;
  position:relative;
}
.addr_item.selected{
  border:2px solid var(--main-color);
}
.item_info{
  border-bottom:1px solid #e9e9e9;
  padding:20rpx;
  box-sizing:border-box;
  width:100%;
}
.item_info .tit{
  width:5em;
}
.addr_operation{
  padding:20rpx;
  display:table;
  width:100%;
  box-sizing:border-box;
}
.addr_operation_l{
  display:table-cell;
   vertical-align: middle; 
}
.addr_operation_r{
  display:table-cell;
  text-align:right;
   vertical-align: middle; 
}
.edit_addr{
  display:inline-flex;
  align-items: center;
}
.edit_addr image{
  width:31rpx;
  height: 35rpx;
  vertical-align: middle;
}
.del_addr{
  display:inline-flex;
  align-items: center;
  margin-left:30rpx;
}
.del_addr image{
  width:31rpx;
  height: 35rpx;
  vertical-align: middle;
}
.edit_addr text,.del_addr text{
  display:inline-block;
  vertical-align: middle;
}
.select_addr_btn{
  display:inline-block;
  color:#fff;
  padding:10rpx 25rpx;
  border-radius:10rpx;
  vertical-align: middle;
  margin:0px 10rpx;
  background-color: var(--main-color);
}
.set_default_btn{
  display:inline-block;
  color:#fff;
  padding:10rpx 25rpx;
  border-radius:10rpx;
  vertical-align: middle;
  margin:0px 10rpx;
  background-color: var(--main-color);
  transition: opacity 0.1s ease;
}
.set_default_btn.active{
  opacity: 0.7;
}

.select_icon{
  position:absolute;
  top:-16rpx;
  right:-16rpx;
  background:#fff;
}
.trans{
    color: transparent;
}
.empty_txt {
  font-size: 28rpx;
  color: #7f7f7f;
  text-align: center;
}
.img-op{
  width: 15rpx;
  margin-right: 6rpx;
}