/* pages/main/staff-module/repository/goods/detail/index.wxss */
.detail-page {
  width: 100vw;
  height: 100vh;
  padding: 25rpx;
}
.detail-display-container{
  /* 对应商品详情那里 */
  padding: 40rpx 40rpx 36rpx 40rpx; 
}
.detail-display-item{}
.detail {
  width: 100%;
  height: 100%;
  padding-bottom: 160rpx;
  background-color: #fff;
}

.textarea-box {
  border-radius: 20rpx;
  padding: 40rpx;
  box-sizing: border-box;
}

.textarea {
  width: 100%;
  min-height: 80rpx;
  font-size: 32rpx;
  padding-bottom: 48rpx;
  margin-bottom: 20rpx;
  position: relative;
}
button.text-save-btn{
  position: absolute;
  bottom: 0;
  right: 0;
  width: 100rpx;
  height: 48rpx;
  background-color: #42B0CA;
  color: #fff;
  border-radius: 8rpx;
  transition: opacity 0.1s ease;
}
button.text-save-btn.active{
  opacity: 0.7;
}

.placehold-text {
  font-weight: bold;
  color: #B2B2B2;
}

.add-btn {
  font-size: 28rpx;
  color: #8B8B8B;
  width: 100%;
  height: 163rpx;
  background: #F1F1F1;
  transition: opacity 0.1s ease;
}

.add-btn.active {
  opacity: 0.7;
}

.footer {
  width: 100%;
  height: 160rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  background-color: #F2F2F2;
  padding: 0 25rpx;
}
.footer view{
  transition: opacity 0.1s ease;
}
.footer view.active{
  opacity: 0.7;
}

.preview-btn {
  width: 213rpx;
  height: 110rpx;
  border-radius: 20rpx;
  background-color: #fff;
}

.save-btn {
  width: 270rpx;
  height: 110rpx;
  margin-left: 18rpx;
  background: #42B0CA;
  border-radius: 20rpx;
  color: #fff;
}