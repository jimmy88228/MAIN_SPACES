.detail{
    padding: 25rpx;
    padding-bottom: 160rpx;
    box-sizing: border-box;
} 
.textarea-box{ 
    border-radius: 20rpx;
    background-color: #fff;
    padding: 40rpx;
    box-sizing: border-box;
}
.textarea{
    height: 80rpx;
    font-size: 32rpx;
    padding-bottom: 20rpx;
}
.placehold-text{
    font-weight: bold;
    color: #B2B2B2;
}
.add-btn{
    font-size: 28rpx;
    color: #8B8B8B;
    width: 100%;
    height: 163rpx;
    background: #F1F1F1;
}

.footer{
    width: 100%;
    height: 160rpx;
    position: fixed;
    left: 0;
    bottom: 0;
    background-color: #F2F2F2;
}
.preview-btn{
    width: 213rpx;
    height: 110rpx;
    border-radius: 20rpx;
    background-color: #fff;
}
.save-btn{
    width: 270rpx;
    height: 110rpx; 
    margin-left: 18rpx;
    background: #42B0CA;
    border-radius: 20rpx;
    color: #fff;
}