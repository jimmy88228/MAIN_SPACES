/* pages/main/staff-module/repository/goods/spec/index.wxss */
page{
    background-color: #F2F2F2;
}
.spec{
    padding: 25rpx;
    box-sizing: border-box;
    font-size: 28rpx;
}
.box{
    padding: 30rpx;
    background: #FFFFFF;
    border-radius: 20rpx;
    margin-bottom: 30rpx;
}
.title-box{
    margin-bottom:30rpx;
}
.op-text{
    font-size: 26rpx;  
    color: #42B0CA;
}
.cir-sel{
    width: 36rpx;
    height: 36rpx;
    background: #FFFFFF;
    border-radius: 50%;
    border: 1px solid #B2B2B2;
    margin-right: 15rpx;
}
.cir-sel.active{
    background: #42B0CA;
    border-color: #42B0CA;
}
.cir-sel.active::after{
    content:"";
    width: 12rpx;
    height: 6rpx;
    border-left: 1px solid #fff;
    border-bottom: 1px solid #fff;
    transform: rotate(-45deg);
}
.spec-name{
    margin-right: 38rpx;
} 
.spec-name:last-of-type{
    margin-right: 0;
}
.delete-box{
    width:40rpx;
    height:40rpx;
    position: relative;
    transform: rotate(-45deg);
}
.delete{
    width: 24rpx;
    height: 2rpx;
    background-color: #000;
}
.delete::after{
    content: "";
    width: 2rpx;
    height: 24rpx;
    background-color: #000;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
}
.box .spec-box{
    width: 199rpx;
    height: 66rpx;
    background: #E7FAFF;
    color: #42B0CA;
    border-radius: 6rpx;
    border: 1px solid #FFFFFF;
    margin-right: 16rpx;
    position: relative;
    display: inline-flex;
}
.spec-box:last-of-type{
    margin-right: 0;
}
.spec-box .delete-box{
    position: absolute;
    right: 16rpx;
    top: 50%;
    transform: translateY(-50%) rotate(-45deg);
}
.spec-box .delete,.spec-box .delete::after{
    background-color: #7f7f7f;
    /* border: 1px solid #7f7f7f; */
}
.setting{
    padding: 0 30rpx;
    margin-bottom: 30rpx;
}
.spec-title{
    font-size: 26rpx;
    padding-left:20rpx;
    margin-bottom: 24rpx;
}
.price-box{
    padding-right: 14rpx;
    width: 140rpx; 
}
.price-title,.sn-title{
    color: #7f7f7f;
    font-size: 26rpx;
    padding-left: 20rpx;
    margin-bottom: 14rpx;
}
.placehold-text{
    color: #B2B2B2;
}
.goods-input{
    background-color: #F9F9F9;
    width: 100%;
}
.goods-input{
    padding-left: 20rpx;
    box-sizing: border-box;
    font-size: 26rpx;
    height: 76rpx;
}
.footer{
    position: fixed;
    left: 0;
    bottom: 0;
    width: 750rpx;
    height: 154rpx;
    background: #F2F2F2;
    border-top: 1px solid #E3E3E3;
    box-sizing: border-box;
    box-sizing: border-box;
    padding:0 30rpx;
}
.save-btn{
    width: 270rpx;
    height: 110rpx;
    background: #42B0CA;
    border-radius: 20rpx;
    color: #fff;
    font-size: 30rpx;
}