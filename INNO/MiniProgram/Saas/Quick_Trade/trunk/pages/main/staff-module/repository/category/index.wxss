@import "/common/base/page/default-wxss/index.wxss";
page{
  --category-footer-height: calc(120rpx + env(safe-area-inset-bottom));
}
.goods-category-edit-page{
  width: 100vw;
  height: 100vh;
}
.goods-category-edit-main{
  width: 100%;
  height: 100%;
}
.gce-list{
  padding: 20rpx;
  padding-bottom: var(--category-footer-height);
}
.gce-item{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background-color: #ffffff;
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
  box-shadow: 0px 1px 2px 0px rgba(255, 255, 255, 0.8);
  transition: opacity 0.1s ease;
}
.gce-item:last-of-type{
  margin-bottom: 0;
}
.gce-item.active{
  opacity: 0.7;
}
.gce-item-left{
  flex: 1;
}
.goods-catefory-edit-footer{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: var(--category-footer-height);
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
}
.gcef-btn-group{
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
}
button.gcef-btn{
  width: 600rpx;
  height: 100%;
  background-color: var(--main-color);
  border-radius: 10rpx;
  color: #ffffff;
}