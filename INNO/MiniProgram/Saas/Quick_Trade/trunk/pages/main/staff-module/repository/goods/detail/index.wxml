<!--pages/main/staff-module/repository/goods/detail/index.wxml-->
<include src="/common/base/page/index.wxml" />
<view class="detail-page {{longpress >= 0?'longpress':''}}">
  <view class="detail">
    <view class="detail-display-container">
      <custom-editor id="custom-editor" placeholder="维护详情内容" bindkeyBoradDown="onBlur" bindkeyBoradUp="onFocus" bindinsertImage="insertImage" scrollTop="{{scrollTop}}" extraH="{{footerH}}"/>
    </view>
  </view>

  <transition name="slide-from-bottom" show="{{showFooter}}">
    <view class="footer flex-e-c" style="{{footerClass}}">
      <view class="preview-btn flex-c-c" hover-class="active" catchtap="handlePreviewBtnTap">预览</view>
      <view class="save-btn flex-c-c" hover-class="active" catchtap="handleSaveBtnTap">保存</view>
    </view>
  </transition>
</view>
<preview-pop id="preview-pop" />