/* pages/main/staff-module/repository/cps/goods-list/index.wxss */
.goods-list{
    width: 100%;
    height: 100%;
    overflow: hidden;
}
.add-btn,.edit-btn{
    width: 275rpx;
    height: 88rpx;
    background: #FFFFFF;
    border-radius: 10rpx;
}
.scroll-view{ 
    overflow: hidden;
}
.list{ 
    border-radius: 12rpx;
    overflow: hidden;
    background-color: #fff;
    margin-bottom: 20rpx;
}
.list:last-of-type{
    margin-bottom: 0;
}
.msg-box{
    padding: 20rpx;
    box-sizing: border-box;
}
.goods-img{
    width: 170rpx;
    height: 170rpx;
    background: #D8D8D8;
}
.content{
    padding-top: 2rpx;
    padding-left: 18rpx;
    box-sizing: border-box;
}
.title{
    color: #b2b2b2;
    margin-right: 16rpx;
}
.edit-box{
    background-color: #F2F2F2;
    padding-bottom: 16rpx;
    box-sizing: border-box;
}
.cir-sel{
    width: 36rpx;
    height: 36rpx;
    background: #FFFFFF;
    border-radius: 50%;
    border: 1px solid #B2B2B2;
}
.cir-sel.active{
    background: #42B0CA;
    border-color: #42B0CA;
}
.cir-sel.active::after{
    content:"";
    width: 10rpx;
    height: 4rpx;
    border-left: 1px solid #fff;
    border-bottom: 1px solid #fff;
    transform: rotate(-45deg);
}
.btn-box{
    padding: 20rpx;
    background-color: rgb(249, 249, 249);
}
.op-btn{
    margin-right: 12rpx;
    width: 140rpx;
    height: 66rpx;
    background: #FFFFFF;
    border-radius: 6rpx;
    border: 1px solid #FFFFFF;
    display: flex;
    justify-content: center;
    align-items: center;
}
.op-btn:last-of-type{
    margin-right: 0;
}
.footer-btn-box{
    width: 100%;
    height: 150rpx;
    /* border: 1px solid #E3E3E3; */
    box-sizing: border-box; 
    padding: 0 25rpx 0 40rpx;
    font-size: 30rpx;
}
.confirm-btn{
    width: 270rpx;
    height: 110rpx;
    background: #42B0CA;
    border-radius: 20rpx;
    color: #fff;
}
.confirm{
}
.all-sel{
    padding-left: 10rpx;
}
.selected{
    font-size: 26rpx;
    color: #CBF2FB;
} 