@import "/common/base/component/default-wxss/index.wxss";

.transition-box,.add-transition-box{
  position: fixed;
  width: 100%; 
  bottom: 0;
  left:0;
  z-index: 98;
}
.add-transition-box{
  left: 50%;
  bottom: 40%;
  transform: translate(-50%,-50%);
  z-index: 99; 
  background-color: #F7F4F8;
  border-radius: 20rpx;
  width: 600rpx;
}
.picker-view{
  width: 100%;
  height: 300rpx;
  background: #fff;
}
.picker-view-column{
  font-size: 30rpx;
  background-color: #fff;
}
.picker-header{
  font-size: 28rpx;
  height: 80rpx;
  border-radius: 12rpx 12rpx 0 0;
  background-color: #fff;
  box-sizing: border-box;
  padding: 0 20rpx;
}
.op-tip{
  font-size: 26rpx;
  color: rgba(38, 159, 102, 1);
} 