  padding-top:10rpx;
  background-color:#F7F4F8;
}
.service_btn_area .confirm_btn{
  width:100%;
  display:flex;
  height:88rpx;
  justify-content: center;
  align-items: center;
  background:#fff;
  color:#333;
}
.share_item{
  text-align:center;
  border-bottom:1px solid #efefef;
  position:relative;
}
.share_item .share_item_btn{
