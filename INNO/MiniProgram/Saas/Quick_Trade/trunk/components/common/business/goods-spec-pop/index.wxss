@import "/common/base/component/default-wxss/index.wxss";
page{
  --goods-spec-min-height: 920rpx;
  --sku-max-height: 360rpx;
  --goods-spec-max-height: calc(var(--goods-spec-min-height) + var(--sku-max-height));
}


.goods-spec-container{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  z-index: 10020;
}
.goods-spec-main{
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  background-color: #ffffff;
  min-height: var(--goods-spec-min-height);
  max-height: var(--goods-spec-max-height);
  padding: 24rpx 32rpx;
  display: flex;
  flex-direction: column;
}
.g-s-spec-detail{
  display: flex;
  margin-bottom: 40rpx;
}
.g-s-spec-image-con{
  width: 194rpx;
  height: 194rpx;
  margin-right: 28rpx;
  background: #D8D8D8;
  border: 1px solid #d8d8d8;
  border-radius: 12rpx;
}
.g-s-spec-image{
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}
.g-d-spec-info{
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  flex: 1;
}
.g-d-s-i-price{
  font-size: 36rpx;
  font-weight: 600;
  color: var(--main-color);
  line-height: 36rpx;
  margin-bottom: 8rpx;
}
.already-chosen{
  font-size: 28rpx;
  color: #7F7F7F;
  margin-bottom: 8rpx;
}
.gdsi-goods-sn{
  font-size: 28rpx;
  color: #b2b2b2;
  margin-bottom: 2rpx;
}
.g-s-sku-container{
  margin-bottom: 80rpx;
}
.g-s-sku-main{
  min-height: 60rpx;
  max-height: var(--sku-max-height);
}
.g-s-purchase-count-con{
  border-top: 1px solid #ebebeb;
  padding-top: 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}
.gspcc-prefix{
  font-size: 28rpx;
  color: var(--deep-text-color);
}
.gspcc-main{
  display: flex;
  align-items: center;
}
.gspcc-tips{
  color: #7f7f7f;
  font-size: 24rpx;
  margin-right: 24rpx;
}
.gspcc-number-control{
  display: flex;
  align-items: center;
}
.gspcc-minus,
.gspcc-plus{
  width: 48rpx;
  height: 48rpx;
  border: 1px solid #CACACA;
  border-radius: 4rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--deep-text-color);
  font-size: 36rpx;
  transition: opacity 0.1s ease;
}
.gspcc-minus.active,
.gspcc-plus.active{
  opacity: 0.5;
}
.gspcc-minus.disabled,
.gspcc-plus.disabled{
  color: #CACACA;
}
.gspcc-minus{
  margin-right: 8rpx;
}
.gspcc-number-input{
  font-size: 28rpx;
  width: 56rpx;
  text-align: center;
}
.gspcc-plus{
  margin-left: 8rpx;
}
.gsdtc-radio-group{
  padding: 12rpx 12rpx 12rpx 0;
  margin-bottom: 24rpx;
}
.gsdtc-radio-view{
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}
.gsdtc-radio-view:last-of-type{
  margin-bottom: 0;
}
.spec-radio{
  transform: scale(0.65);
  margin-bottom: 20rpx;
  display: block;
  transform-origin:top left;
}
.spec-shipping{
  font-size: 40rpx;
}
.g-s-footer{
  flex: 1;
  display: flex;
  align-items: flex-end;
  padding-bottom: env(safe-area-inset-bottom);
}
.g-s-purchase-btn-group{
  width: 100%;
  display: flex;
  align-items: center;
}
.g-s-purchase-btn-con{
  flex: 1;
  height: 100rpx;
  border-radius: 48rpx;
}
.g-s-purchase-btn{
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--main-color);
  transition: opacity 0.15s ease;
  border-radius: 48rpx;
  color: #ffffff;
}
.g-s-purchase-btn.disabled{
  color: #c5c8ce;
  background-color: #f7f7f7;
  border-color: #dcdee2;
}
.g-s-purchase-btn.active{
  opacity: 0.7;
}
.goods-spec-short-cut{
  position: absolute;
  top: 28rpx;
  right: 32rpx;
  display: flex;
  align-items: center;
}
.gssc-left{
  display: flex;
  align-items: center;
  padding-right: 24rpx;
  border-right: 1px solid #979797;
}
.gscc-menu-icon{
  width: 16rpx;
  height: 16rpx;
  font-size: 28rpx;
  color: #d8d8d8;
  margin-right: 24rpx;
  line-height: 16rpx;
}
.gscc-entry{
  color: #7f7f7f;
  font-size: 24rpx;
}
.gssc-right{
  padding-left: 24rpx;
}
.gssc-close{
  width: 32rpx;
  height: 32rpx;
}