@import "/common/base/component/default-wxss/index.wxss";
.sku-type-header{
  font-size: 28rpx;
  color: var(--deep-text-color);
  margin-bottom: 16rpx;
}
.sku-item{
  box-sizing: border-box;
  display: inline-block;
  padding: 13rpx 32rpx;
  border-radius: 10rpx;
  background-color: #ffffff;
  border: 1px solid #DDDDDD;
  margin-left: 2rpx;
  margin-right: 16rpx;
  margin-bottom: 12rpx;
  font-size: 28rpx;
  color: var(--tint-text-color);
  position: relative;
}
.sku-item.selected{
  color: var(--main-color);
  font-weight: bold;
}
.sku-item.selected::after{
  content: "";
  position: absolute;
  top:50%;
  left:50%;
  transform: translate(-50%, -50%);
  width: 100%;
  height: 100%;
  border: 2rpx solid var(--main-color);
  border-radius: 10rpx;
}
.sku-item.disabled{
  background-color: #F0F0F0;
}