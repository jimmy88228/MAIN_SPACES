<include src="/common/base/component/index.wxml" />

<window show="{{show}}" duration="{{windowDuration}}" bind:masktap="dismiss">
  <view class="poster-container" wx:if="{{show}}">
    <view class="canvas-container">
      <canvas
        type="2d"
        id="poster-canvas"
        class="poster-canvas"
        style="width: 100%; height: 100%;"
        disable-scroll
      />
    </view>
    <view class="poster-footer" style="visibility: {{posterLoaded ? 'visible' : 'hidden'}}">
      <button class="poster-save-btn" hover-class="active" catchtap="handleSaveBtnTap">点击保存海报</button>
    </view>
  </view>
</window>