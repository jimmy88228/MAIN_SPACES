<window show="{{show}}" bindmasktap="handleMaskTap" name="slide-from-bottom">
  <transition show="{{show}}" name="slide-from-bottom" class="goods-spec-container" customStyle="width: 100%;height: 100%">
    <view class="goods-spec-main">
      <view class="g-s-spec-detail">
        <view class="g-s-spec-image-con">
          <image class="g-s-spec-image" src="http://devimgtest.innourl.com/SAAS_IMAGE/images/INNO/goods/goods_thumb/20221209/20221209160641542_3016147.jpg" />
        </view>
        <view class="g-d-spec-info">
          <view class="g-d-s-i-price"><text class="gdsi-price-rmb">￥</text><text class="gdsi-price-text">199</text></view>
          <view class="already-chosen">
            <text class="already-chosen-text">已选xx</text>
          </view>
          <view class="gdsi-goods-sn">
            <text class="gdsi-prefix">商品编号 </text>
            <text class="gdsi-goods-sn-text">007123123912</text>
          </view>
        </view>
      </view>
      <view class="g-s-sku-container">
        <view class="g-s-sku-title">规格</view>
        <scroll-view scroll-y class="g-s-sku-main">
          <sku id="sku" show />
        </scroll-view>
      </view>
      <view class="g-s-purchase-count-con">
        <view class="gspcc-prefix">购买数量</view>
        <view class="gspcc-main">
          <view class="gspcc-tips">没人限购1件</view>
          <view class="gspcc-number-control">
            <view class="gspcc-minus disabled">-</view>
            <input class="gspcc-number-input" value="{{1}}" />
            <view class="gspcc-plus">+</view>
          </view>
        </view>
      </view>

      <view class="g-s-footer">
        <view class="g-s-purchase-btn-group">
          <btns class="g-s-purchase-btn">立即购买</btns>
        </view>
      </view>
    </view>
    <view class="goods-spec-short-cut">
      <view class="gssc-left">
        <view class="gscc-menu-icon iconfont icon-list"></view>
        <view class="gscc-entry">商品详情</view>
      </view>
      <view class="gssc-right">
        <view class="gssc-close icon-close" catchtap="toggle"></view>
      </view>
    </view>
  </transition>
</window>
<include src="/common/base/component/index.wxml" />