@import "/common/base/component/default-wxss/index.wxss";
@import "/common/base/app/default-wxss/index.wxss";
.tab-bar-container{
  --tab-bar-border-radius: 16rpx;
}
.tab-bar-container-box{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  /* background-image: linear-gradient(rgb(254,223,218), rgb(255,246,237)); */
}
.tab-bar-container{
  padding-top: var(--tab-bar-padding-top);
  padding-bottom: var(--tab-bar-bottom);
  border-radius: var(--tab-bar-border-radius); 
  background-color: none;
  z-index: 100;
}
.tab-bar {
  width: var(--tab-bar-width);
  height: var(--tab-bar-height);
  border-radius: var(--tab-bar-border-radius);
  background: var(--tab-bar-background);
  display: flex;
  box-shadow: var(--tab-bar-shadow);
  position: relative;
}
.tab-bar-middle-line{
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  z-index: 110;
  width: 1px;
  height: 40%;
  background-color: var(--tab-bar-middle-line-bg);
}
.tab-bar-list{
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
}
.tab-bar-item{
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
  padding: 12rpx;
  box-sizing: border-box;
  transition: all 0.15s ease;
  color: var(--tab-bar-font-color);
}
.tab-bar-item.active .tb-text{
  color: var(--tab-bar-selected-color);
}
.tab-bar-item:last-of-type{
  border-right: none;
}
.tb-image-con{
  width: 64rpx;
  height: 64rpx;
  margin-right: 8rpx;
  position: relative;
}
.tb-image{
  width: 100%;
  height: 100%;
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
}
.iphoneX_hole{
  padding-bottom:34px;
}
