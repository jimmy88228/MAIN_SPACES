/* pages/micro_mall/buy/buy_coupon.wxss */
.buy_coupon_page{
  padding-top:70rpx;
}
.no_use_coupon{
  padding:0px 20rpx; 
  background:#fff;
  width:100%;
  position:fixed;
  top:0px;
  left:0px;
  box-sizing:border-box;
  z-index:2;
  height:70rpx;
  line-height:70rpx;
}
.no_use_coupon .txt{
  display:table-cell;
  vertical-align: middle;
}
.coupon_radio{
  display:table-cell;
  vertical-align: middle;
  width:50rpx;
  padding:0px 10rpx;
}
.coupon_radio image{
  display:block;
}
.coupon_radio .radio_icon{
  width:40rpx;
}
.coupon_list{
  width:100%;
  padding:10rpx 0px;
}
.coupon_item{
  width:100%;
  display:table;
  padding:20rpx 30rpx;
  box-sizing:border-box;
}
.coupon_cont{
  display:table-cell;
}
.coupon_info{
  position:relative;
  /* min-height:226rpx; */
  background:#ccc;
}
.coupon_txt{
  position:absolute;
  left:20rpx;
  bottom:20rpx;
  color:#fff;
}
.conponValue{
  font-size:70rpx;
  margin-right:10rpx;
}
.coupon_img{
  width:620rpx;
  height:214.18rpx;
  display:block;
}
.coupon_crumbs{
  margin:0 auto;
  width:94%;
  background:#fff;
  border-bottom-left-radius: 6rpx;
  border-bottom-right-radius: 6rpx;
}
.useLimitTxt{
  padding:10rpx 20rpx;
  font-size:24rpx;
}
.limit{
  margin:5rpx 0px;
}
.crumbs_indicator{
  border-top:1px solid #e9e9e9;
  padding:20rpx 0px;
  text-align:center;
}

/*可用优惠券为空*/
.has_no_use_coupon{
  margin-top:150rpx;
  width:100%;
  text-align:center;
}
.has_no_use_coupon image{
  width:200rpx;
  display:block;
  margin:0 auto;
}
.has_no_use_coupon text{
  margin-top:10rpx;
  color:#7f7f7f;
}