page {
    height: 100%;
}

.main {
    width: 100%;
    height: 100%;
    padding: 30rpx;
    box-sizing: border-box;
    /* background: # ; */
}

.promote_box {
    background: #fff;
    width: 100%;
    border-radius: 15rpx;
    overflow: hidden;
    margin-bottom: 20rpx;
}

.contains {
    /* border-radius: 15rpx 15rpx 0 0; */
    display: flex;
    padding: 30rpx 20rpx;
    padding-right: 10rpx;
    border-bottom: 1px solid #efefef;
    box-sizing: border-box;
    width: 100%;
}

.left_side {
    border: 1px solid;
    padding: 0px 5rpx;
    font-size: 20rpx;
    height: 25rpx;
    line-height:25rpx;
    /* min-width: 50rpx; */
    white-space:nowrap;
    display: inline-block;
    justify-content: center;
    align-items: center;
    /* margin-top: 2rpx; */
}

.right_side {
    display: inline-flex;
    flex-direction: column;
    width: calc(100% - 64rpx);
    padding-left: 20rpx;
    box-sizing: border-box;
}

.title {
    font-weight: 700; 
    /* font-weight: 600;  */
    margin-bottom: 20rpx; 
    line-height: 30rpx;
    /* overflow: hidden;
    display: -webkit-box;
    text-overflow: ellipsis;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical; */
}

.i_b {
    display: inline-block;
}

.title_main, .time {
    color: #7f7f7f;
    font-size: 22rpx;
    word-break: break-all;
}
.p_10{
    /* padding-top: 8rpx; */
    padding-bottom: 10rpx;
}

.more_btn {
    width: 100%;
    padding: 15rpx 0;
    font-weight: bold;
}
._text{
  width: 100%;
  word-break: break-all;
}
