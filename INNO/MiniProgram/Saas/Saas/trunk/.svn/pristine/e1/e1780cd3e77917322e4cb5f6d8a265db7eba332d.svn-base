.head_area {
  width:100%;
  height: 80rpx;
  display: flex;
  position: relative;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding:0px 30rpx;
}
.area_l , .area_r{
  display:flex;
  align-items: center;
  white-space:nowrap;
}
.operate_item{
  padding: 10rpx 18rpx;
  background: #F0F0F0;
  border-radius: 100rpx;
  margin-right:20rpx;
  display:flex;
  min-width: 140rpx;
  font-size:24rpx;
  align-items: center;
  box-sizing: border-box;
}
.o_icon{
  width:42rpx;
  height:42rpx;
  margin-right:10rpx;
}
.o_txt{
  white-space:nowrap;
}
.header_right {
  height: 100%;
  display: inline-flex;
  align-items: center;
  padding-right: 40rpx;
}
.header_right_stay{
  height: 100%;
  display: inline-flex;
  align-items: center;
}
.search_stay{
  width:170rpx;
  height:60rpx;
  position: relative;
  margin-right:28rpx;
}
.act_search{
  z-index:2;
  background-color:#fff;
  position: absolute;
  top:0px;
  right:0px;
  width:170rpx;
  height:60rpx;
  border-radius:100rpx;
  border: 1px solid #DDDDDD;
  display:flex;
  align-items: center;
  padding:0px 20rpx;
  box-sizing:border-box;
  transition:all .35s;
}
.act_search.searching{
  width:620rpx;
}
.img_search{
  width:35rpx;
  height:35rpx;
  flex-shrink: 0;
  margin-right:10rpx;
}
.search_txt{
  color:#DDD;
}
.search_input{
  font-size: 24rpx;
  width:100%;
  display:inline-block;
}
.publish_btn{
  width:60rpx;
  height:60rpx;
  border-radius: 100%;
  overflow: hidden;
}
.cancel_btn{
  height:60rpx;
  line-height: 60rpx;
}


.placeholderStyle {
  font-size: 24rpx;
  color: rgba(51, 51, 51, 0.5);
}
.img_publish{
  width: 40rpx;
  height: 40rpx;
}
.search {
  height: 60rpx;
  position: relative;
  border-radius: 50rpx;
  box-sizing: border-box;
  width: 170rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}