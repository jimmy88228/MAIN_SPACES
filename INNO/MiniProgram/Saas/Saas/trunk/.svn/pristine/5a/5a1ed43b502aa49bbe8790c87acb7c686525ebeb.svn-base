/* pages/micro_mall/bargain/bargain/bargain_popup.wxss */
.bargain_content{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    position:fixed;
    top:50%;
    left:50%;
    width:620rpx;
    transform: translate(-50%,-50%);
    background-color:#fff;
    border-radius:34rpx;
    padding: 120rpx 0 50rpx 0;
    box-sizing: border-box;
}
.msg_img{
    width: 20rpx;
    height: 20rpx;
    position: absolute;
    right: 10rpx;
    top: 10rpx;
    padding: 20rpx;
}
.sign_img{
    width: 51rpx;
    height: 45rpx;
    margin-right: 20rpx;
}
.sign_img_wrapper{
    margin-bottom: 30rpx;
    font-size: 28rpx;
}
.help_tips{
    font-size: 34rpx;
    font-weight: 600;
    text-align: center;
    margin-bottom: 30rpx;
}
.price_box{
    margin-bottom: 60rpx;
    font-size: 38rpx;
    font-weight: 600;
}
.extra_tips{
    margin-top: 20rpx;
}
.interact{
    width: 380rpx;
    height: 84rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 30rpx;
    font-weight: 600;
    color: #fff;
    border-radius: 40rpx;
}
._i_b_m{
    display: inline-block;
    vertical-align: middle;
}
.btn_cancel{
    width: 200rpx;
    height: 60rpx;
    color: #bfbfbf;
    font-size: 24rpx;
    border-radius: 40rpx;
    margin-top: 18rpx;
    border: 1px solid #efefef;
}
.user_box{
    position: absolute;
    width: 160rpx;
    height: 160rpx;
    border-radius: 50%;
    left: 50%;
    top: 0;
    transform: translate(-50%,-50%);
    overflow:hidden;
}
.img_user{
    width: 100%;
    height: 100%;
}