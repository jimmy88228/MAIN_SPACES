.box{
  padding: 20rpx 40rpx;
  box-sizing: border-box;
  position: relative;
}
._C_7f{
  color: #7f7f7f;
}
.select_box{
  padding: 0 30rpx;
  box-sizing: border-box;
  border:  1px solid #bebebe;
  border-radius: 8rpx;
}
.f_box{
  display: flex;
  align-items: center;
}
.s_item{
  display: flex; 
  align-items: center;
  flex-wrap: wrap;
  border-bottom: 1px solid #bebebe;
  box-sizing: border-box;
  padding: 24rpx 0;
}
.s_item>icon,
.s_item>view{
  transition: all 0.05s ease;
}
.s_item:last-child{
  border-bottom: 0;
}
.order_input_con{
  width: 100%;
  margin-top: 10rpx;
}
.order_input_con>textarea{
  width: 100%;
  min-height: 100rpx;
  padding: 16rpx 20rpx;
  box-sizing: border-box;
  border: 1px solid #EAEAEA;
}

.img_select{
  /* border: 1px solid transparent; */
  width: 30rpx;
  height: 30rpx;
}
.s_t{
  padding-left: 8rpx;
  line-height: 24rpx;
  font-size: 32rpx;
}
.select_box_pic{
  display: flex;
  flex-wrap: wrap;
  position: relative;
}
.s_item_pic{
  display: flex;
  flex-direction: column;
  position: relative;
  width: 100%;
}
.s_item_pic1{
  width: 100%;
}
.s_item_pic2{
  width: 50%;
}
.s_item_pic>.option_name{
  padding: 16rpx;
}
.img_select_pic{
  width: 30rpx;
  height: 30rpx;
}
.img_select_pic_bg{
  width: 100%;  
}
.select_pic_box{
  position: absolute;
  right: 0;
  top: 0;
  display: flex;
  align-items: center; 
  padding: 22rpx 26rpx;
  background: rgba(0,0,0,0.3);
  color: #fff;
  font-size: 24rpx;
  border-radius: 4rpx;
}
.select_box_star{
  /* display: flex;
  align-items: center;
  flex-wrap: wrap;
  justify-content: space-between; */
  width: 100%;
  padding: 0 3%;
  box-sizing: border-box;
}
.select_box_star_line{
  position: absolute;
  bottom: 0rpx;
  display: block;
  content: "";
  width: calc(100% - 60rpx - 3%);
  height: 2rpx;
  background-color: #EFEFEF;
  opacity: 0.4;
}
.select_box_star+.order_input_con{
  margin-top: 24rpx;
}
.select_box_star+.tips_line{
  transform: translateY(50%);
}
.rate_content{
  color: #bbbbbb;
  font-size: 28rpx;
}
.tips_line{
  color: #FF0000;
}
.tips_line text{
  transform: translateX(4rpx);
}
.tips_line::before{
  content: "*";
  display: inline-block;
  vertical-align: middle;
  transform: translateY(20%);
  font-size: 24rpx;
}
.box.warn .select_box,
.box.warn .select_box_pic{
  border: 1px solid red;
}

/* 定制 */
.box.vote_star{
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 40rpx;
}

.spec_select_box{
  padding: 0 95rpx;
}
.select_box_star{
  /* display: inline-flex; */
  display: block;
  margin-left: auto;
  width: unset;
} 
.select_box_star.special{
  transform: scale(1.2);
  margin:0 auto;
}
.spec_select_box>view{
  width: 100%;
  height: 110rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-bottom: 28rpx;
  background-color: #5ece68;
  color: #fff;
  transition: opacity 0.25s ease;
}
.spec_select_box>view:hover{
  opacity: 0.5;
}
.spec_select_box>view.termination{
  color: #222222;
  background-color: #FAFAFA;
}