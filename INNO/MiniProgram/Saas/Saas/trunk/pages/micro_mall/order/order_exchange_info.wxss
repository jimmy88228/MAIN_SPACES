/* pages/micro_mall/order/order_exchange_info.wxss */

.order_exchange_page {
    /* padding:20rpx; */
    box-sizing: border-box;
    padding-bottom: 80rpx;
    height: 100%;
    width: 100%;
}

.phcolor {
    color: #7f7f7f;
}

.padding_box .padding_0 {
    padding: 10rpx 10rpx 10rpx 0;
}

.padding_box {
    color: #7f7f7f;
    padding: 20rpx;
    padding-left: 40rpx;
    background: #fff;
    margin-bottom: 18rpx;
    font-size: 26rpx;
    border-top:1px solid rgba(243,243,243,1);
}

.b_box_title {
    padding-top: 10rpx;
    padding-bottom: 10rpx;
}

.b_box_row {
    padding: 10rpx 0;
}

.b_box_tit {
    vertical-align: middle;
    width: 120rpx;
    /* text-align:justify;
  text-align-last:justify; */
}

.flex_between {
    display: flex;
    justify-content: space-between;
}
.msg_content{
    display: inline-block;
    min-width: 150rpx;
    box-sizing: border-box;
    padding-right: 20rpx;
    text-align: left;
}
.flex_style{
    padding: 10rpx 0;
    font-size: 26rpx; 
}
.flex_style.title_p{
    padding: 0; 
    padding-bottom: 20rpx;
}
.return_order_num {
    width: 200rpx;
}

.b_box_cont {
    text-align: left;
    vertical-align: middle;
    /* padding-left: 10rpx; */
}

.img_box {
    width: 215rpx;
}

.img_box_stay {
    width: 215rpx;
    height: 215rpx;
    margin: 0px auto;
    border: 1px solid #e6e6e6;
    position: relative;
    overflow: hidden;
    margin-right: 24rpx;
}

.img_box_stay image {
    width: 100%;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    -moz-transform: translate(-50%, -50%);
}

.g_info_row {
    /* padding:10rpx 0px; */
}

.goodsPrice {
    position: absolute;
    bottom: 6rpx;
    left: 0;
    font-weight: 600;
}

.order_num_tip {
    margin-top: 15rpx;
    margin-bottom: 15rpx; 
    color: #d72929;
    font-size: 22rpx;
}

.return_order_operate {
    overflow: hidden;
}

.return_order_num_input {
    color: #171717;
    display: inline-block;
    vertical-align: middle;
    background: rgba(243, 243, 243, 1);
    font-size: 24rpx;
    width: 520rpx; 
    /* border: 1px solid #e6e6e6; */
    border-radius: 5rpx;
    line-height: 70rpx;
    height: 70rpx;
    /* float: left; */
    box-sizing: border-box;
    padding-left: 20rpx;
    /* margin-right: 20rpx; */
}
.shipping_box{
    margin-top: 15rpx;
}
.shipping_name{
    /* margin-top: 15rpx; */
}
.cell_top {
    vertical-align: top;
    position: relative;
}

.goodsName {
    margin: 16rpx 0 12rpx 0;
    overflow: hidden;
    text-overflow: ellipsis;  
    display: -webkit-box;
    -webkit-line-clamp:1;
    -webkit-box-orient:vertical;
}

.goodsColor {
    display: inline-block;
}

.goodsSize {
    display: inline-block;
    padding-left: 10rpx;
}

.goodsNum {
    margin: 10rpx 0;
    margin-top: 6rpx;
}

.save_order_input {
    display: inline-block;
    vertical-align: middle;
    width: 145rpx;
    /* float: right; */
    font-size: 26rpx;
    border-radius: 5rpx;
    line-height: 70rpx;
    height: 70rpx;
    text-align: center;
    margin-left: 15rpx;
}

.back_box { 
    position: fixed; 
    left: 0;
    right: 0;
    bottom: 0;
    padding: 14rpx 28rpx;
    text-align: right;
    background: #fff;
    border-top: 1px solid rgba(243,243,243,1);
}

.back {
    display: inline-flex;
    justify-content: center;
    align-items: center;
    width: 136rpx;
    height: 52rpx;
    border: 1rpx solid rgba(178, 178, 178, 1);
    border-radius: 6rpx;
}

.name,.phone{
    display: inline-block;
}

.name_padding{
    padding-right: 45rpx;
}

.address_box{
    width: 100%;
    box-sizing: border-box;
}

.address_top{
    padding: 10rpx 0;   
}

.head_status{
    width: 100%;
    padding: 20rpx 0;
    padding-top:5rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-bottom: 18rpx;
    background: #fff;
}
.init_h{
    height: 20rpx;
}
.adress_title,.adress_name{
    padding-bottom:12rpx; 
    word-break: break-all;
} 

.m_b_0{
    margin-bottom: 0;
}
.m_t_18{
    margin-top: 18rpx;
}
.border_0{
    border: none;
}
.break{
    word-break: break-all; 
}
.p_t_5{
    padding-top: 5rpx;
}
.p_t_15{
    padding-top: 15rpx;
}
.p_t_6{
    padding-top: 6rpx;
}
.p_10{
    padding: 10rpx;
}
.copy-btn{
    margin-left: 20rpx;
    margin-right: 15rpx;
    color: #333;
    border: 1px solid #333;
    border-radius: 20rpx;
    padding: 6rpx 10rpx;
    font-size: 22rpx;
    line-height: 20rpx;
    white-space: nowrap;
}

.opreate_btns {
  display: inline-flex;
  /* align-items: center; */
  /* height: 54rpx; */
  padding: 0 24rpx;
  margin-left: 15rpx;
  border-radius: 36rpx;
  font-size: 24rpx;
  height: 50rpx;
}


.order_opreate_btns {
  width: 100%;
  position: fixed;
  left: 0px;
  bottom: 0px;
  display: flex;
  align-items: center;
}

.order_opreate_btns_stay {
  /* padding: 16rpx 0px; */
  padding-right: 20rpx;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  min-height: 88rpx;
  /* padding-left: 168rpx; */
  position: relative;
  justify-content: flex-end;
  flex-wrap: wrap;
}

.dialog_content_slot{
  display: block;
  box-sizing: border-box;
  width: 100%;
  max-height: 200rpx;
  overflow-y: scroll;
  word-wrap: break-word;
  word-break: normal;
  white-space: pre-wrap;
  text-overflow: ellipsis;
  font-size: 28rpx;
  color: #7f7f7f
}
.label {
  display: inline-block;
  /* width: 85rpx; */
  text-align: center; 
  font-size: 20rpx;
  /* background: rgb(254, 234, 240); */
  background: #fff;
  margin-left: 15rpx; 
  vertical-align: middle;
  line-height: 30rpx; 
  padding: 5rpx 10rpx; 
  border-radius: 16rpx;
}