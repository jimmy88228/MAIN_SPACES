/* pages/micro_mall/activity/goods_seckill.wxss */
.category_page{
  width:720rpx;
  background:#fff;
  margin:0 auto;
}
.goods_seckill{
  position:fixed;
  top:0px;
  left:0px;
  width:100%;
  height:100%;
  background-position:left top;
  background-repeat:no-repeat;
  background-size:100% auto;
}
.goods_seckill_scroll{
  width:100%;
  height:100%;
}
.seckill_tit{
}
.seckill_tit image{
  display:block;
  width:100%;
  margin: 0 auto;
}
.count_down_area{
  text-align:center;
  padding-top:30rpx;
}
.count_down{
  display:inline-block;
  padding:0px 20rpx;
  padding-left:50rpx;
  background-position:left 16rpx center;
  background-size:25rpx auto;
  background-repeat:no-repeat;
}
.count_down_txt{
    color:#7f7f7f;
    font-size:24rpx;
    margin-right: 11rpx
}
.count_down_num{
  display:inline-block;
}
.goods_list{
  width:100%;
  padding:20rpx 35rpx;
  box-sizing:border-box;
}
.goods_item{
  width:310rpx;
  display:inline-block;
  vertical-align: top;
  background:#fff;
  text-align:center;
  box-sizing:border-box;
  position:relative;
  margin-bottom:36rpx;
  margin-right: 30rpx;
}
.goods_item:nth-child(2n){
    margin-right: 0
}
.goods_img_box{
  margin:0 auto;
  width:310rpx;
  height:310rpx;
  position:relative;
}
.goods_img_stay{
  width:100%;
  height:100%;
  overflow:hidden;
  position:absolute;
  top:0px;
  left:0px;
}
.goods_img_stay image{
  width:100%;
  position:absolute;
  top:50%;
  left:50%;
  transform: translate(-50%,-50%);
}
.seckill_item_tip{
  position:absolute;
  top:20rpx;
  right:30rpx;
  width:100rpx;
  height:100rpx;
}
.goods_info{
  width:310rpx;
  box-sizing:border-box;
  text-align:left;
  padding:0 18rpx; 
}
.goods_name{
  box-sizing:border-box;
  text-align:left;
  word-break:break-all;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space: nowrap; 
  -webkit-line-clamp:1;
  -webkit-box-orient:vertical;
  min-width: 0;
}

.goods_price{
  min-height:70rpx;
  line-height: 30rpx;
  padding-top: 12rpx;
}
.market_price{

}
.shop_price{
  font-size:20rpx;
}
.good_integral{
  font-size:20rpx;
}

.has_no_goods{
  width:100%;
  text-align:center;
  margin-top:200rpx;
}
.has_no_goods image{
  width:200rpx;
  display:inline-block;
}
.has_no_goods .txt{
  margin-top:-20rpx;
  color:#7f7f7f;
}
.text_crossed{
    margin: 0;
    padding-left: 14rpx;
}

.property_box {
    position: relative;
    width: 100%;
    padding: 15rpx 7rpx 12rpx 7rpx;
    color: rgb(176, 176, 176);
    box-sizing: border-box;
}

.propertyClass {
    height: 100%;
    display: flex;
    align-items: center;
    margin-left: 8rpx;
    font-size: 20rpx;
    color: rgba(127, 127, 127, 1);
}

.label_content {
    margin-right: 7rpx;
    margin-bottom: 5rpx;
    display: inline-flex;
}

.label_box {
    width: 100%; 
    display: flex;
    flex-wrap: wrap;
    min-height: 12rpx; 
    padding-left:18rpx;
    padding: 15rpx 0 10rpx 18rpx;
}
.tag_img{ 
    width: 100%;
    margin-right: 6rpx;
    margin-bottom: 5rpx;
} 
.salesVolume{
  font-size: 22rpx;
  padding-top: 22rpx;
  line-height: 22rpx;
  color: #777;
}
.sale_title{
  padding-right: 10rpx;
}
.price_box{
  display: flex;
  align-items: center;
}