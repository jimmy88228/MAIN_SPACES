/* pages/micro_mall/prepaid/prepaid_card_erp.wxss */
page {
  background: #fff;
}

.canUseShop {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding-top: 10rpx;
  padding-right:30rpx;
  box-sizing: border-box;
}

.shop_logo {
  width: 45rpx;
  height: 45rpx;
}

.shop_text {
  padding: 0 5rpx;
  margin-left: 2rpx;
  line-height: 26rpx;
}

