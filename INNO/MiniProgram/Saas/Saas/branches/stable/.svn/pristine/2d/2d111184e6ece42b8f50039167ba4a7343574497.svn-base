page {
    background: rgba(239, 239, 239, 1);
}

.desc_tit {
    padding-left: 20rpx;
    line-height: 57rpx;
    height: 57rpx;
    position: relative;
    /* background: #fff8fa; */
}

.goods_comment {
    padding-bottom: 34rpx;
}

.comment_item {
    /* border-top: 1px solid #efefef; */
    padding: 26rpx 25rpx 30rpx 25rpx;
    line-height: 66rpx;
    margin-bottom: 12rpx;
    background: #fff;
}

.comment_info {
    position: relative;
    margin-bottom: 30rpx;
}

.comment_content {
    line-height: 26rpx;
}

.user_img_box, .user_name {
    display: inline-block;
    vertical-align: middle;
    color: #333;
}

.user_img_box {
    width: 40rpx;
    height: 40rpx;
    overflow: hidden;
    border-radius: 100rpx;
    position: relative;
    margin-right: 10rpx;
}

.user_img_box image {
    position: absolute;
    width: 100%;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
}

.time {
    position: absolute;
    right: 0rpx;
    top: 50%;
    transform: translateY(-50%);
}

.goods_share_img_list {
    overflow: hidden;
    margin-left: -18rpx;
}

.goods_share_img_item {
    float: left;
    width: 162.5rpx;
    height: 162.5rpx;
    position: relative;
    border: 1px solid #efefef;
    box-sizing: border-box;
    font-size: 0;
    margin: 10rpx 0 10rpx 20rpx;
}

.goods_share_img_item image {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    width: 100%;
    height:100%;
}

.order_goods_info {
    /* color: #7f7f7f; */
    margin-top: 10rpx;
    margin-bottom: 10rpx;
    position: relative;
    color: rgba(0, 0, 0, 0.5);
}

.more_comment_box {
    text-align: center;
}

.more_comment {
    display: inline-block;
    line-height: 56rpx;
    height: 56rpx;
    padding: 0 56rpx;
    border: 1px solid #7f7f7f;
    border-radius: 4px;
}

.big_img_hover {
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    background: #000;
    z-index: 10000;
}

.img_swiper {
    height: 100%;
    width:100%;
    /* margin-top: calc(15% + 90rpx); */
}

.slide_image {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    width: 100%;
    height:100%;
}

.score_box {
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    text-align: right;
}

.start {
    width: 26rpx;
    margin-left: 7rpx;
    vertical-align: middle;
}

.start:last-child {
    /* margin-right: 0; */
}
.ab_bg_color{
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
}
.reply_msg_view{
  padding:20rpx;
  padding-right:15rpx;
  padding-bottom:0px;
  border-top:1px solid #efefef;
  line-height:normal;
}
.reply_msg_table{
  color:#b2b2b2;
}
.reply_msg_tip{}
.reply_msg_tip .tip_line{
  width:6rpx;
  height:20rpx;
  margin-right:10rpx;
  display:inline-block;
  vertical-align: middle;
}
.reply_msg_tip .tip_txt{
  display:inline-block;
  vertical-align: middle;
  font-size:18rpx;
}
.reply_msg_cont{
  padding-top:15rpx;
}