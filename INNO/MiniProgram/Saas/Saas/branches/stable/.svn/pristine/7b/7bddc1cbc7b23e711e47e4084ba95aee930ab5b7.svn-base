page{
  height: 100%;
}
.search_box{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  z-index: 2;
}
.scroll{
  width: 100%;
  height: calc(100% - 100rpx);
  /* box-sizing: border-box; */
  padding-top: 100rpx;
}

.package_content{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.pag_box{
  flex: 1;
  flex-shrink: 0;
  min-width: calc(50% - 10rpx);
  max-width: calc(50% - 10rpx); 
  margin-bottom: 20rpx;
  /* min-width: 50%;
  max-width: 50%;
  padding-right: 20rpx; */
  box-sizing: border-box;
  font-size: 22rpx;
  border-radius: 6rpx;
  overflow: hidden;
  position: relative;
  margin-bottom: 30rpx;
  box-shadow: 0 0 15rpx 1px rgba(127, 127, 127, 0.15);
}
/* .pag_box:nth-child(2n){
  padding-right: 0;
}  */
.pag_img_box{
  position: relative;
  padding-top: 100%;
  box-sizing: border-box;
}
.pag_img{
  width: 100%;
  height: 100%;
  display: block;
  position: absolute;
  top: 50%;
  left: 0px;
  transform: translateY(-50%);
}
.pag_time{
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  padding:10rpx 0;
  box-sizing: border-box;
  text-align: center;
  background: rgba(127, 127, 127, 0.5);
  color: #dfdfdf;
  font-size: 20rpx;
}
.pag_time text{
  color: #fff;
  text-align: center;
}
.pag_msg_box{
  box-sizing: border-box;
  padding:10rpx 15rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #fff;
}
.pag_msg{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.pag_msg_title{
  font-size: 20rpx;
  line-height: 36rpx;
  color: #7f7f7f;
}
.pag_msg_price{
  line-height: 36rpx;
}
.char_cut{
  padding:0 4rpx
}
.pag_btn{
  padding:0 20rpx;
  color: #fff;
  border-radius: 6rpx;
}