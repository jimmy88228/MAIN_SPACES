.main{
  width: 100%;
  bottom: 0;
  left: 0px;
  position: fixed;
  box-sizing: border-box;
  background-color:#F0F0F0;
  font-family:PingFangSC-Regular,PingFang SC;
}
.main_tip{
  line-height:55rpx;
  font-size:30rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
}
.main_cont{
  padding:0px 20rpx;
}
.choice_title{
  padding:32rpx 0px;
  font-weight:400;
  color:rgba(23,23,23,1);
  line-height:33rpx;
  font-size:24rpx;
}
.choice_bonus{
  /* margin:0px; */
}
.change_area{
  display:flex;
  justify-content: center;
  align-items: center;
  margin-bottom:18rpx;
}
.change_p{
  border:1px solid rgba(221,221,221,1);
  width:40rpx;
  height:40rpx;
  border-radius: 100%;
  position:relative;
}
.change_p ._line{
  width:50%;
  height:4rpx;
  display:block;
  background-color:#000;
  position:absolute;
  top: 50%;
  left:50%;
  transform: translate(-50%,-50%);
}
.change_p .v_line{
  transform: translate(-50%,-50%) rotate(90deg);
}
.change_input{
  width:60rpx;
  margin:0px 10rpx;
  text-align:center;
  font-size:26rpx;
  font-weight:500;
  color:rgba(0,0,0,1);
  line-height:37rpx;
}
.operate_btns{
  text-align:center;
  padding:30rpx;
  background-color:#fff;
}
.o_btn{
  width:100%;
  height:88rpx;
  background:rgba(0,184,12,1);
  border-radius:10rpx;
  font-weight:400;
  color:#B2B2B2;
  color:#fff;
  position:relative;
  display:flex;
  justify-content: center;
  align-items: center;
}
.share_icon{
  width:46rpx;
  height:46rpx;
  display:block;
  margin-right:20rpx;
}
._o_btn{
  position:absolute;
  top:0px;
  left:0px;
  width:100%;
  height:100%
}
.invalid{
  opacity:0.4;
}
