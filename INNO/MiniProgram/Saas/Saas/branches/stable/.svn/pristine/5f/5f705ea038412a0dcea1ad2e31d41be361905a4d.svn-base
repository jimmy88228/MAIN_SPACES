.main {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 600rpx;
  height: 600rpx;
  padding: 300rpx 0 30rpx 0;
  border-radius: 60rpx;
  background-color: #ffffff;
  z-index: 180;
  overflow: hidden;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.top_img {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 10;
  width: 100%;
  transform: scale(1.5) translateY(-165rpx);
}

.user_avatar {
  position: absolute;
  top: 20%;
  left: 50%;
  z-index: 11;
  transform: translateX(-50%);
  width: 152rpx;
  height: 152rpx;
  border-radius: 50%;
}

.assistance_msg {
  font-size: 40rpx;
  letter-spacing: 0;
  color: #222222;
}

.assistance_msg.status-1 {
  color: #F0620F;
}

.assistance_tips {
  padding: 20rpx 0;
  font-size: 24rpx;
  color: #7F7F7F;
  letter-spacing: 0;
}

.btn_con {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.confirm_btn {
  width: 320rpx;
  height: 88rpx;
  background: #FAFAFA;
  border-radius: 44rpx;
  font-size: 30rpx;
  color: #7F7F7F;
}