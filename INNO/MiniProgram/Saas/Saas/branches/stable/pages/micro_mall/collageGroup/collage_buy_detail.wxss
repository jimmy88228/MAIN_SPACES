/* pages/micro_mall/collageGroup/collage_buy_detail.wxss */

.info_row {
    margin-bottom: 22rpx;
}
.info_row:last-child{
        margin-bottom:0;
}
.info_row_last {
    margin-bottom: 0;
}

.row_l {
    width: 140rpx;
}
.g_row {
    margin-bottom: 12rpx;
}
.collage_buy_detail {
    padding-bottom: 100rpx;
}
.collage_buy_detail.collage_buy_detail_X {
    padding-bottom: calc(100rpx + 34px);
}

.detail_a_tit {
    /* padding-top:29rpx; */
    padding-bottom: 20rpx;
}
.detail_a_cont .info_row {
    display: flex;
    justify-content: space-between;
    line-height: 26rpx;
}
.buy_detail_area {
    padding: 30rpx;
    position: relative;
    overflow: hidden;
}
.link_r_icon {
    position: absolute;
    /* bottom:30rpx; */
    top: 50%;
    transform: translateY(-50%);
    right: 25rpx;
    width: 50rpx;
}
.shipping_way_cont {
    height: 60rpx;
    margin-top: 10rpx;
    padding:0px 100rpx;
    /* padding-top:20rpx; */
}
.shipping_way_txt {
    display: inline-block;
    vertical-align: middle;
}
.shipping_way_cont .radio_select{
  position:static;
  display:inline-block;
  vertical-align: middle;
  width:35rpx;
  height:35rpx;
  transform: translate(0);
  margin-right:10rpx;
}
.shipping_way_cont .radio_select image {
    display: block;
    width: 100%;
    height: 100%;
}
.my_collage_info {
}
.activity_img {
    width: 211rpx;
}
.activity_img_stay {
    width: 100%;
    box-sizing: border-box;
}
.activity_img_stay .img {
    width: 100%;
    padding-top: 100%;
    position: relative;
    overflow: hidden;
}
.activity_img_stay image {
    position: absolute;
    top: 50%;
    left: 50%;
    display: block;
    width: 100%;
    transform: translate(-50%, -50%);
    -moz-transform: translate(-50%, -50%);
    border: 1px solid #e9e9e9;
}
.activity_info {
    padding-left: 30rpx;
}
.show_remarks_text {
    padding: 20rpx;
    width: 100%;
    height: 150rpx;
    box-sizing: border-box;
    border: 1px solid #e9e9e9;
}
.buy_detail_textarea {
    padding: 20rpx;
    width: 100%;
    height: 150rpx;
    box-sizing: border-box;
    border: 1px solid #e9e9e9;
}
.detail_operate {
    position: fixed;
    left: 0px;
    bottom: 0px;
}

.detail_operate_l {
    padding-right: 23rpx;
}
.detail_operate_r {
    width: 375rpx;
}
.detail_operate .operate_btn {
    width: 375rpx;
    line-height: 90rpx;
    height: 90rpx;
}
.placeholder_class {
    font-size: 26rpx;
    color: #7f7f7f;
}
.lineT {
    text-decoration: line-through;
    margin-left: 2rpx;
}
.activity_name {
    margin-bottom: 14rpx;
}  
.order_total_fixed {
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    position: fixed;
    left: 0px;
    bottom: 0px;
    background: #fff;
    border-top: 1px solid #e9e9e9;
    /* display: table; */
    display: inline-flex;
    justify-content: space-between;
    z-index: 2; 
    /* box-shadow: 0px 1px 8px 0px rgba(0, 0, 0, 0.1); */
}
.total_tit {
    vertical-align: middle;
    margin-right: 30rpx;
}
.total_val {
    font-weight: bold;
    font-size: 32rpx;
    vertical-align: middle;
}
.order_submit_box {
    height: 100%;
    display: inline-flex;
    align-items: center;
    justify-content: flex-end;
    padding-right: 18rpx;
    /* width:  */
}
.order_submit {
    /* display: table-cell; */
    vertical-align: middle;
    color: #fff;
    text-align: center;
    width: 383rpx;
    height: 86rpx;
    border-radius: 10rpx;
    display: inline-flex;
    justify-content: center;
    align-items: center;
}
