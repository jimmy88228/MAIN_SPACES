.q_product{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.box{
  /* padding: 20rpx 40rpx; */
  padding: 40rpx 0;
  position: relative;
}
.g_image{
  margin-bottom: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.g_image>image{
  width: 408rpx;
  height: 408rpx;
  display: block;
  border-radius: 20rpx;
  background-color: grey;
}
.g_name{
  flex: 1;
}
.g_spec{
  margin-top: 8rpx;
}
.g_spec,
.g_name>.q_product_name{
  font-size: 24rpx;
  color: #999999;
  text-align: center;
}
