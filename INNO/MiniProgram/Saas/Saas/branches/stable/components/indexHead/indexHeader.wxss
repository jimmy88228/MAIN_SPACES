.search_wrapper{
    display: flex;
    align-items: center;
    padding: 0 20rpx;
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    box-sizing: border-box;
}
.toStore{
    display: flex;
    align-items: center;
    justify-content: center;
    width:60rpx;
    height:60rpx;
    border-radius:50%;
    flex-shrink: 0;
}

.scan{
  display: flex;
  align-items: center;
  justify-content: space-around;
  flex-shrink: 0;
  padding: 0 12rpx; 
  width: 154rpx;
  height: 60rpx;
  border-radius: 45rpx;
  background-color: rgba(240, 240, 240, 0.8);
  box-sizing: border-box;
  margin-left: 10rpx;
}
.scanTip{
  font-size:24prx;
}
.img_scan{
  width: 46rpx;
  height: 46rpx;
} 
.store_brand,.p_scan{
  margin-left: 15rpx;
  box-sizing: content-box;
}
.scan_box{
  width: 30rpx;
  height: 30rpx;  
  position: relative;
}
.scan_label_box{
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  z-index: 2;
  display: flex;
  align-items: center;
  width: 80%;
  height: 50%;
}
.scan_label{
  margin-right: 2rpx;
  width: 1px;
  height: 100%;
  background-color: #fff;
}
.scan_bg{
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  z-index: 1;
  width: 80%;
  height: 50%;
  background-color: #000;
}
.scan_lt{
  position: absolute;
  width: 4rpx;
  height: 4rpx;
  left: 0;
  top: 0;
  background-color: transparent;
  border-top: 1px solid #000;
  border-left: 1px solid #000;
}
.scan_rt{
  position: absolute;
  width: 4rpx;
  height: 4rpx;
  right: 0;
  top: 0;
  background-color: transparent;
  border-top: 1px solid #000;
  border-right: 1px solid #000;
}
.scan_lb{
  position: absolute;
  width: 4rpx;
  height: 4rpx;
  left: 0;
  bottom: 0;
  background-color: transparent;
  border-left: 1px solid #000;
  border-bottom: 1px solid #000;
}
.scan_rb{
  position: absolute;
  width: 4rpx;
  height: 4rpx;
  right: 0;
  bottom: 0;
  background-color: transparent;
  border-right: 1px solid #000;
  border-bottom: 1px solid #000;
}
.icon_store{
    display: block;
    width: 40rpx;
    height: 40rpx;
}
.input_content{
    display: flex;
    align-items: center;
    margin-left: 20rpx;
    /* width:535rpx; */
    width:100%;
    height:60rpx;
    border-radius:30rpx;
    padding: 0 20rpx;
}
.icon_search{
    display: inline-block;
    vertical-align: middle;
    width: 40rpx;
    height: 40rpx;
}
.icon_brand{
  position: absolute;
  left: 20rpx;
