.options_select{
    position: relative;
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    padding-left: 10rpx;
  }
  .current-name {
    text-align: center;
    word-wrap: normal;
    /* overflow: hidden; */
  }
  .seletc_title{
    position: relative;
    width: 100%;
    height: 100%;
    box-sizing: border-box; 
    padding-right: 30rpx; 
    /* height: 62rpx; */
    /* border-radius: 12rpx; */
  }
  
  .seletc_title::after {
    position: absolute;
    display: block;
    right: 10rpx;
    top: 50%;
    transform: translateY(-50%);
    margin-top: 6rpx;
    content: '';
    width: 0;
    height: 0;
    border: 10rpx solid transparent;
    border-top: 10rpx solid #999;
  }
  .option_list{
    position: absolute;
    left: 0;
    top: 76rpx;
    width: 100%;
    padding: 12rpx 20rpx 10rpx 20rpx;
    border-radius: 6rpx;
    box-sizing: border-box;   
    z-index: 99;
    box-shadow: 0rpx 0rpx 10rpx 1px rgba(0, 0, 0, 0.1);
    background-color: #fff;
  }
  .option{
    display: block;
    width: 100%;
    line-height: 70rpx;
    border-bottom: 1rpx solid #eee;
  }
  .option:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }