.follow_icon_close{
     position: absolute;
     right: 10rpx;
     top: 10rpx;
     color:#a1a1a1;
     width:40rpx;
     height:40rpx;
     transform: rotate(45deg);
}
.follow_icon_close::before{
  display:block;
  content:"";
  width:100%;
  height:5rpx;
  background-color:#a1a1a1;
  position:absolute;
  top:50%;
  left:50%;
  transform: translate(-50%,-50%);
}
.follow_icon_close::after{
  display:block;
  content:"";
  height:100%;
  width:5rpx;
  background-color:#a1a1a1;
  position:absolute;
  top:50%;
  left:50%;
  transform: translate(-50%,-50%);
}
.loading_wait{
     display:none;
}