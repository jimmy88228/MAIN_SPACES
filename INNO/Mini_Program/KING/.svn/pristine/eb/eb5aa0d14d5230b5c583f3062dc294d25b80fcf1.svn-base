/* pages/micro_mall/sign/app/rule/rule.wxss */
.sign_rule_popup{
    display: flex;
    align-items: center;
    justify-content: center;
    position:fixed;
    top:50%;
    left:50%;
    width:540rpx;
    transform: translate(-50%,-50%);
    background-color:#fff;
    border-radius:20px;
    padding: 0 auto;
    padding-bottom: 90rpx;
}
.sign_jump_area{
  position:absolute;
  left:50%;
  bottom:17rpx;
  transform: translateX(-50%);
  padding:10rpx;
}
.sign_jump{
  /* border:1px solid #efefef; */
  border-bottom:1px solid #ccc;
  color:#ccc;
  height:30rpx;
  text-align:center;
  line-height:30rpx;
}
.reward_wrapper{
    width:411rpx;
    margin: 40rpx auto;
    margin-bottom:10rpx;
}
.reward{
    width:411rpx;
    display:block;
}
.sign{
    font-size:36rpx;
    color:#000;
    margin:0 auto;
    margin-bottom:22rpx;
    text-align: center;
}
.sign_tips{
    text-align: center;
    font-size:26rpx;
}
.bound_tips{
    text-align: center;
    font-size:26rpx;
}
.close{
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    bottom: -120rpx;
    width:68rpx;
    height:68rpx;
    border:2px solid rgba(238, 238, 238, 1);
    border-radius:50%;
}
.icon{
    position: relative;
    width: 27rpx;
    height: 27rpx;
}
.icon:before, .icon:after{
    position: absolute;
    left: 0;
    top: 10rpx;
    content: "";
    width: 27rpx;
    height: 2px;
    background: #fff;
    border-radius: 2px;
}
.icon:before{
    transform: rotate(45deg);
}
.icon:after{
    transform: rotate(-45deg);
}