/* pages/micro_mall/sign/app/rule/rule.wxss */
page{
    --main-color:rgba(255,58,0,1);
}
.sign_rule_popup{
    display: block;
    /* align-items: center;
    justify-content: center; */
    position:fixed;
    top:50%;
    left:50%;
    width:560rpx;
    transform: translate(-50%,-50%);
    padding: 0 auto;
    /* padding-bottom: 20rpx; */
}
.sign_jump_area{
  /* position:absolute;
  left:50%;
  bottom:17rpx;
  transform: translateX(-50%); */
  width:100%;
  text-align:center;
  padding:50rpx 0 30rpx 0;
  box-sizing: border-box;
}
.sign_jump{
  /* display:inline-block;
  border-bottom:1px solid #ccc; */
  display: inline-flex;
  justify-content: center;
  align-items: center;  
  padding: 10rpx 26rpx;
  border-radius: 40rpx;
  font-size: 22rpx;
}
.reward_wrapper{
    width:100%;
    height: 208rpx;
    position: relative;
    /* margin: 40rpx auto; */
    /* margin-bottom:10rpx; */
}
.reward {
    width:100%;
    height: 100%;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    display:block;
    z-index: 1;
}
.reward_msg{
    position: relative;
    z-index: 2;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    text-align: center;
}
.reward_msg .title{
    font-size: 42rpx;
    color: #fff;
    margin: 10rpx 0;
    font-weight: bold;
    letter-spacing: 1px;
}
.reward_msg .tip{
    font-size: 24rpx;
    color: #682100;
    margin: 20rpx 0;
}

.sign_box{
    line-height:40rpx;
    text-align: center;
    background: #fff;
    border-radius: 0 0 40rpx 40rpx;
    overflow: hidden;
}
.sign{
    font-size:36rpx;
    color:#000;
    margin:0 auto;
    margin-bottom:22rpx;
    text-align: center;
}
.sign_tips{ 
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    padding: 60rpx 0;
}
.sign_tip{
    position: relative;
    z-index: 2;
    display: inline-block;
    padding: 0 10rpx;
    background: #fff;
    color: #7f7f7f;
}
.sign_title{
    font-size: 38rpx;
    color: var(--main-color);
}
.line{
    position: absolute;
    z-index: 1;
    background: #efefef;
    width: 48%;
    height: 2px;
    
}

.bound_tips{
    text-align: center;
    font-size: 32rpx;
    line-height: 60rpx;
    color: rgba(255, 74, 3, 1);
    font-weight: bold;
}
.close{
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    bottom: -90rpx;
    width:56rpx;
    height:56rpx;
    /* border:2px solid rgba(238, 238, 238, 1); */
    border-radius:50%;
    background: #dfdfdf;
}
.icon{
    position: relative;
    width: 60%;
    height: 60%;
}
.icon:before, .icon:after{
    position: absolute;
    left: 0;
    top: 50%;
    content: "";
    width: 100%;
    height: 2px;
    background: #171717;
    opacity: 0.8;
    border-radius: 2px;
}
.icon:before{
    transform: translateY(-50%) rotate(45deg);
}
.icon:after{
    transform: translateY(-50%) rotate(-45deg);
}
.bound_lrbox{
    box-sizing: border-box;
    padding: 0 45rpx;
}
.bound_lrbox_tips{
    display: flex;
    color: #7f7f7f;
    padding: 16rpx 0;
    border-bottom: 1px solid #efefef;
}
.tips_name{
    min-width: 160rpx;
    flex-shrink: 0;
    text-align: left;
}
.t_n_cp{
    padding-top: 13rpx;
    box-sizing: border-box;
}
.tips_msg{
    width: 100%;
    display: flex;
    justify-content: flex-end;
    flex-wrap: wrap;
    color: var(--main-color);
    font-weight: bold;
}
.coupon{
    padding: 6rpx 10rpx;
    border-radius: 8rpx;
    color: rgba(255,99,0);
    background: rgba(255,246,242);
    margin-top: 7rpx;
    margin-bottom: 7rpx;
    margin-left: 14rpx;
}
.coupon:first-child{
    margin-left: 0;
}
.bold{
    font-weight: bold;
}