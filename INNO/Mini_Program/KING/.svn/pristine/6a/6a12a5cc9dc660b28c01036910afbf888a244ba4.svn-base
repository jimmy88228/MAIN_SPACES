/* pages/component/login/login_by_phone.wxss */
.code_form{
  position: fixed;
  top:0px;
  left:0px;
  z-index:-1;
  width:100%;
  height:100%;
}
.code_page_bg{
  position: absolute;
  z-index:100;
  width:100%;
  height:100%;
  background:rgba(0,0,0,0.5);
  top:0px;
  left:0px;
}
.code_page{
  position:absolute;
  top:50%;
  left:50%;
  z-index:100;
  padding:60rpx 30rpx;
  background:#fff;
  transform: translate(-50%,-50%);
  border-radius:10rpx;
  text-align:center;
}
.component_close{
  position:absolute;
  padding:20rpx;
  width:20rpx;
  height:20rpx;
  top:0px;
  right:0px;
  transform: rotate(45deg);
}
.component_close::before{
  content:"";
  width:30rpx;
  height:4rpx;
  position:absolute;
  top:50%;
  left:50%;
  transform: translate(-50%,-50%);
  background-color:#797979;
}
.component_close::after{
  content:"";
  height:30rpx;
  width:4rpx;
  position:absolute;
  top:50%;
  left:50%;
  transform: translate(-50%,-50%);
  background-color:#797979;
}
.pay_code_view {
  width: 100%;
}
.pay_code {
  width: 450rpx;
  height: 450rpx;
  margin: 0 auto;
}
.barCanvas {
  width: 500rpx;
  height: 150rpx;
  margin: 0 auto;
}
.code_text {
  margin-top: 20rpx;
  font-size: 24rpx;
}