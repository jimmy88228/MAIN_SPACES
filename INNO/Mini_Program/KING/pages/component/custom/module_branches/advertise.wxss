
.ad_module {
    width: 100%;
    display: flex;
    display: -webkit-flex;
}

.ad_module .ad_box {
    position: relative;
    flex: 1;
    overflow: hidden;
    font-size:0;
    margin:0px;
    padding:0px;
    margin-top:-1px;
    margin-left:-1px;
}

.ad_module image {
    width: 100%;
    overflow: hidden; 
    display: flex;
}
.ad_img{
  display:block;
  background-color:#fff;
}
.btn_link {
    position: absolute;
    top: 0px;
    left: 0px;
    right: 0px;
    bottom: 0px;
    z-index: 10;
    opacity: 0;
} 
 

/* common */

/*热区*/
.map_area {
    position: absolute;
    z-index: 10;
}
.videoBox{
  width: 750rpx;
  height: 422rpx;
}
.play_icon_area {
    position: absolute;
    top: 0px;
    left: 0px;
    width: 100%;
    height: 100%;
    z-index: 11;
}
  
.ad_module image.play_icon, .play_icon {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 120rpx;
    height: 120rpx;
    transform: translate(-50%, -50%);
    background: rgba(0, 0, 0, 0.4);
    border-radius: 100%;
}