.tab_box {
    width: 100%;
    height: 106rpx;
    position: relative;
    display: flex;
    /* justify-content: center; *//* align-items: center; */
}

.content {
    width: 20%;
    font-size: 26rpx;
    color: #777;
    /* line-height: 26rpx; */
    height: 100%;
    display: inline-flex;
    justify-content: center;
    align-items: center;
}

.active {
    font-weight: bold;
    font-size: 28rpx;
}

.line {
    position: absolute;
    bottom: -2rpx;
    width: 50rpx;
    height: 6rpx;
    transition: all 0.32s;
    color: rgba(205, 113, 143, 1);
    border-radius: 3rpx;
    margin: 0 50rpx;
    box-sizing: border-box;
    z-index:11;
}
