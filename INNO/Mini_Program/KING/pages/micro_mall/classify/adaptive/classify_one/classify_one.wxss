/* pages/micro_mall/test/test.wxss */

.classify_area {
  position: fixed;
  top: 1rpx;
  left: 0px;
  width: 100%;
  height: 100%;
  overflow: hidden;
  text-align: center;
  box-sizing: border-box; 
  padding-top: 100rpx;
}

.classify_tip {
  width: 150rpx;
  height: 100%;
  float: left;
  box-sizing: border-box;
}

.classify_name {
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom-width: 1px;
  border-bottom-color: #efefef !important;
  border-bottom-style: solid;
  box-sizing: border-box;
  height: 107rpx;
  background: rgba(251, 251, 251, 1);
  position: relative;
}

.func_name {
  width: 100%;
  border-left-style: solid;
  border-left-color: #fff;
  border-left-width: 6rpx;
  padding: 10rpx 0;
  padding-right: 6rpx;
  font-size: 26rpx;
  color:rgba(0, 0, 0, 1);
}

.classify_view {
  width: 600rpx;
  height: 100%;
  overflow: hidden;
}

.view_ul {
  width: 100%;
  box-sizing: border-box;
  /* padding: 5rpx; */
  /* margin-bottom: 10rpx; */
}

.view_li {
  width: 50%;
  /* padding: 5rpx; */
  vertical-align: middle;
  position: relative;
  box-sizing: border-box;
}
.view_li_stay{
  padding:8rpx;
  width:100%;
  position: relative;
  box-sizing: border-box;
}

.go_link_btn {
  position: absolute;
  top: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
  background: none;
}

.view_li image {
  width: 100%;
  height: 100%;
  /* height:auto; */
  display: block;
}

.lines {
  width: 100%;
  position: fixed;
  top: 0px;
  left: 0px;
  border-top: 1rpx solid rgba(230, 230, 230, 1);
}

.f_wrap {
  flex-wrap: wrap;
  display: flex;
  width: 100%;
}
.good_img {
  width: 100%;
  padding-top: 100%;
  position: relative;
  overflow: hidden;
}

.good_img image {
  width: 100%;
  height: 100%;
  display: block;
  position: absolute;
  top: 50%;
  left: 0px;
  transform: translateY(-50%);
}

/* 搬 */

.property_box {
  background: #f8f8f8;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 10rpx 4rpx;
  color: #7f7f7f;
  box-sizing: border-box;
}

.property {
  height: 100%;
  display: flex;
  align-items: center;
  text-align: left;
  margin-left: 8rpx;
  font-size: 20rpx;
  color: rgba(127, 127, 127, 1);
}

.goods_info {
  padding: 10rpx 5rpx;
  padding-right: 10rpx;
  width: 100%;
  box-sizing: border-box;
}

.tag_img_list {
  text-align: left;
  max-width: 100%;
}

.tag_img_list image {
  display: inline-block;
  vertical-align: top;
  margin: 8rpx 6rpx;
}

.tag_img_list .tag_img {
  max-width: 100%;
  max-height: 30rpx;
}

.good_name {
  /* margin-left: 15rpx; */
  padding-left: 10rpx;
  /* margin: 5rpx 0px; */
  box-sizing: border-box;
  text-align: left;
  word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 24rpx;
  /* min-height:60rpx; */
}

.good_sku {
  width: 100%;
  /* height: 75rpx; */
  font-size: 24rpx;
  /* display:flex;
  justify-content: space-between;
  justify-items: center; */
  display: block;
  text-align: left;
  white-space: nowrap;
  margin-top: 15rpx;
  font-weight: bold;
}

.present_p {
  text-align: left;
  font-size: 24rpx;
  padding: 3rpx 15rpx;
  font-weight: 600;
}

.original_p {
  padding: 0rpx 15rpx;
  margin-left: 0px;
  color: #545454;
  opacity: 0.5;
  font-size: 24rpx;
  font-weight: normal;
}

.text_crossed {
  text-decoration: line-through;
  color: #777;
  font-size: 22rpx;
  margin: 0px 5rpx;
}


/* 自适应 */ 
.module_type0 .property_box {
  padding: 16rpx 6rpx;
}

.module_type2 .view_li:nth-child(3n+1) .property_box {
  padding: 16rpx 6rpx;
}

.module_type5 .property_box {
  padding: 6rpx 2rpx;
}

.module_type5 .view_li {
  width: 100%;
  display: flex;
}
.module_type5 .view_li_stay{
  display: flex;
  width:100%;
}
.module_type5 .good_img {
  width: 34%;
  padding-top: 34%;
}

.module_type5 .good_sku {
  position: absolute;
  bottom: 0;
}

.module_type5 .goods_info {
  width: 66%;
}

.marqueeView{
  display: block
}
.marqueeBox{
  display: block!important;
  box-sizing:inherit;
} 
.ipx_p_b{
  padding-bottom: 68rpx !important;
  /* padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom); */
  box-sizing:border-box;
}
.customTab{
  padding-bottom:90rpx !important;
  box-sizing:border-box;
}
.ipx_p_b.customTab{
  padding-bottom: 158rpx !important;
}