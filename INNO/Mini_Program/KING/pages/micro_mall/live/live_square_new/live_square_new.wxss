page {
  background-color: #ffffff;
}

.square_area {
  width: 750rpx;
  min-height: 100vh;
}

.header_tip {
  width: 750rpx;
  height: 100rpx;
  background-color: #ECECEC;
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 50rpx;
}

.notice_img {
  width: 42rpx;
  vertical-align: middle;
}

.notice_label {
  display: inline-block;
  font-size: 26rpx;
  height: 100rpx;
  line-height: 100rpx;
  margin-left: 10rpx;
}

.notice_left {
  height: 100rpx;
  margin-left: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.notice_right {
  width: 180rpx;
  height: 60rpx;
  text-align: center;
  background-color: #E8053E;
  color: #ffffff;
  font-size: 24rpx;
  margin-right: 20rpx;
  line-height: 60rpx;
  border-radius: 5rpx;
}

.navibar {
  width: 700rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  margin: 15rpx 25rpx;
}

.list {
  width: 700rpx;
  height: auto;
  margin-left: 25rpx;
  margin-bottom: 40rpx;
  display: flex;
  flex-direction: row;
  position: relative;
  z-index: 1;
}

.coverImg {
  width: 320rpx;
  display: inline-block;
  border-radius: 10rpx;
}

.intro {
  text-align: left;
  margin-left: 25rpx;
  width: 350rpx;
  display: flex;
  position: relative;
  flex-direction: column;
  justify-content: space-between;
}

.live_name {
  margin-top: 10rpx;
  width: 100%;
  height: auto;
  font-size: 32rpx;
}

.live_btn {
  background-color: #E8053E;
  color: #fff;
  width: 160rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 24rpx;
  position: relative;
  z-index: 2000;
  font-weight: 700;
}

.btn_checked {
  background-color: #aCaCaC;
}

.footer{
   width:750rpx;
   height:30rpx;
   background-color:#FFFFFF;
}
.subscribe--live-player-subscribe__btn {
  border-radius: 0rpx !important;
  margin: 0 !important;
  font-weight:700 !important;
}

.subscribe--live-player-hasSubscribe {
  border-radius: 0rpx !important;
  margin: 0 !important;
  font-weight:700 !important;
}