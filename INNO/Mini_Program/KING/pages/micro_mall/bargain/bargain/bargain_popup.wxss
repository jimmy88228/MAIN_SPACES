/* pages/micro_mall/bargain/bargain/bargain_popup.wxss */
.bargain_content{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    position:fixed;
    top:50%;
    left:50%;
    width:540rpx;
    transform: translate(-50%,-50%);
    background-color:#fff;
    border-radius:20px;
    padding: 50rpx 60rpx 80rpx 60rpx;
    box-sizing: border-box;
}
.msg_img{
    width: 20rpx;
    height: 20rpx;
    position: absolute;
    right: 10rpx;
    top: 10rpx;
    padding: 20rpx;
}
.sign_img_wrapper, .sign_img{
    width: 182rpx;
    height: 206rpx;
}
.sign_img_wrapper{
    margin-bottom: 30rpx;
}
.help_tips{
    font-size: 34rpx;
    font-weight: 600;
    text-align: center;
    margin-bottom: 30rpx;
}
.price_box{
    margin-bottom: 60rpx;
    font-size: 28rpx;
    font-weight: 600;
}
.extra_tips{
    margin-top: 20rpx;
}
.interact{
    width: 400rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 28rpx;
    font-weight: 600;
    color: #fff;
    border-radius: 40rpx;
}