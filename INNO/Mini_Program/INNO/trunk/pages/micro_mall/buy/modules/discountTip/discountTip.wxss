@import '/static/iconFont/font.wxss';
.no-choose-discount{
  background-color:#fff;
  padding:30rpx;
}
.n-c-cont{
  position:relative;
  overflow: hidden;
  border-radius: 10rpx;
}
.n-c-img{
  width:100%;
  background-color:#efefef;
  height:140rpx;
}
.n-c-tip{
  position:absolute;
  top:0px;
  left:0px;
  font-size:26rpx;
  padding: 5rpx 10rpx;
  background-color:#D21834;
  color:#fff;
  border-bottom-right-radius: 10rpx;
}
.choose-discount{
  background-color:#fff;
}
.c-d-header{
  padding:20rpx 30rpx;
  padding-right: 15rpx;
}
.c-d-cont{
  width:100%;
}
.c-d-cont-item{
  padding-left: 30rpx;
}
.cont-item-stay{
  align-items: stretch;
  width:100%;
  box-sizing: border-box;
  padding:20rpx;
  padding-left:0px;
  border-top:1px solid #efefef;
}
.c-d-goods{
  width:150rpx;
  height:150rpx;
  background-color:#EEEEEE;
  border-radius: 10rpx;
  overflow: hidden;
}
.c-d-goods-img{
  width:100%;
  height:100%;
}
.c-d-detail{
  width:100%;
  box-sizing: border-box;
  flex: 1;
  display: inline-flex;
  flex-direction: column;
  justify-content: space-between;
}
.c-d-operate{
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  align-items: flex-end;
}
.c-d-remove{
  border:1px solid #b2b2b2;
  color:#b2b2b2;
  height:38rpx;
  padding:0px 17rpx;
  border-radius: 100rpx;
  display:flex;
  align-items: center;
  justify-content: center;
}