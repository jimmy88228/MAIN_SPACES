.right_inner:last-child{
    padding-bottom: 20rpx;
}
.btn_group{
    position: absolute;
    right: 0;
    width: 606rpx;
    height: 126rpx;
    background: white;
    bottom: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    transform: translateX(110%);
    transition: all .32s;
    visibility: hidden;
    box-shadow: 0px 15px 10px -15px #efeded inset;
}
.hide_btn{
    transform: translateX(0);
    visibility: visible;
}
.btn_reset{
