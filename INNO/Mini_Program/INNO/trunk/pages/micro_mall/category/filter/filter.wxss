.item{
    height:66rpx;
    line-height: 66rpx;
    text-align: center;
    background:rgba(255,255,255,1);
    border:1px solid rgba(221, 221, 221, 1);
    border-radius:4px;
    margin-right: 15rpx;
    font-size:24rpx;
    margin-bottom: 15rpx;
    min-width: 164rpx;
    padding: 0 30rpx;
    box-sizing:border-box;
}
.item.active{
    background:rgba(205,113,143,1);
    color: white;
}
.right_inner{
    margin-right: 28rpx;
    padding-top: 30rpx;
}
.fixed{
    max-height: 160rpx;
    overflow: hidden;
}
.lines{
    border-top: 1rpx solid rgba(221, 221, 221, 1);
    /* margin: 33rpx 0 32rpx 0; */
}
.right_inner:last-child .content{
    border: none;
}
