page{
    height: 100%;
} 
.filter{
    position: fixed;
    z-index: 1;
    top:190rpx;
    left:0px;
    width: 100%;
    height:calc(100% - 190rpx);
    background:rgba(0,0,0,0.5);
}  
.right_panel{
    position: absolute;
    right: 0;
    top: 0; 
    width: 606rpx;
    padding: 0 0 0 28rpx;
    box-sizing: border-box;
    background: #fff;
    transform: translateX(110%);
    transition: all .32s;
    box-shadow: 0px 15px 10px -15px #efeded inset;
    height: 100%;
}
.hide_panel{
    transform: translateX(0);
}
.showFilter{
    visibility: visible;
}
.hideFilter{
    visibility: hidden;
}
.icon_wrapper{
    position: relative;
}
.arrow{
    display: block;
    width: 20rpx;
    height: 20rpx;
}
.arrow:before{
    content: "";
    display: block;
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    left: 5rpx;
    top: 10rpx;
}
.arrow:after{
    content: "";
    display: block;
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    left: -30rpx;
    top: -10rpx;
}
.header{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.title{
    font-size: 24rpx;
    color: #333;
}
.content{
    display: flex;
    flex-wrap: wrap;
    margin-top: 30rpx;
    padding-bottom: 15rpx;
    border-bottom: 1rpx solid rgba(221, 221, 221, 1);
    box-sizing: border-box;
    /* border-bottom: 1rpx solid rgba(221, 221, 221, 1); */
    /* padding-bottom: 48rpx;
    margin-bottom: 32rpx; */
}
