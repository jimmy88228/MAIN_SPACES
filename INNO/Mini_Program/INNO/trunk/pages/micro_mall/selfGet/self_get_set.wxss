/* pages/micro_mall/selfGet/self_get_set.wxss */

.self_get_page{
  padding:20rpx;
}
.page_main_btn{
  margin:70rpx;
  text-align:center;
}
.page_main_btn .l_default_btn{
  width:260rpx;
  height:80rpx;
  color:#fff;
  border-radius:6rpx;
  margin:0 auto;
}
.input_box.clerk_box{
  margin-bottom:0;
  height: 104rpx;
  padding-right:0;
  transition: all 0.3s;
  flex-direction: column;
}
.input_box.clerk_box.toggle{
  height: 364rpx;
}
.input_item{
  position:relative;
}
.arrow{
  position: absolute;
  top: 50%;
  right: 40rpx;
  width: 16rpx;
  height: 16rpx;
  border-top: 1px solid #7f7f7f;
  border-right: 1px solid #7f7f7f;
  transform:translate(0,-50%) rotate(45deg);
  background:transparent;
  transition: all 0.3s;
}
.arrow.toggle{
  transform: translate(0,-50%) rotate(135deg);
}
.quick_get{
  position:absolute;
  top:50%;
  right:0px;
  background:#000;
  color:#fff;
  border-radius:200rpx;
  display:flex;
  justify-content: center;
  align-items: center;
  min-width:144rpx;
  height:54rpx;
  transform: translateY(-50%);
  z-index:10;
}
.select_store{
  background:#000;
  color:#fff;
  border-radius:200rpx;
  display:flex;
  justify-content: center;
  align-items: center;
  min-width:144rpx;
  height:54rpx;
}
.store_input{
  position:relative;
}
.store_input .select_store{
  position:absolute;
  top:50%;
  right:0px;
  transform: translateY(-50%);
  -moz-transform: translateY(-50%);
}
._input_box{
  height: 50rpx;
}
._input{
  height: 100%;
}
.clerk_head{
  height: 100rpx;
  flex-shrink: 0;
}
.clerk_title,.clerk_name{
  /* height: 100rpx; */
}
.scroll{
  width: 94%;
  padding-left: 154rpx;
  box-sizing: border-box;
  height: 260rpx;
  background:#fff;
  position: relative;
  z-index: 2;
  margin-top: -20rpx;
  padding-bottom: 20rpx;
  opacity: 0;
  transition: all 0.3s;
}
.scroll.toggle{
  opacity: 1;
}
.s_item{
  line-height:60rpx;
}