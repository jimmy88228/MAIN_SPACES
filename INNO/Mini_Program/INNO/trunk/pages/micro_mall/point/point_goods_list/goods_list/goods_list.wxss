@import "/app.wxss";
page{
    height: 100%;
}
.scroll_view_box {
    flex: 1;
}

scroll-view {
    width: 100%;
    box-sizing: border-box; 
    height: calc(100% - 188rpx);
}
.wrappers{
    padding: 0 20rpx;
}
.goods_list {
    padding: 0 10rpx;
    padding-bottom: 45rpx;
    position: relative;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}

.goods_item {
    width: 49%;
    background: #fff;
    margin-bottom:10rpx;
    position: relative;
}

.goods_item:nth-child(1), .goods_item:nth-child(2) {
    margin-top: 0;
}

.goods_img {
    display: block;
    width: 100%;
    height: 360rpx;
}

.goods_name {
    padding: 0px 10rpx;
    margin-top: 19rpx;
    margin-bottom: 16rpx;
    /* height:30rpx; */
    color: #333;
    word-break: break-all;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    font-size: 22rpx;
    line-height: 22rpx;
    /* line-height: 37rpx; */
}

.label {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 60rpx;
    background: #000;
    color: #fff;
    margin-top: 22rpx;
}

.content {
    font-size: 28rpx;
    /* color: rgba(193, 92, 135, 1); */
    line-height: 37rpx;
    margin-left: 10rpx;
    font-weight: bold;
}

.coupon_box {
    box-sizing: border-box;
    padding: 18rpx;
    /* margin: 0 20rpx; */
    margin-bottom: 20rpx;
    width:100%;
    background: rgba(255, 255, 255, 1);
    border-radius: 10rpx;
    border: 1px solid #efefef;
    box-sizing: border-box;
}
