.counpon {
    width: 490rpx;
    height: 245rpx;
    /* height: 185rpx; */
}

.counpon_content {
    width: 184rpx;
    flex-basis: 184rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 245rpx;
    background:rgba(251,251,251,1);
    position:relative;
}
.counpon_content .counpon_line{
  border-left:6rpx dashed #fff;
  position:absolute;
  top:0px;
  left:0px;
  transform: translateX(-50%);
  width:0px;
  height:100%;
}
.counpon_content .top_clip{
  content:"";
  width:25rpx;
  height:25rpx;
  background-color:#fff;
  position:absolute;
  top:0px;
  left:0px;
  transform: translate(-50%,-50%);
  border-radius:100%;
  box-shadow: 0 -5rpx 0px rgba(205,113,143, .3) inset;
  z-index:10;
}
.counpon_content .bottom_clip{
  content:"";
  width:25rpx;
  height:25rpx;
  background-color:#fff;
  position:absolute;
  bottom:0px;
  left:0px;
  transform: translate(-50%,50%);
  border-radius:100%;
  box-shadow: 0 5rpx 0px rgba(205,113,143, .3) inset;
  z-index:10;
}



