page{
  background-color:#fff !important;
}

.main_content {
  /* padding: 28rpx 20rpx; */
  border-bottom: 1px solid #efefef;
}

.coupon_bg {
  width: 710rpx;
  height:355rpx;
  /* height:200rpx; */
  display:block;
  overflow: hidden;
}

.coupon_box {
  position: relative;
  padding:25rpx 20rpx;
  width:100%;
  /* height:250rpx; */
  box-sizing:border-box;
  color: #fff;
  background-color:#F4F4F4;
}

.coupon_value {
  position: absolute;
  top: 50%;
  left: 60rpx;
  transform: translateY(-50%);
}

.line {
  width: 1rpx;
  height: 60rpx;
  position: absolute;
  left: 320rpx;
  top: 50%;
  transform: translateY(-50%);
  background: #fff;
}

.intro {
  position: absolute;
  right: 126rpx;
  top: 50%;
  transform: translateY(-50%);
  line-height: 1.6;
  color: #fff;
}

.coupon_info {
  padding:0px 25rpx;
}
.coupon_info_txt{
  padding-top:46rpx;
  position:relative;
}
.exchange_number{
  position:absolute;
  top:0px;
  right:0px;
  padding: 20rpx 10rpx;
  font-size: 22rpx;
  padding-top: 46rpx;
  color: #7f7f7f;
}
.coupon_info .value {
  margin-right: 10rpx;
}

.coupon_name {
  margin-top: 12rpx;
}

.exchange_btn {
  margin: 46rpx 0;
  margin-top:40rpx;
  width:100%;
  height:88rpx;
  border-radius:6rpx;
  color: #fff;
}
.intro_box{
  padding-right:35rpx;
  padding-top:18rpx;
}
.intro_item {
  display: flex;
  align-items: flex-start;
  margin: 33rpx 0;
  font-size: 24rpx;
}

.item_name {
    color: #7f7f7f;
  padding: 0 45rpx 0 35rpx;
}

.item_value {
    flex-basis: 540rpx;
    width: 540rpx;
  line-height: 1.6;
  color: #000;
}
