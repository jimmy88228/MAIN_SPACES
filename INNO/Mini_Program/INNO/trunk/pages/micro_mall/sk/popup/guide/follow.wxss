.follow_bg{
  position:fixed;
  top:0px;
  left:0px;
  width:100%;
  height:100%;
  background:rgba(0,0,0,0.6);
  z-index:99;
}
.follow_page{
  position:fixed;
  top:50%;
  right:50%;
  transform: translate(50%,-50%);
  z-index:100;
  width:170rpx;
  height:170rpx;
}
.login_page{
  position:absolute;
  top:50%;
  right:50%;
  transform: translate(50%,-80%) scale(.5);
  width:600rpx;
  z-index:2;
}
.login_page_cont{
  width:100%;
  max-height:800rpx;
  border-radius:20rpx;
  overflow: hidden;
}
.login_view_bg{
  width:100%;
  display:block;
  opacity: 0;
}
.login_view_logo{
  width:258rpx;
  height:258rpx;
  display:block;
  margin:0 auto;
  margin-top:116rpx;
  margin-bottom:129rpx;
}
.follow_icon_area{
  position:absolute;
  top:50%;
  left:50%;
  width:170rpx;
  height:170rpx;
  opacity: 0;
  transform:translate(-50%,-50%);
}
.follow_icon{
  display:block;
  width:170rpx;
  height:170rpx;
}
.operate_btn_view{
  width:100%;
  height:100rpx;
  display:flex;
  justify-content: center;
  align-items: center;
  margin:0 auto;
  background:linear-gradient(180deg,rgba(254,31,14,1) 0%,rgba(250,96,34,1) 100%);
  color:#fff;
  font-size:30rpx;
}
.get_number_btn{
  position:absolute;
  top:0px;
  left:0px;
  width:100%;
  height:100%;
  z-index:5;
}
.component_close{
  position: absolute;
  padding: 20rpx;
  width: 70rpx;
  height: 70rpx;
  opacity: 1;
  bottom: -60rpx;
  left: 50%;
  transform: translate(-50%, 100%) rotate(45deg);
  border-radius: 100%;
  overflow: hidden;
  z-index:10;
  box-sizing:border-box;
  border:1px solid #fff;
}
.component_close::before{
  content:"";
  width:30rpx;
  height:4rpx;
  position:absolute;
  top:50%;
  left:50%;
  transform: translate(-50%,-50%);
  background-color:#fff;
}
.component_close::after{
  content:"";
  height:30rpx;
  width:4rpx;
  position:absolute;
  top:50%;
  left:50%;
  transform: translate(-50%,-50%);
  background-color:#fff;
}