.list_swiper{
  transition: height .35s;
}
.swiper_stay{
  background: #fff;
  position:absolute;
  top:50%;
  left:50%;
  transform: translate(-50%,-50%);
  overflow:hidden;
  width:100%;
}
.share_bg{
  width:100%;
  height:100%;
  display:block;
}
.code_info{
  position:absolute;
  bottom:20rpx;
  right:20rpx;
  text-align:center;
}
.code_img{
  position:relative;
  display: inline-block;
  
}
.code_img_bg{
  width:130rpx;
  height:130rpx;
  display:block;
}
.user_head{
  width:43%;
  height:43%;
  display:block;
  position:absolute;
  top:50%;
  left:50%;
  transform: translate(-50%,-50%);
  border-radius:100%;
}
.staff_code{
  color:#333;
  padding:5rpx 0px;
}
.code_txt{
  color:#7f7f7f;
  padding:5rpx 0px;
}