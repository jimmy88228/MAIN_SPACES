.window-ext {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.dl-dialog {
    z-index: 1;
    width: 640rpx;
    box-shadow: 0 0 20rpx 10rpx rgba(0, 0, 0, 0.1);
    border-radius: 4rpx;
    box-sizing: border-box;
    background-color: white;
    padding: 80rpx 30rpx 30rpx 30rpx;
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.dl-title {
    font-size: 30rpx;
    font-weight: bold;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    display: flex;
    flex-direction: row;
    align-items: flex-start;
}

.dl-box {
    margin-top: 60rpx;
    width: 520rpx;
    height: 140rpx;
    border: 1px solid #eee;
    display: flex;
    flex-direction: column;
    justify-content: center;
    position: relative;
}

.dl-sub-title {
    background-color: white;
    color: var(--text-sub-color);
    position: absolute;
    max-width: 80%;
    padding: 0 20rpx;
    top: -40rpx;
    left: 50%;
    transform: translateX(-50%);
}

.dl-code {
    font-size: 56rpx;
    font-weight: bold;
}

.dl-tip {
    font-size: 22rpx;
    color: var(--text-tips-color);
    margin-top: 30rpx;
}

.dl-desc {
    font-size: 22rpx;
    font-weight: bold;
    margin-top: 15rpx;
}

.dl-btn {
    margin-top: 55rpx;
    width: 100%;
}
