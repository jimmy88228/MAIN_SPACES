:host {
	width: 100%;
}

.nav-stay {
	width: 100%;
}

.nav {
	width: 100%;
	box-sizing: border-box;
	height: 0;
}

.fixed {
	position: fixed;
	left: 0;
	right: 0;
	top: 0;
	z-index: 100;
}

.nav-bg {
	position: absolute;
	left: 0;
	right: 0;
	top: 0;
	bottom: 0;
	background: white;
}

.nav-body {
	position: relative;
	width: 100%;
	height: 100%;
	display: flex;
	flex-direction: row;
	align-items: center;
}

.nav-logo {
	margin-left: 20rpx;
	width: 0;
	height: 0;
	transform-origin: 0 0;
	transition: transform 300ms ease-out;
}

.nav-logo.big {
	transform: scale(1.3);
}