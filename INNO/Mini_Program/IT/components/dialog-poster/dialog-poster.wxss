.dl-dialog {
    z-index: 1;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 550rpx;
    height: 880rpx;
    box-shadow: 0 0 20rpx 10rpx rgba(0, 0, 0, 0.1);
    border-radius: 8rpx;
    box-sizing: border-box;
    background-color: white;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    transform-origin: 50%, 50%;
    overflow: hidden;
}

.dl-dialog.dl-dialog-long {
    height: 950rpx;
}

.dl-goods-img {
    flex: none;
    width: 550rpx;
    height: 550rpx;
    border-top-left-radius: 8rpx;
    border-top-right-radius: 8rpx;
    background-color: #efefef;
    border-bottom: 1px solid #f2f2f2;
}

.dl-box {
    flex: none;
    width: 100%;
    padding: 30rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: row;
}

.dl-l {
    flex: none;
}

.dl-l.dl-promini-logo {
    width: 110rpx;
    height: 110rpx;
    display: block;
}

.dl-r {
    flex: 1;
    display: flex;
    margin-left: 30rpx;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    height: 160rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.dl-dialog-long .dl-r {
    height: 230rpx;
}

.dl-title {
    width: 350rpx;
    padding-right: 15rpx;
    font-size: 24rpx;
    font-weight: bold;
    line-height: 35rpx;
    letter-spacing: 1rpx;
    min-height: 70rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.dl-code {
    font-weight: bold;
    font-size: 24rpx;
    margin-top: 20rpx;
    letter-spacing: 1rpx;
}

.dl-line {
    width: 33rpx;
    height: 4rpx;
    margin: 25rpx 0 23rpx 0;
    background-color: #000;
}

.dl-status {
    font-size: 22rpx;
}

.dl-btn-group {
    flex: none;
    display: flex;
    width: 100%;
    height: 110rpx;
    padding: 0 30rpx 30rpx 30rpx;
    box-sizing: border-box;
    flex-direction: row;
}

.dl-btn-group .dl-btn {
    width: 100%;
    height: 100%;
    font-size: 24rpx;
}

.dl-btn-group .dl-btn:first-child {
    background-color: #000;
    color: white;
    border-radius: 6rpx;
}

.dl-btn-group .dl-btn:last-child {
    display: none;
}

.dl-btn-group.two-btn .dl-btn:first-child {
    display: flex;
    background-color: #000;
    color: white;
    border-top-left-radius: 6rpx;
    border-bottom-left-radius: 6rpx;
    border-top-right-radius: 0;
    border-bottom-right-radius: 0;
}

.dl-btn-group.two-btn .dl-btn:last-child {
    display: flex;
    border: 1px solid #ddd;
    border-top-left-radius: 0;
    border-bottom-left-radius: 0;
    border-top-right-radius: 6rpx;
    border-bottom-right-radius: 6rpx;
}

.hide-canvas {
    position: fixed;
    width: 550rpx;
    height: 770rpx;
    opacity: 0;
    top: 0;
    left: 0;
    transform: translate(-200%, -200%);
}