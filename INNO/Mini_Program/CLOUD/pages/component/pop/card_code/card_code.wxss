
.card_code_content{
  position: absolute;
  top: 40%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 1;
}
.card_code{
  width: 600rpx;
  background: #fff;
  overflow: hidden;
  border-radius: 6rpx; 
}
.tips{
  font-size: 26rpx;
  padding-bottom: 30rpx;
  text-align: center;
}
.codes{
  font-size: 40rpx;
  font-weight: 800;
  text-align: center;
  margin-bottom: 10rpx;
}
.count_down{
  font-size: 22rpx;
  color: #acacac;
  text-align: center;
}
.invalid{
  font-size: 38rpx;
  color: #acacac;
  font-weight: 600;
  text-align: center;
}
.confirm{
  font-size: 24rpx;
  border-top: 1px solid #dfdfdf;
  padding:14rpx 0;
}
.content_box{
  padding:60rpx 0;
}