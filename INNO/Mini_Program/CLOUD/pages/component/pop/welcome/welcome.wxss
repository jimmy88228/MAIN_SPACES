.main{
  width: 100%;
  height:100%;
  bottom: 0px;
  left: 0px;
  position: fixed;
  box-sizing: border-box;
  z-index:999;
  display: flex;
  align-items: center;
}
.isLong.main{
  align-items: flex-start;
}
.main_bg{
  width:100%;
  height:100%;
  display:block;
}
.time_down_area{
  position:absolute;
  top:0px;
  left:30rpx;
  display:flex;
  align-items: center;
}
.time_down{
  border:1px solid rgba(0,0,0,0.1);
  border-radius:100rpx;
  display:flex;
  justify-content: center;
  align-items: center;
  color:#fff;
  padding:5rpx 20rpx;
  font-size:30rpx;
  background: rgba(0,0,0,0.2);
  /* transform: translateY(-100%); */
}