<!--pages/component/micro-page/items/advertise/advertise.wxml-->
<view class="main">
  <block wx:if="{{_data.type == 't1'}}">
    <block wx:if="{{_data.open_slide || true}}">
      <list refresh="{{false}}" scroll-x="{{true}}" scroll-y="{{false}}" >
        <view slot="data" class="list scroll">
          <block wx:for="{{_data.images}}" wx:key="index">
            <view class="list-item" style="width:{{100/_data.row}}%;">
              <image class="list-img" mode="widthFix"  src="{{item.img}}">
                <!--热点区域-->
                <block wx:if="{{item.poster_map && item.poster_map.length>0}}">
                  <view 
                  wx:for="{{item.poster_map}}" 
                  wx:for-item="map_item" 
                  wx:for-index="map_index" 
                  wx:key="map_index" 
                  class="map_area" 
                  style="top:{{map_item.y}}rpx;left:{{map_item.x}}rpx;width:{{map_item.w}}rpx;height:{{map_item.h}}rpx;" 
                  data-link="{{map_item.link}}" 
                  catchtap="goLink"
                  >
                  </view>
                </block>
              </image>
            </view>
          </block>
        </view>
      </list>
    </block>
    <block wx:else>
      <view class="list warp">
        <block wx:for="{{_data.images}}" wx:key="index">
          <view class="list-item" style="width:{{100/_data.row}}%;">
            <image class="list-img" mode="widthFix" src="{{item.img}}">
              <!--热点区域-->
              <block wx:if="{{item.poster_map && item.poster_map.length>0}}">
                  <view 
                  wx:for="{{item.poster_map}}" 
                  wx:for-item="map_item" 
                  wx:for-index="map_index" 
                  wx:key="map_index" 
                  class="map_area" 
                  style="top:{{map_item.y}}rpx;left:{{map_item.x}}rpx;width:{{map_item.w}}rpx;height:{{map_item.h}}rpx;" 
                  data-link="{{map_item.link}}" 
                  catchtap="goLink"
                  >
                  </view>
                </block>
            </image>
          </view>
        </block>
      </view>
    </block>
  </block>
  <block wx:elif="{{_data.type == 't2'}}"></block>
</view>