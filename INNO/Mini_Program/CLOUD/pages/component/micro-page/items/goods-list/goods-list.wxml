<!--pages/component/micro-page/items/goods-list/goods-list.wxml-->
<view class="main">
  <view class="tab-box" wx:if="{{showTab}}">
    <block wx:for="{{_data.goodsGroup}}" wx:key="index">
      <view class="tab-item" catchtap="onTap" data-type="tab" data-index="{{index}}">
        <view class="tab-name">{{item.name}}</view>
        <view class="line {{curTab == index?'active':''}}"></view>
      </view>
    </block>
  </view>
  <block wx:if="{{false&&!_data.open_slide}}">
    <block wx:if="{{listIndex == curTab}}" wx:for="{{listData}}" wx:key="index" wx:for-item="listItem"
      wx:for-index="listIndex">
      <view class="list-box" id="list-box{{listItem}}" wx:if="{{listItem.goodsList.length>0}}">
        <block wx:for="{{listItem.goodsList}}" wx:key="index" wx:for-item="listGoods" wx:for-index="listGoodsIndex">
          <view class="list-item list-item-{{_data.layout}}">
            <view class="list-img-box">
              <image src="{{listGoods.goods_thumb}}" mode="aspectFit" class="list-img"></image>
            </view>
            <view class="list-msg-box">
              <view class="msg-detail-box {{listGoods.market_price!=listGoods.sale_price?'large':'small'}}">
                <view class="list-msg-name">{{listGoods.name}}</view>
              </view>
              <view class="price-box">
                <view class="list-msg-sale-price char">{{listGoods.sale_price}}</view>
                <view wx:if="{{listGoods.market_price!=listGoods.sale_price}}" class="list-msg-market-price char">
                  {{listGoods.market_price}}</view>
              </view>
            </view>
          </view>
        </block>
      </view>
    </block>
  </block>
  <block wx:else>
    <swiper-mod list="{{listData[curTab].goodsList}}" _data="{{_data}}"></swiper-mod>
  </block>
</view>