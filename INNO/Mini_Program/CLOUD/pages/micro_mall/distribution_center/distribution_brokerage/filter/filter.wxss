/* pages/goods/popup/service.wxss */

.popup_area {
    background: #fff;
    /* position: fixed;
    left: 0px;
    bottom: 0px; */
    width: 600rpx;
    padding:20rpx;
    border-radius:10rpx;
}

.service_tit {
    position: relative;
    font-size: 28rpx;
    padding: 30rpx 20rpx;
    text-align: left;
    border-bottom:1px solid #efefef;
}

.close_area {
    position: absolute;
    top: 50%;
    right: 0px;
    padding: 20rpx 25rpx;
    transform: translateY(-50%);
}

.close_area image {
    width: 20rpx;
    display: block;
}
.service_cont{
  padding:20rpx;
}
.service_item {
    display:inline-block;
    padding:0px 25rpx;
    min-width:165rpx;
    height:70rpx;
    line-height:70rpx;
    border-radius:10rpx;
    box-sizing: border-box;
    color:#333;
    background-color:#F8F8FA;
    text-align:center;
    margin:0px 10rpx;
    margin-bottom:20rpx;
}



.s_item_name {
    font-size: 26rpx;
    margin-bottom: 22rpx;
}

.s_item_desc {
    font-size: 24rpx;
    color: #7f7f7f;
    margin-bottom: 49rpx;
}

.service_btn_area {
    padding: 25rpx;
}

.confirm_btn {
    width: 100%;
    display: flex;
    height: 88rpx;
    justify-content: center;
    align-items: center;
    background: #000;
    color: #fff;
    border-radius: 6rpx;
}
.server_close{
    width: 20rpx;
    position: absolute; 
    padding: 10rpx;
    top: 33rpx;
    right: 18rpx;
}