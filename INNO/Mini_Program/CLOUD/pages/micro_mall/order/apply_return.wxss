page {
    background: #f7f7f7;
}
.full_w{
  width:100%;
}
.return_page {
   padding-bottom:16rpx;
   /* padding-bottom:160rpx; */
}

.select_radio {
    width:35rpx;
    height:35rpx;
    vertical-align: middle;
    margin-right: 10rpx;
}

.radio_select {
    width: 35rpx;
    display: block;
}
.r_arrow{
  width:50rpx;
  height:50rpx;
  position:absolute;
  top:50%;
  right:0;
  transform: translateY(-50%);
}

.page_tab_item {
    text-align: center;
}

.page_tab_item .tab_txt {
    display: inline-block;
    vertical-align: middle;
}

.page_tab_item.tab_item_right {
    margin-right: 129rpx;
}

.tab_item_right:last-child {
    margin-right: 0rpx;
}

 
.row_tit {
    padding: 0px 20rpx;
    margin-bottom: 10rpx;
}

.return_row.padding_0 {
    padding: 0;
}

.return_row {
    padding: 0 20rpx;
    padding-left: 42rpx;
    border-bottom: 1px solid #efefef;
    position: relative;
    height: 110rpx;
    background: #fff;
    display: flex;
    align-items: center; 
}
.return_row .return_row_stay{
  display:flex;
  width:100%;
  height:110rpx;
  align-items:center;
  font-size:24rpx;
}
.return_row_stay view{
  width:100%;
  line-height:110rpx;
}

.return_row_arrow {
    position: absolute;
    top: 50%;
    right: 30rpx;
    transform: translateY(-50%);
    -moz-transform: translateY(-50%);
}

.return_row_arrow image {
    width: 24rpx;
}

.page_btn_area {
    text-align: center;
    position: sticky;
    left:0px;
    bottom:0px;
    width: 100%;
    padding:20rpx 0px;
    background-color:#fff;
}
.return_notice{
    /* padding:20rpx 0px; */
    padding-bottom:20rpx;
}
.notice_point{
    color:#47A6F2;
    padding:5rpx 0px;
}
.confrim_btn {
    /* position:fixed;
    left:0px;
    bottom:0px; */
    width: 90%;
    height:100rpx;
    border-radius: 100rpx;
    margin:0 auto;
    font-size:26rpx;
}

.page_tab_item {
    height: 110rpx;
    line-height: 110rpx;
}
.orderBox {
    width: 100%;
    box-sizing: border-box;
    padding: 30rpx;
    background: #fff;
    position:relative;
}
.orderBox.p_b_0{
    padding-bottom: 0;
}
.orderBox.box_inline{
    padding: 30rpx 0;
}
.orderBox .tit{
    display: block;
    color: #7f7f7f;
    font-size:26rpx;
    padding-bottom:50rpx;
}
.orderBox .cont{
    position:relative;
    /* line-height:40rpx; */
}
.orderBox .min_h{ 
    min-height: 200rpx
}
.orderBox .addr_row{
  /* padding-bottom:25rpx; */
}
.orderGood {
    width:100%;
    border-bottom: 1px solid #efefef;
    display:table;
    padding-bottom: 30rpx;
    /* display: flex; */
}

.orderGood:last-child {
    padding-bottom: 0;
    border-bottom: 0;
}

.goods_detail_img {
    width: 150rpx;
    overflow: hidden;
    margin-right: 30rpx;
    position: relative;
    display:table-cell;
    vertical-align: top;
}

.goods_detail_img_stay {
    width: 150rpx;
    height: 150rpx;
    position: relative;
    overflow: hidden;
    border: 1px solid rgba(243, 243, 243, 1);
}

.goods_detail_img_stay image {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    -moz-transform: translate(-50%, -50%);
    width: 100%;
    height: 100%;
    vertical-align: middle;
}

.orderGood .good_msg {
    padding-left:30rpx;
    display:table-cell;
    vertical-align: top;
    position: relative;
    flex-wrap: wrap;
}

.good_info {
    margin-top: 26rpx;
    color: rgba(127, 127, 127, 1);
}

.good_top {
    width: 100%;
}

.money_bottom {
    margin-top:44rpx;
    width: 100%;
    /* display:table; */
}

.csName {
    display: inline-block;
}

.csName.csName_mid {
    margin-left: 10rpx;
}

.csName.csName_right {
    margin-left: 20rpx;
}

.originalPrice {
    text-decoration: line-through;
    color: #b2b2b2;
    font-size: 24rpx;
    line-height: 24rpx;
    margin-top: 2rpx;
}

.presentPrice {
    font-weight: bold;
}

.good_name {
    word-break: break-all;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2; /*设置两行的时候*/
    -webkit-box-orient: vertical;
    padding-right: 60rpx;
    font-size: 24rpx;
    line-height: 26rpx;
    margin-top: 15rpx;
}
.price_bottom{
  /* display:table-cell; */
  vertical-align: top;
  display: inline-block;
}
.good_count ,.send_count{
    /* display:table-cell; */
    vertical-align: top;
    font-size:24rpx;
    padding-left: 20rpx;
    display: inline-block;
    font-weight: bold;
}
