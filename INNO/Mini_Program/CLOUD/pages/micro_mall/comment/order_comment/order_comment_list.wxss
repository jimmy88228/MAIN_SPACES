page{
  background:#fff;
}
.comment_list{

}
.comment_item{
  width:100%;
  padding:24rpx;
  margin-bottom:15rpx;
  background:#fff;
  box-sizing:border-box;
}
.goods_img_cell{
  width:190rpx;
}
.goods_img{
  width:180rpx;
  height:180rpx;
  display:block;
}
.goods_img image{
  width:100%;
  height:100%;
  display:block;
}
.comment_btn{
  position:absolute;
  right:0px;
  bottom:0px;
}
.comment_btn .comment_btn_link{
  display:flex;
  justify-content: center;
  align-items: center;
  width:150rpx;
  height:60rpx;
  border:1px solid #000;
  border-radius:4rpx;
}