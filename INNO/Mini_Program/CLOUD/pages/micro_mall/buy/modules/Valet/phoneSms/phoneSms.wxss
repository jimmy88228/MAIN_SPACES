.search_area{
  width:80%;
  position:fixed;
  top:50%;
  left:50%;
  transform: translate(-50%,-50%);
  border-radius:10rpx;
  background-color:#fff;
  padding:20rpx;
}
.s_tit{
  padding:20rpx 10rpx;
}
.s_cont{
  padding:10rpx;
  display: flex;
  width: 100%;
  box-sizing: border-box;
  align-items: center;
}
.search_input{
  padding:10rpx 10rpx;
  border:1px solid #efefef;
  border-radius:10rpx;
  width:100%;
  display:inline-flex;
  box-sizing: border-box;
  height:70rpx;
  /* box-shadow: 0px 0px 15rpx #b2b2b2 inset; */
}
.send_btn{
  padding:0px 30rpx;
  height:70rpx;
  line-height:70rpx;
  background:none;
  border: 1px solid #efefef;
  border-radius: 10rpx;
  margin-left:10rpx;
}
.s_btns{
  padding:10rpx;
  padding-top:20rpx;
  text-align:right;
}
.search_btn{
  width:150rpx;
  display:inline-block;
  text-align:center;
  background-color:#b2b2b2;
  margin-left:15rpx;
  overflow:hidden;
  border-radius:6rpx;
}