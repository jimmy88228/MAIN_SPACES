.user_header_area{
  position: relative;
}
.user_info_area {
  min-height: 260rpx;
}
.login_area {
  position: absolute;
  top: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
}
.user_login_btn {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  -moz-transform: translate(-50%, -50%);
  width: 300rpx;
  line-height: 88rpx;
  font-size: 26rpx;
  color: #fff;
  border: 1px solid #fff;
  border-radius: 4rpx;
  background: rgba(255, 255, 255, 0.36);
}
.dynamicBox{
  padding:6rpx 10rpx;
  border-radius: 34rpx;
  overflow: hidden;
  border:1px solid #fff;
  box-sizing: border-box;
  font-size: 20rpx;
  line-height: 22rpx;
  background: rgba(127,127,127,0.35);
}
.dynamicCode{
  width: 26rpx;
  height: 26rpx;
  padding-right: 6rpx;  
}
.extra_box{
  position: absolute;
  top: 0;
  right: 0;
  z-index: 1;
  height: 100%;
  box-sizing: border-box;
  padding:20rpx;
}
.extra_box.e_b_left{
  left: 0;
  color: #fff;
  height: auto;
  right: auto;
  opacity: 0.85;
  font-size: 24rpx;
  padding-right: 0;
}
.e_b_left view{
  max-width: 200rpx;
  word-break: break-all;
  word-wrap: break-word;
}
.e_b_left view:last-child{
  padding-top: 10rpx;
}

.user_code_cont{
padding-top:15rpx;
text-align:center;
}
.user_code{
width:650rpx;
height:110rpx;
margin:0 auto;
position: relative;
z-index: 1;
}
.user_code_txt{
padding:10rpx;
text-align:center;
}
.qr_code{
width: 70rpx;
height: 70rpx;
}
.login_trigger_btn{
  position:fixed;
  z-index:10;
  top:0px;
  left:0px;
  width:100%;
  height:100%;
}
.activite_card_btns{
  display:block;
  padding:20rpx 0px;
  background-color:#fff;
}
.activite_card_btn{
  display:flex;
  justify-content: center;
  align-items: center;
  color:#fff;
  background-color:#000;
  border-radius:10rpx;
  width:200rpx;
  height:60rpx;
  margin:0 auto;
  font-size:20rpx;
}

.qr_code_lg_box{
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 10;
  top:0;
  left:0;
  /* transform: translate(-50%,-50%); */
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(0,0,0,0);
  transition: background 0.32s;
}

.qr_code_lg{
  width: 580rpx;
  height: 580rpx;
  /* position: relative;  
  z-index: 11; */
} 
.qr_msg_box{
  border-radius: 14rpx;
  width: 580rpx;
  position: relative;  
  z-index: 11;
  background: #fff;
  margin-top: -120rpx;
}
.qr_user{
  padding: 60rpx 80rpx 0 80rpx;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  position: relative;
  z-index: 1;
  margin-bottom: -30rpx;
}
.img_qr_user{
  flex-shrink: 0;
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
}
.qr_user_text{
  padding-left: 20rpx;
  color: #000;
  word-break: break-all;
}
.qr_img_box{
  position: relative;
  width: 580rpx;
  height: 580rpx; 
  background: #fff;
}
.qr_tips{
  text-align: center;
  padding-bottom: 54rpx;
  margin-top: -40rpx;
  line-height: 24rpx;
  position: relative;
  z-index: 1;
}

.user_content {
  position: relative;
  width: 100%;
  height: 100%;
  display: inline-flex;
  align-items: center;
  z-index: 11;
  flex-direction: column;
  color: #fff;
  justify-content: center;
  text-shadow: 1px 1px 1px #171717;
}
.user_portrait{
position:relative;
}
.refresh_btn{
position:absolute;
top:0px;
right:0px;
width:35rpx;
height:35rpx;
transform: translate(30%,-30%);
padding:10rpx;
}
.refresh_icon{
display:block;
width:100%;
height:100%;
/* background-color:#efefef; */
}
.user_img_stay{
display:inline-block;
}
.user_img {
  margin-bottom: 10rpx;
  width: 89rpx;
  height: 89rpx;
  border-radius: 89rpx;
  border: 2px solid #fff;
}
.content_name {
  margin-bottom: 10rpx;
}
.content_grade {
  background: rgba(255, 255, 255, 0.2);
  border: 1px solid rgba(255, 255, 255, 1);
  border-radius: 30rpx;
  font-size: 22rpx;
  width:110rpx;
  height:32rpx;
  text-align:center;
  line-height:32rpx;
}
.rotate{
  animation: rotateAnimate linear .3s infinite;
  -webkit-animation: rotateAnimate linear .3s infinite;
}
@keyframes rotateAnimate{
  0% {
    -webkit-transform: rotate(0deg);
    transform: rotate(0deg);
  }
  100% {
    -webkit-transform: rotate(1turn);
    transform: rotate(1turn);
  }
}