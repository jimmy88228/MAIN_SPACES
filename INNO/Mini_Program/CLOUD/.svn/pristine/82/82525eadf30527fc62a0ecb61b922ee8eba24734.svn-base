@import './user_module/wxss/common.wxss';
page {
    background: #efefef;
    --tip_bg_color:rgb(252,242,229);
    --tip_font_color:rgb(236,117,17);
}
.user_code{
  width:650rpx;
  height:110rpx;
  margin:0 auto;
  position: relative;
  z-index: 1;
}
.qr_code_lg{
  width: 580rpx;
  height: 580rpx;
}
.hide_canvas{
  width:0px;
  height:0px;
  opacity:0;
  overflow:hidden;
  position:absolute;
  left: -1000px;
  right: -1000px;
  transform: translate(-100%,-100%);
}
/*联系导购*/
.btn_link .plugin-private-wx104a1a20c3f81ec2-components-cell-cell-2--wrapper{
  width:100% !important;
  height:100% !important;
  position:relative;
}
.btn_link functional-page-navigator{
  width:100% !important;
  height:100% !important;
  position:absolute;
  top:0px !important;
  left:0px !important;
}
.btn_link .plugin-private-wx104a1a20c3f81ec2-components-cell-cell-2--bubble {
  width:100% !important;
  height:100% !important;
  background:none !important;
}
.verify_box{
  padding: 8rpx 14rpx;
  border-radius: 20rpx;
  background-color: var(--tip_bg_color);
  color: var(--tip_font_color);
  display: flex;
  justify-content: center;
  align-items: center;
  float: right;
  margin-right: 15rpx;
}
.verify_icon{
  width: 28rpx;
  height: 28rpx;
}
.verify_tip{
  font-size: 20rpx;
  line-height: 20rpx;
  padding: 0 5rpx;
}
.verify_arrow{
  border-bottom: 1px solid var(--tip_font_color);
  border-right: 1px solid var(--tip_font_color);
  transform: rotate(-45deg);
  width: 8rpx;
  height:8rpx;
}