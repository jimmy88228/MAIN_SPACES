page {
    background: #fff;
}

.main_first {
    height: 100%;
    padding: 0 30rpx;
    padding-top: 30rpx;
    width: 100%;
    box-sizing: border-box;
    padding-bottom: 110rpx;
}

.header_first {
    width: 100%;
    box-sizing: border-box;
    padding: 0 0rpx 0rpx 20rpx;
    margin-bottom: 48rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 26rpx;
    font-weight: bold;
}

.header_title {
    width: 530rpx;
    color: #000;
    font-weight: bold;
}

.placeholder_style {
    color: #909090;
    font-size: 26rpx;
    font-weight: bold;
    text-align: left;
}

.header_next {
    width: 118rpx;
    height: 54rpx;
    display: inline-flex;
    align-items: center;
    justify-content: center;
}

.bline {
    height: 1px;
    background: rgba(196, 196, 196, 1);
    opacity: 0.5;
    width: 100%;
}

.textarea_style {
    padding-left: 20rpx;
    line-height: 30rpx;
    color: #000;
    box-sizing: border-box;
    width: 100%;
    height: 300rpx;
    margin-top: 40rpx;
}

.textarea_placeholder {
    color: #909090;
    font-size: 26rpx;
    line-height: 30rpx;
}

.classify {
    display: flex;
    width: 100%;
    /* align-items: flex-start; */
    /* margin-bottom: 55rpx; */
    align-items: center;
    min-height: 40rpx;
    position: relative;
    z-index:88; 
}

.classify_title {
    width: 180rpx;
    height:60rpx;
    display: inline-flex;
    align-items: center;
    padding: 20rpx 0;
}

.img_classify {
    width: 28rpx;
    height: 28rpx;
    margin-right: 11rpx;
}

.classify_box {
    min-height: 60rpx;
    width: 510rpx;
    box-sizing: border-box;
    padding-left: 10rpx;
    display: inline-flex;
    flex-wrap: wrap;
    align-items: center;
    margin-top: 10rpx;
}

.classify_item {
    margin-right: 12rpx;
    margin-bottom: 10rpx;
    padding: 8rpx 11rpx;
    font-size: 24rpx;
    line-height: 24rpx;
}
.tips{
    margin-top: -25rpx;
}
.pictures_box {
    width: 100%;
    box-sizing: border-box;
    display: flex;
    flex-wrap: wrap;
    margin-top: 55rpx;
}

.pictures_item {
    margin-right: 28rpx;
    margin-bottom: 28rpx;
    width: 196rpx;
    height: 196rpx;
    position: relative;
}

.img_pictures_item {
    width: 100%;
    height: 100%;
}

.img_delete {
    position: absolute;
    width: 33rpx;
    height: 30rpx;
    top: 0;
    right: 0;
    z-index: 11;
    padding: 8rpx 6rpx 30rpx 30rpx;
}

.pictures_add {
    position: relative;
    border: 1px solid rgba(153, 153, 153, 0.3);
    width: 196rpx;
    height: 196rpx;
}

.img_pictures_add {
    position: absolute;
    left: 50%;
    top: 50%;
    width: 40rpx;
    height: 40rpx;
    transform: translate(-50%, -50%);
}

.fix_bottom {

    width: 100%;
    height: 100rpx;
    position: fixed;
    box-sizing: border-box;
    box-shadow: 0px 0px 10px 0px rgba(205, 113, 143, 0.1);
    z-index: 90;
    bottom: 0;
    left: 0;
    background: #fff;
    display:flex;
    justify-content: space-around;
    /* padding-left: 100rpx; */
}

.img_upload {
    display: inline-block;
    vertical-align: middle;
    width: 40rpx;
    height: 40rpx;
    padding: 30rpx 0;
    padding-left: 108rpx;
}

.fix_bottom_text {
    display: inline-block;
    vertical-align: middle;
    font-size: 26rpx;
    padding: 35rpx 92rpx 35rpx 15rpx;
}

.video_style {
    width: 196rpx;
    height: 196rpx;
}

.line_first {
    width: 85rpx;
    margin: 0 145rpx;
    border-radius: 10rpx;
    height: 6rpx;
    position: fixed;
    z-index: 99;
    left: 0;
    transition: left 0.32s;
    bottom: 0;
}

.sign {
   font-size: 50rpx;
   margin-left: 8rpx; 
}
.currentText{
    text-align: right;
    padding-bottom: 10rpx;
}