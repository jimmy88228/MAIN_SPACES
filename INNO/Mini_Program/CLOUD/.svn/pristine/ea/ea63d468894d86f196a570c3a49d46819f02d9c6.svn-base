/* pages/component/custom/module_branches/userCard.wxss */
.bind_type_13{
  position: relative;
  letter-spacing: 0.5px;
  /* margin: 15rpx 20rpx; */
   box-shadow: 0px 2px 10px 0px rgba(0, 0, 0, 0.1);
}
.type13_img_box{
  position: relative;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  /* padding-right: 1px; */
  overflow: hidden;
  z-index: 1;
}
.type13_img{
  display: block;
  width:100%;
  height: 100%;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  box-sizing: border-box;
  padding-right: 1px;
}
.type13_img.p_0{
  padding: 0;
}
.type13_v1{
  background: #fff;
  overflow: hidden;
  /* padding: 10rpx 0rpx; */
}
.type13_v1_flex{
  display:flex;
  justify-content:space-evenly;
  flex-direction:row;
  align-items:center;
}

.type13_info{
    position:relative;
    flex: 1;
    flex-shrink: 0;
    height: 210rpx;
    overflow: hidden;
    display: flex;
    align-items: center;
}
.type13_info:nth-child(2n) .type13_img  {
  padding-left: 1px;
  padding-right: 0;
}
/* .type13_info:nth-child(2n) .type13_img_box {
  padding-left: 1px;
  padding-right: 0;
} */
.type13_userinfo{
    display: flex;
    flex-direction: column;
    justify-content: center;
    /* align-items: center; */
    z-index: 2;
    width: 100%;
    position: absolute;
    top: 0rpx;
    left:0rpx;
    height:100%;
    padding-left: 30rpx;
    box-sizing: border-box;
}

.type13_mainInfo{
    text-shadow: 1px 1px 1px #fff;
    display: flex;
    align-items: center;
    word-break: break-all;
}

.type13_avatar{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  display: block;
  box-sizing: border-box;
  overflow: hidden;
  flex-shrink: 0;
  /* float: left; */
}
.type13_user{
  text-align: left; 
  margin-left: 12rpx;
  /* float: left; */
}
.type13_user view{
  height: 35rpx;
  line-height: 35rpx;
  font-size: 24rpx;
}
.type13_userRank{
  font-size: 24rpx;
  padding-bottom: 20rpx;
  line-height: 35rpx;
}
.type13_cardNo{
  /* text-align: center; */
  font-size: 34rpx;
  position: relative;
  z-index: 1;
}

.type13_tipLogin{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 1;
  width: 100%;
  position: absolute;
  top: 0rpx;
  left:0rpx;
  height:100%;
}
.type13_tip{
  font-weight:700;
  font-size:22rpx;
  width:100%;
  text-align:center;
  margin-bottom:15rpx;
}
.type13_loginBtn{
   width:146rpx;
}