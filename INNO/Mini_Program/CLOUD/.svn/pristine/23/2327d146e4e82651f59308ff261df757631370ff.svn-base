.switch_point {
  position: absolute;
  width: 100%;
  bottom: 14rpx;
  left: 0px;
  text-align: center;
  line-height: 13rpx;
}

.switch_point .point {
  background: #efefef;
  width: 13rpx;
  height: 13rpx;
  border-radius: 20rpx;
  display: inline-block;
  margin: 0px 5rpx;
  transition: all 0.32s;
}
.switch_point .active { 
  background: rgba(0, 0, 0, 0.6);
}
.switch_point .point.rect{
  width: 26rpx; 
} 
.switch_point .point.rect.active{
  width: 38rpx; 
}
.main.init{
  background:#dfdfdf;
  width: 96%;
  margin: 0 auto;
}
.init .swiper{
  min-height: 750rpx;
}
