/* pages/component/micro-page/items/goods-list/goods-list.wxss */
.tab-box{
  display: flex;
  height: 80rpx;
  background: rgba(247, 247, 247, 1);
}
.tab-item{
  flex: 1;
  flex-shrink: 0;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}
.tab-name{
  color: #7f7f7f;
}
.tab-name.active{
  color: #171717;
}
.line{
  display: none;
}
.active.line{
  display: block;
  position: absolute;
  width: 100%;
  height: 4rpx;
  bottom: 8rpx;
  left: 0;
  display: flex;
  justify-content: center;
}
.active.line::after{
  content:"";
  width: 50%;
  height: 100%;
  background: #171717;
}
.list-box{
  display: flex;
  flex-wrap: wrap;
  /* justify-content: space-between; */
}
.list-item{
  flex: 1;
  flex-shrink: 0;
  margin-bottom: 15rpx;
  box-sizing: border-box;
  font-size: 26rpx;
} 
.init .list-img{
  background-color: #dfdfdf;
}
.list-img {
  width: 100%;
  height: 100%;
  display: block;
  position: absolute;
  top: 50%;
  left: 0px;
  transform: translateY(-50%);
  background-color:#fff;
}
.list-msg-box{
  box-sizing: border-box;
  padding: 20rpx;
  line-height: 32rpx;
  position: relative;
}
.price-box{
}

.list-img-box {
  width: 100%;
  padding-top: 100%;
  position: relative;
  overflow: hidden;
  flex-shrink: 0;
}
.property_box {
  background: #f8f8f8;
  position: relative;
  width: 100%;
  padding: 12rpx 6rpx;
  color: #7f7f7f;
  box-sizing: border-box;
}

.property {
  font-size: 20rpx;
  line-height: 24rpx;
  margin-left: 8rpx;
  color: rgba(127, 127, 127, 1);
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.msg-detail-box{
}
.list-msg-name{
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical; 
  margin-bottom: 6rpx;
}
.char::before{
  content:"¥";
  margin-right: 4rpx;
}

/* 一行N个 */
.list-item-one{
  min-width: 100%;
  max-width: 100%;
  font-size: 30rpx;
}
.list-item-two{
  /* min-width: 49%;
  max-width: 49%; */
  min-width: 50%;
  max-width: 50%;
  font-size: 24rpx;
}
/* .list-item-two:nth-child(2n){
  padding-right: 0;
} */
.list-item-three{
  min-width: 33.33%;
  max-width: 33.33%;
  font-size: 22rpx;
  /* min-width: 32%;
  max-width: 32%; */
}
/* .list-item-three:nth-child(3n){
  padding-right: 0;
} */
.list-item-four{
  /* min-width: 18.5%;
  max-width: 18.5%; */
  min-width: 20%;
  max-width: 20%;
  font-size: 20rpx;
}
/* .list-item-four:nth-child(4n){
  padding-right: 0;
} */
.one-row .list-item-one,.one-row .list-item-two,.one-row .list-item-three,.one-row .list-item-four{
  margin-bottom: 0;
}
.list-msg-sale-price{
  font-size: 24rpx;
}

.list-msg-market-price{
  /* font-size: 24rpx; */
  color: #7f7f7f;
  text-decoration: line-through;
}

/* 一大两小 */
.list-item-bigSmall{
  min-width: 50%;
  max-width: 50%;
  font-size: 24rpx;
}
.list-item-bigSmall:nth-child(3n+1){
  min-width: 100%;
  max-width: 100%;
  font-size: 30rpx;
}
/* .list-item-bigSmall:nth-child(2n+2){
  padding-right: 15rpx;
} */

/* 一行详细列表 */
.list-item-list{
  min-width: 100%;
  max-width: 100%;
  font-size: 30rpx;
  display: flex;
}

/* 一大两小、一行一个、详细列表 价格权重调整 */
.list-item-bigSmall:nth-child(3n+1) .list-msg-sale-price
,.list-item-bigSmall:nth-child(3n+1) .list-msg-market-price
,.list-item-one .list-msg-sale-price
,.list-item-one .list-msg-market-price
,.list-item-list .list-msg-sale-price
,.list-item-list .list-msg-market-price
{
  font-size: 26rpx;
}
/* 商品信息内容 权重调整 */
.list-item-three .list-msg-box,.list-item-four .list-msg-box{
  padding: 10rpx;
}
/* 详细列表 权重调整 */
.list-item-list .list-img-box{
  width: 200rpx;
  padding-top: 200rpx;
}
.list-item-list .price-box{
  position: absolute;
  bottom: 0;
  left: 20rpx;
}
.list-item-list .msg-detail-box.large{
  padding-bottom: 60rpx;
}
.list-item-list .msg-detail-box.small{
  padding-bottom: 28rpx;
}
.main.init{
  width: 96%;
  font-size: 0;
  margin: 15rpx auto;
}
.init .price-box{
  width: 50%;
  height: 30rpx;
  background: #dfdfdf;
  font-size: 0;
}
.init .msg-detail-box{
  width: 100%;
  height: 30rpx;
  background: #dfdfdf;
  margin-bottom: 15rpx;
  font-size: 0;
}
.init .list-msg-sale-price{
  display: none;
}
.init .list-img{
  background-color: #dfdfdf;
}