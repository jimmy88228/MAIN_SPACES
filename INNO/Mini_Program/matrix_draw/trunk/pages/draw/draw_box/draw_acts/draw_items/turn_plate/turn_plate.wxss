.turn-plate-box{
    width: 100%;
    height: 750rpx;
    position: relative;
    z-index: 1;
    box-sizing: border-box;
    padding: 76rpx;
    font-weight: bold;
}
.turntable-bg{
    width: 100%;
    transition: transform 5s cubic-bezier(0,0.8,0.6,1);
    /* transition: transform 5s ease-out; */
}
.trans-center{
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
}
.turntable-pan{
}
.turntable-pointer{
    width: 170rpx; 
    z-index: 3;   
}
.prize-list-box{
    width: 100%;
    height: 100%;
    position: relative;
    z-index: 2;
    transition: transform 5s cubic-bezier(0,0.8,0.6,1);
    /* transition: transform 5s ease-out; */
}
.prize-list{
    position: absolute; 
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    width: 100%;
    height: 100%;
}
.prize-item{ 
    display: flex;
    align-items: center;
    flex-direction: column;
    /* flex-direction: column; */
    width: 100%;
    height: 100%;
}
.img-prize{
    width: 80rpx;
    height: 80rpx;
}
.prize-text{
    max-width: 180rpx;
    /* max-width: 150rpx; */
    word-break: break-all;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    text-align: center;
}
.rotate0{
    transform: translate(-50%,-50%) rotate(0deg);
}
.rotate1{
    transform: translate(-50%,-50%) rotate(-60deg);
}
.rotate2{
    transform: translate(-50%,-50%) rotate(-120deg);
}
.rotate3{
    transform: translate(-50%,-50%) rotate(-180deg);
}
.rotate4{
    transform: translate(-50%,-50%) rotate(-240deg);
}
.rotate5{
    transform: translate(-50%,-50%) rotate(-300deg);
} 