/* 生肖 */
.flop_act{
    position: relative;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    width: 100%;
    /* min-height: 750rpx; */
    box-sizing: border-box;
    padding: 0;
}
.flop_act_item{
    min-width: 24%;
    /* flex: 1; */
    flex-shrink: 0;
    position: relative;
    overflow: hidden;
    margin-left: -10rpx;
    opacity: 0;
    margin-bottom: 6rpx;
}
.flop_act_item.active{
    margin-left: 0;
    opacity: 1;
}
.flop_act_img, .flop_act_wrapper{
    position: relative; 
    width: 100%;
    z-index: 2;
    display: block;
    transform: rotateY(0);
    transition: transform 1s, z-index 1s;
} 
.flop_act_img_reverse{
    width: 157rpx;
}
.flop_act_wrapper{
    transform: rotateY(180deg);
    z-index: 1;
}
.flop_act_img_action{
    /* z-index: 1;
    transform: rotateY(180deg); */
}
.flop_act_img_reverse_action{
    z-index: 2;
    transform: rotateY(0);
}
.flop_act_prize{
    position: absolute;
    top: 40%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 30rpx;
    color: #fff;
    width: 120rpx;
    word-break: break-all;
    overflow: hidden;
    text-align: center;
} 