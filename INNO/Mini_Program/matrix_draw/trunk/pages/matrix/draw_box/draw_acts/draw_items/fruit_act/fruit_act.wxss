/* pages/draw/draw_box/draw_acts/draw_items/fruit_act/fruit_act.wxss */
.fruit-act-box{
  width: 100%;
  height: 750rpx;
  position: relative;
  z-index: 1;
  box-sizing: border-box;
  font-weight: bold;
  padding: 50rpx;
  display: flex;
}
.fruit-bg-img{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
  background:gray;
}
.fruit-act-list{
  position: relative;
  z-index: 1;
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-wrap: wrap;
  width: 100%;
  height: 100%;
}
.fruit-act-item{
  /* display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center; */
  width: 32%;
  flex-shrink: 0;
  position: relative;
}
.img-fruit-box{
  position: relative; 
  width: 100%;
  padding-top: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  /* z-index: 0; */
}
.trans-center{
  position: absolute;
  left: 50%;
  top:50%;
  transform:translate(-50%,-50%);
}
.img-fruit-item{
   width: 100%;
   height: 100%;
   z-index: 1;
}
.img-prize{
  width: 50%;
}
.prize-box{
  width: 100%;
  height: 100%;
  z-index: 2; 
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.prize-name{
  text-shadow: 1px 1px #fff;
  word-break: break-all;
  margin-top: 6rpx;
  box-sizing: border-box;
  padding: 0 10rpx;
}
.img-prize-name.active{
  color: #fff;
  text-shadow:none;
}
.draw-text{
  font-size:38rpx;
  color: #fff;
}