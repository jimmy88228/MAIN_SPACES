.wp-main {
    width: 100%;
    min-height: 100%;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
}

.wp-header-box {
    position: relative;
    flex: none;
    width: 100%;
    height: 750rpx;
}
/* 
.wp-header-box::after {
    display: block;
    content: "";
    padding-bottom: 100%;
} */

.wp-header {
    position: absolute;
    width: 100%;
    height: 100%;
}

.wp-body {
    flex: 1 0;
    width: 100%;
    box-sizing: border-box;
    padding: 15rpx 0;
}

.wp-row {
    margin-top: 60rpx;
    padding: 0 30rpx 30rpx 58rpx;
}

.wp-body>.wp-row:first-child {
    margin-top: 0;
}

.wp-title {
    margin-top: 20rpx;
    font-size: 28rpx;
    font-weight: bold;
}

.wp-tips {
    font-size: 22rpx;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    color: #888;
}

.wp-name {
    margin-top: 20rpx;
    font-size: 44rpx;
    font-weight: bold;
}

.wp-price {
    color: var(--text-sub-color);
    font-weight: bold;
    margin-top: 12rpx;
    font-size: 28rpx;
}

.wp-info-box.wp-row {
    padding-left: 30rpx;
    padding-right: 30rpx;
}

.wp-info-box.wp-row>.wp-title {
    margin-left: 28rpx;
}

.wp-info-list {
    background-color: #fbfbfb;
    margin-top: 25rpx;
    padding: 30rpx;
    border-radius: 8rpx;
}

.wp-info-item {
    min-height: 50rpx;
    line-height: 50rpx;
    font-size: 26rpx;
    display: flex;
    flex-direction: row;
}

.wp-info-item label {
    color: #888;
    min-width: 120rpx;
    display: inline-block;
}

.wp-info-item text {
    display: inline-block;
    font-weight: bold;
}

.menu-bar {
    flex: none;
    border-top: 1px solid #eee;
    padding: 10rpx 58rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: row;
}

.menu {
    padding: 20rpx;
    box-sizing: content-box;
    font-size: 22rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    font-family: none;
}

.menu:first-child {
    margin-left: -20rpx;
}

.menu image {
    width: 24rpx;
    height: 24rpx;
    margin-right: 5rpx;
}

.hide-canvas {
    position: absolute;
    width: 528rpx;
    height: 720rpx;
    opacity: 0;
    top: 0;
    left: 0;
    transform: translate(-200%, -200%);
}

/* cp */
.cp-main {
    width: 100%;
    min-height: 100%;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    padding-bottom: 130rpx;
}

.cp-header-box {
    position: relative;
}

.cp-header-box::after {
    /* display: block;
    content: "";
    padding-bottom: 100%; */
}

.cp-header {
    /* position: absolute; */
    width: 100%;
    height: 100%;
    display: block;
}

.cp-body {
    /* flex: 1 0; */
    width: 100%;
    box-sizing: border-box;
    padding: 15rpx 45rpx;
    padding-bottom: 130rpx;
}

.cp-menu-bar {
    position: fixed;
    width: 100%;
    left: 0px;
    bottom: 0px;
    padding: 20rpx 28rpx 20rpx 22rpx;
    box-sizing: border-box;
    background: white;
}

.cp-menu-bar .btn-black {
    width: 100%;
    height: 90rpx;
    border-radius: 0;
    font-family: none;
}

.cp-row {
    border-bottom: 1px solid #DDDDDD;
    padding: 40rpx 0;
}

.cp-title {
    font-size: 20rpx;
    color: var(--text-sub-color);
}

.cp-cont {
    margin-top: 25rpx;
    font-size: 50rpx;
    font-weight: bold;
}

.lay_out_title {
    padding: 20rpx 0;
    font-weight: bold;
}

.l_o_left {
    font-size: 48rpx;
}

.l_o_right {
    font-size: 32rpx;
}

.wp-details.content,
.cp-details.content {
    display: block;
    margin-top: 20rpx;
    font-family: none;
}