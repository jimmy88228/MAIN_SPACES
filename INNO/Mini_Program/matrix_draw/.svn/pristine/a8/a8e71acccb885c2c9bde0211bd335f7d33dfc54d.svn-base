/* pages/draw/draw_box/draw_acts/draw_items/matrix_act/matrix_act.wxss */

.img{
  width: 100%;
  display: block;
}
.filterBox{
  transition: filter 0.3s linear;
}
.filter{
  filter: blur(20rpx);
}
.draw_box{
  position: relative;
}
.img-content{
  width:750rpx;
  height: 598rpx;
  display: block;
}
.img-content.front{
  position: absolute;
  left: 50%;
  top: 0;
  transform: translateX(-50%);
  z-index: 2;
  height: 100%;
}
.loginBtn{
  width: 320rpx;
  height: 88rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-weight: bold;
  margin: 20rpx auto;
}