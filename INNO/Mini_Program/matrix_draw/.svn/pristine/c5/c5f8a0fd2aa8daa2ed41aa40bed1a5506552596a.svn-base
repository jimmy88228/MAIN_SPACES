page{
    height: 100%;
}
.box {
    position: fixed;
    top: 100rpx;
    left: 0;
    width: 100%;
    height: 80rpx;
    display: flex;
    background: #fff;
    border-top: 1px solid rgba(239, 239, 239, 0.6);
    box-shadow: 0rpx 4rpx 6rpx 0rpx rgba(0, 0, 0, 0.06);
    z-index: 99;
    font-size: 28rpx;
}

.tab_box {
    flex: 4;
    display: inline-flex;
    justify-content: center;
    height: 100%;
    box-sizing: border-box;
    padding-left: 20rpx;
}
 

.content {
    display: flex;
    height: 100%;
    width: 100%;
    justify-content: center;
    align-items: center;
    font-size: 28rpx; 
    line-height: 32rpx;
    position: relative;
    /* margin-right: 60rpx; */
}

.content:last-child {
    margin-right: 0;
}

.title {
    margin-right: 8rpx;
}
 

.sort_top {
    height: 0;
    border: 6rpx solid transparent;
    border-bottom: 6rpx solid rgba(183, 183, 183, 1);
    position: relative;
    transform: translateY(-25%);
}

.sort_bottom {
    height: 0;
    border: 6rpx solid transparent;
    border-top: 6rpx solid rgba(183, 183, 183, 1);
    position: relative;
    transform: translateY(25%);
}

.filter {
    flex:1;
    height: 100%;
    display: inline-flex;
    justify-content: center;
    align-items: center;
    font-size: 28rpx;
    line-height: 32rpx; 
    color: #7f7f7f;
}

.price_sort {
    height: 100%;
    flex-direction: column;
    display: inline-flex;
    justify-content: center;
    margin-left: 7rpx; 
}

.line{
  position: absolute;
  width: 1px;
  height: 50%;
  top: 50%;
  right: 0;
  transform:translateY(-50%);
  background: #dfdfdf;
}