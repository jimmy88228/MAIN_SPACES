@import "../../components/css3/loading/loading.wxss";

page{
  background: #fff;
}
.main{
  position: relative;
}
.header{
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-top: 22rpx;
}
.record_btn{
  width: 124rpx;
  height: 54rpx;
  line-height: 54rpx;
  text-align: center;
  background: linear-gradient(to bottom, #fccb57, #ed8632);
  border: 1px solid #b95207;
  border-right: 0 none;
  border-radius: 20px 0 0 20px;
  font-size: 24rpx;
  color: #b95207;
}
.logo{
  width: 182rpx;
  margin: 26rpx auto;
}
.logo_icon{
  width: 182rpx;
}
.join_times{
  width: 100%;
  height: 60rpx;
  /* background: rgba(0, 0, 0, .5);
  border-radius: 20px; */
  font-size: 24rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  /* width: 200rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  margin: 24rpx auto 36rpx auto;
  background: rgba(0, 0, 0, .5);
  border-radius: 20px;
  font-size: 24rpx;
  color: #fff; */
}
.tips_box{
  display: inline-block;
  background: rgba(0, 0, 0, .5);
  border-radius: 20px;
  padding: 10rpx 30rpx;
  text-align: center;
  line-height: 32rpx;
}
.person_times{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 350rpx;
  margin: 20rpx auto;
}
.lines{
  width: 28rpx;
  border-top: 2px solid #fff;
}
.person_times_text{
  font-size: 24rpx;
  color: #fff;
  padding: 0 18rpx;
}
.lottery_list{
  width: 690rpx;
  margin: 0 auto 54rpx auto;
}
.lottery_wrapper{
  position: relative;
}
.lottery_img_wrap{
  width: 453rpx;
  margin: 0 auto;
}
.lottery_img{
  width: 453rpx;
  height: 131rpx;
}
.lottery_record{
  width: 100%;
  box-sizing: border-box;
  background: #fff;
  border-radius: 10px;
  padding: 42rpx 20rpx 12rpx 20rpx;
  margin-top: -50rpx;
}
.record_item{
  display: flex;
  align-items: center;
  height: 76rpx;
  border-bottom: 1px solid #e6e6e6;
  padding: 0 16rpx;
}
.user_img{
  width: 54rpx;
  height: 54rpx;
  margin-right: 20rpx;
  border-radius: 50%;
  border: 1px solid #fff;
  box-shadow: 0 0 18px -6px#000;
}
.user_name{
  width: 120rpx;
  overflow: hidden;
  font-size: 20rpx;
  color: #000;
  margin-right: 40rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.user_lottery{
  width: 210rpx;
  overflow: hidden;
  font-size: 24rpx;
  color: #cd1010;
  margin-right: 40rpx;
  text-overflow: ellipsis;
  white-space: nowrap; 
}
.lottery_time{
  font-size: 24rpx;
  color: #7f7f7f;
}
.record_item:last-child{
  border-bottom: none;
}
.rules{
  width: 680rpx;
  background: rgba(0, 0, 0, .2);
  border-radius: 10px;
  padding: 64rpx 60rpx;
  box-sizing: border-box;
  margin: 0 auto;
  margin-top: -20rpx;
}
.rules_title{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 420rpx;
  margin: 0 auto;
  margin-bottom: 40rpx;
}
.line_rule{
  width: 110rpx;
  border-top: 2rpx solid #fff;
}
.rules_text{
  font-size: 30rpx;
  color: #fff;
  padding: 0 30rpx;
}
.all_rules{
  font-size: 26rpx;
  color: #fff;
}
.bg{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  z-index: -1;
}
.bg_img{
  display: block;
  width: 100%;
}
.tip_img{
  display: block;
  width: 484rpx;
}
.no_lottery{
  font-size:28rpx;
  color:rgba(196,196,196,1);
  margin-bottom: 70rpx;
}
.back_home{
  width:300rpx;
  height:80rpx;
  background:rgba(51,51,51,0);
  border:1px solid rgba(153,153,153,.6);
  border-radius:40px;
  font-size:28rpx;
  color: #666666;
}
.no_lottery_wrapper{
  margin-top: 180rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.loginBtn{
  z-index: 111;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.filter-view {
  transition: filter .3s;
}

.filter-view.filter {
  filter: blur(40rpx);
}


.loading_box {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 111;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  /* background: rgba(0,0,0,0.2); */
  transition: all 0.4s;  
  background: rgba(0,0,0,0.3); 
  opacity: 0;
} 
.loading_box.loadShow{
  opacity: 1;
}
._title{
  color: #fff;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}