.spec-view {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

.spec-name {
    flex: none;
    font-size: 26rpx;
    font-weight: bold;
    margin-top: 25rpx;
}

.spec-view .spec-name:first-child {
    margin-top: 0;
}

.spec-values {
    flex: none;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    margin-top: 20rpx;
}

.spec-values .spec-value {
    flex: none;
    max-width: 100%;
    min-width: 110rpx;
    height: 110rpx;
    margin-top: -1rpx;
    margin-left: -1rpx;
    border: 1px solid #eee;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 10rpx;
    box-sizing: border-box;
    color: var(--text-main-color);
}

.spec-values .spec-value.selected {
    background-color: #000;
    color: white;
}

.spec-values .spec-value.disabled {
    background-color: #efefef;
    color: var(--text-tips-color);
}

.spec-value-text {
    max-width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 24rpx;
}

.btn-hover {
    background-color: rgba(0, 0, 0, 0.1);
}