/* pages/component/login/login_by_phone.wxss */
.login_page{
  position:fixed;
  top:50%;
  left:50%;
  z-index:100;
  width:600rpx;
  height:648rpx;
  background:#fff;
  transform: translate(-50%,-50%);
  border-radius:10rpx;
  opacity: 0;
}
.login_view{
  position:absolute;
  top:0px;
  left:0px;
  bottom:0px;
  right:0px;
}
.login_view_bg{
  width:100%;
  height:100%;
  display:block;
}
.login_view_logo{
  width:258rpx;
  height:258rpx;
  display:block;
  margin:0 auto;
  margin-top:116rpx;
  margin-bottom:129rpx;
}
.get_number_btn{
  width:500rpx;
  height:90rpx;
  display:flex;
  justify-content: center;
  align-items: center;
  border-radius:11rpx;
  margin:0 auto;
  background:rgba(7,193,96,1);
  color:#fff;
  font-size:30rpx;
}
.component_close{
  position:absolute;
  padding:20rpx;
  width:20rpx;
  height:20rpx;
  top:0px;
  right:0px;
  transform: rotate(45deg);
}
.component_close::before{
  content:"";
  width:30rpx;
  height:4rpx;
  position:absolute;
  top:50%;
  left:50%;
  transform: translate(-50%,-50%);
  background-color:#797979;
}
.component_close::after{
  content:"";
  height:30rpx;
  width:4rpx;
  position:absolute;
  top:50%;
  left:50%;
  transform: translate(-50%,-50%);
  background-color:#797979;
}