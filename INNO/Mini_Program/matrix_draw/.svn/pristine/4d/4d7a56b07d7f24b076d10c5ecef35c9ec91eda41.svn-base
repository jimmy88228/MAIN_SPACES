/* pages/matrix/draw_box/draw_records/draw_records.wxss */
page{
  --draw-color:""; 
}
.main{
  box-sizing: border-box;
  padding: 30rpx;
  padding-bottom: 0;
  /* min-height: 100vh; */
  background:var(--draw-color);
}
.records-box{
  min-height: calc(100vh - 30rpx);
}
.records{
  width: 100%;
  border-radius: 18rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  box-sizing: border-box;
  padding-left: 20rpx;
  background-color: #fff;
  position: relative;
}
.records:last-of-type{
  margin-bottom: 0;
}
.rd-title{
  font-size: 24rpx;
  line-height: 40rpx;
  border-bottom:1px solid #dfdfdf;
  padding: 15rpx 0;
}
.rd-msg{
  box-sizing: border-box;
  padding: 20rpx 20rpx 20rpx 0;
  position: relative;
}
.img-prize{
  width: 130rpx;
  height: 130rpx;
  flex-shrink: 0;
}
.img-receive{
  width: 115rpx;
  height: 91rpx;
  position: absolute;
  right: 20rpx;
  top:0;
  z-index: 2;
}
.prize-name{
  width:100%;
  padding:0 10rpx 0 10rpx;
  word-break: break-all;
  box-sizing: border-box;
}
.status-box{
  width: 120rpx;
  font-size: 24rpx;
  height: 100%;
  flex-shrink: 0;
}
.btn{
  width: 100%;
  height: 60rpx;
  border-radius: 30rpx;
  color: #fff;
} 
.arrow{
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform:translate(0,-50%) rotate(45deg);
  width: 16rpx;
  height: 16rpx;
  border-top: 1px solid #7f7f7f;
  border-right: 1px solid #7f7f7f;
}
.empty{
  margin-top: 400rpx;
  text-align: center;
  color:#7f7f7f;
  font-size: 28rpx;
}