
.stores_a{
  display: flex;
  height: 90rpx;
  position: fixed;
  left:0px;
  top:0px;
  width: 100%;
  justify-content: space-between;
  align-items: center;
  z-index: 11;
  box-sizing:border-box;
  padding:0px 20rpx;
  padding-left:15rpx;
  box-shadow:inset 0 -2rpx 6rpx 1rpx rgba(225,225,225,0.2);
  background-color:#fff;
}
.stores_place{
  position: relative;
  width: 100%;
  height: 90rpx;
}
.brand_name{
  padding-left:36rpx;
  padding-right:40rpx;
}
.icon_search_area{
  display:inline-flex;
  align-items: center;
  max-width:450rpx;
  width:100%;
  height:55rpx;
  border-radius:100rpx;
  border:1px solid #ECECEC;
  padding:0px 20rpx;
  min-width: 150rpx;
}
.icon_search{
  width: 34rpx;
  height: 34rpx;
  padding-right:10rpx;
}
.search_txt{
  color:#C4C4C4;
}
.store_name{ 
  line-height:26rpx;
  font-size: 26rpx;
  min-width: 60rpx;
  color: #000;
  font-weight:bold;
}
.img_logo{
  position: absolute;
  left: 25rpx;
  top: 50%;
  transform:translateY(-50%); 
}
.icon_location_box{
    position: relative;
}
.store_icon{
    width:35rpx;
    height:35rpx;
    padding:20rpx 20rpx 20rpx 10rpx;
}
.change_store{
  display:flex;
  align-items: center;
  font-size:20rpx;
  background-color:#F7F7F7;
  color:#1E1E1E;
  border-radius: 100px;
  margin-left:10rpx;
  height: 30rpx;
  padding: 0px 10rpx;
}
.scan_area{
  width:55rpx;
  height:55rpx;
  position: relative;
  border:1px solid #ececec;
  margin-left: 15rpx;
  border-radius: 100%;
  overflow: hidden;
}
.img_scan{
  position: absolute;
  top:50%;
  left:50%;
  width: 34rpx;
  height: 34rpx;
  flex-shrink: 0;
  transform: translate(-50%,-50%);
}