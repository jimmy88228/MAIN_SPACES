/* pages/draw/draw_box/box/box.wxss */
.main{
  box-sizing: border-box;
  min-height: 100vh;
  transition: all 0.3s;
}
.main.filter{
  filter: blur(20rpx);
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
image{
  display: block;
}
.act-tips-box{
  position: absolute;
  z-index: 2;
  left: 30rpx;
  top: 160rpx;
  display: flex;
  margin-top: 10rpx;
}
.img-tip-rule,.img-tip-prize-box{
  width: 70rpx;
  height: 70rpx;
  margin-right: 20rpx;
}
.img-tip-prize{
  width: 70rpx;
  height: 70rpx;
}
.img-logo-box,.img-act-box,.img-prize-box,.img-task-box{
  position: relative;
  box-sizing: border-box;
  padding:0;
}
.img-logo-bg,.img-act-bg,.img-prize-bg,.img-task-bg{
  width: 100%;
  z-index: 1;
}
.img-act-msg,.img-prize-list,.img-task-list{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 2; 
}
.img-act-msg{
  flex-direction: column;
}
.img-act-btn{
  width: 60%;
}
.img-act-tip{
  font-size: 22rpx;
  line-height:22rpx;
  color: #fff;
  background:rgba(0, 0, 0, 0.3);
  border-radius: 30rpx;
  padding:20rpx 20rpx;
  margin-top: 10rpx;
}
.img-prize-box{
  padding: 0;
}
.img-prize-list{
  width: 100%;
  flex-wrap: nowrap;
  height: 160rpx;
  overflow: scroll;
  justify-content: start;
}
.img-prize{
  /* flex: 1; */
  flex-shrink: 0;
  width: 160rpx;
  height: 160rpx;
  margin-right: 10rpx;
}
.img-task-list{
  /* flex-direction: column; */
}
.matrix-main-box{
  position: relative;
  overflow: hidden;
}
.img-task-list{
  padding:30rpx 20rpx;
  border-radius:28rpx;
  box-sizing: border-box;
  background: #fff;
}
.img-task-btn-box{
  position: relative;
}
.share-btn{
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
}
.img-task-icon{
  width: 80rpx;
  flex-shrink: 0;
}
.img-task-btn{
  width: 120rpx;
  flex-shrink: 0;
}
.task-box{
  width: 100%;
  display:flex;
  flex-direction:column;
  justify-content: space-between;
}
.task-tip{
  color:#7f7f7f;
}
.task-title{
  font-weight: bold;
}
.loginBtn{
  z-index: 111;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}
.img-anim{
  width: 100%;
}

/* record */

.winning-list-box{
  /* width: 690rpx;
  margin: 0 auto; */
  position: relative;
  box-sizing: border-box;
}
.lottery_wrapper{
  position: relative;
}
.lottery_img_wrap{
  width: 453rpx;
  margin: 0 auto;
}
.lottery_img{
  width: 453rpx;
  height: 131rpx;
}
.winning-swiper{
  width: 100%;
  box-sizing: border-box;
  background: #fff;
  border-radius: 10px;
  padding: 30rpx;
  position: relative;
}
.winning-swiper-item{
  display: flex;
  align-items: center;
  height: 76rpx;
  border-bottom: 1px solid #e6e6e6; 
  transition: opacity 0.8s;
}
.winning-swiper-item.hideAnim{
  opacity: 0;
}
.winning-user-img{
  width: 54rpx;
  height: 54rpx;
  border-radius: 50%;
  flex-shrink: 0;
}
.winning-user-name{
  width: 120rpx;
  overflow: hidden;
  font-size: 20rpx;
  color: #000;
  text-overflow: ellipsis;
  white-space: nowrap;
  flex-shrink: 0;
  box-sizing: border-box;
  padding-left: 15rpx;
}
.winning-prize-name{
  width: 100%;
  overflow: hidden;
  font-size: 24rpx;
  color: #cd1010;
  padding:0 15rpx;
  box-sizing: border-box;
  text-overflow: ellipsis;
  white-space: nowrap; 
}
.winning-time{
  width: 150rpx;
  font-size: 24rpx;
  color: #7f7f7f;
  flex-shrink: 0;
}
.winning-swiper-item:last-child{
  border-bottom: none;
}
.winning-list-empty{
  height: 180rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #7f7f7f;
}


.person_times{
  display: flex;
  align-items: center;
  justify-content: center; 
  font-size: 22rpx;
  line-height: 22rpx;
  color: #fff;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 30rpx;
  padding: 20rpx 20rpx;
  margin-top: 10rpx;
}
.lines{
  width: 28rpx;
  border-top: 2px solid #fff;
}
.person_times_text{
  font-size: 24rpx;
  color: #fff;
  padding: 0 18rpx;
}