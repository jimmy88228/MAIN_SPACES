.enroll-root {
    bottom: 0;
    left: 0;
    right: 0;
    position: absolute;
    height: auto;
    background-color: white;
    box-sizing: border-box;
    padding: 30rpx;
}

.enroll-content {
    overflow-x: hidden;
    overflow-y: scroll;
    width: 100%;
    height: auto;
    max-height: 900rpx;
}

.enroll-title {
    font-size: 26rpx;
    font-weight: bold;
    margin-bottom: 15rpx;
}
.enroll-item {
    font-size: 26rpx;
    line-height: 35rpx;
    display: flex;
    padding: 10rpx 0;
    box-sizing: border-box;
    flex-direction: row;
}
.enroll-key {
    color: var(--text-sub-color);
}
.enroll-value {
    flex-grow: 1;
    margin-left: 25rpx;
}
.enroll-root .enroll-btn {
    margin-top: 20rpx;
}
