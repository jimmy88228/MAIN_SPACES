/* pages/micro_mall/lottery/confirm_prize/confirm_prize.wxss */
page{
    background: #efefef;
}
.gift_status{
    padding: 50rpx 30rpx 40rpx 30rpx;
    background: #fff;
    margin-bottom: 12rpx;
}
.status_text{
    font-size: 32rpx;
    font-weight: 600;
    margin-bottom: 20rpx;
}
.order{
    font-size: 26rpx;
}
.adress_module{
    background: #fff;
    padding: 34rpx 0 0 30rpx;
    margin-bottom: 20rpx;
}
.address_title{
    padding-bottom: 22rpx;
    border-bottom: 1px solid #efefef;
    font-size: 26rpx;
}
.address_content{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 34rpx 20rpx 34rpx 0;
    border-bottom: 1px solid #efefef;
}
.user_info{
    font-size: 24rpx;
}
.strong_item{
    font-weight: 600;
}
.item:not(:last-child){
    margin-bottom: 16rpx;
}
.prize{
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 12rpx;
    padding: 20rpx 20rpx 20rpx 0;
}
.prize_inner{
    display: flex;
    align-items: center;
}
.prize_icon{
    width: 112rpx;
    border-radius: 4px;
    margin-right: 30rpx;
}
.prize_name{
    font-size: 26rpx;
}
.confirm_btn{
    position: fixed;
    bottom: 20rpx;
    left: 50%;
    transform: translateX(-50%);
    width: 720rpx;
    height: 86rpx;
    line-height: 86rpx;
    font-size: 26rpx;
    color: #fff;
    border-radius: 4px;
    background: #000;
}
.r_arrow{
    width: 50rpx;
}
.time{
    display: flex;
    align-items: center;
    padding: 30rpx;
    background: #fff;
}
.time_title{
    font-size: 26rpx;
    color: #9e9e9e;
    margin-right: 10rpx;
}
.create_time{
    font-size: 28rpx;
}