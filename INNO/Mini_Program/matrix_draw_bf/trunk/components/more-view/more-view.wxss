.loadmore-view {
    position: relative;
    width: 100%;
    height: 80rpx;
    color: #b2b2b2;
}

.loadmore-view>.loadmore-cell {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    opacity: 0;
    transition: opacity 300ms ease-out;
}

.loadmore-view>.loadmore-cell.show {
    opacity: 1;
}