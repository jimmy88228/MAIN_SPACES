.window-ext {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.dialog-box {
    z-index: 1;
    box-shadow: 0 0 20rpx 10rpx rgba(0, 0, 0, 0.1);
    background-color: white;
    border-radius: 8rpx;
    width: 580rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    text-align: center;
}

.dialog-all {
    width: 100%;
    box-sizing: border-box;
    padding: 46rpx 30rpx;
}

.dialog-title {
    display: block;
    box-sizing: border-box;
    width: 100%;
    font-size: 32rpx;
    font-weight: bold;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.dialog-content {
    display: block;
    box-sizing: border-box;
    width: 100%;
    max-height: 200rpx;
    overflow-y: scroll;
    word-wrap: break-word;
    word-break: normal;
    white-space: pre-wrap;
    text-overflow: ellipsis;
    font-size: 28rpx;
    color: #7f7f7f;
}

.dialog-all .dialog-content {
    margin-top: 20rpx;
    min-height: 60rpx;
}

.dialog-btn-box {
    box-sizing: border-box;
    width: 100%;
    height: 86rpx;
    border-top: solid 1rpx #eee;
    display: flex;
    flex-direction: row;
}

.dialog-btn {
    font-size: 30rpx;
    flex-grow: 1;
    text-align: center;
    line-height: 86rpx;
}

.dialog-btn,
.dialog-btn::after {
    border: none;
    background: none;
    border-radius: 0rpx;
}

.dialog-btn.start {
    color: #b2b2b2;
}

.dialog-btn.end {
    border-left: solid 1rpx #eee;
}

.dialog-btn.start-hover {
    background-color: rgba(0, 0, 0, 0.1);
    border-radius: 0 0 0rpx 8rpx;
}

.dialog-btn.end-hover {
    background-color: rgba(0, 0, 0, 0.1);
    border-radius: 0 0 8rpx 0rpx;
}