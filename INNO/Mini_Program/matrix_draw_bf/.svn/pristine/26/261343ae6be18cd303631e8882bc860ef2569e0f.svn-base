.window-ext {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.wm-dialog {
    z-index: 1;
    width: 640rpx;
    box-shadow: 0 0 20rpx 10rpx rgba(0, 0, 0, 0.1);
    border-radius: 4rpx;
    box-sizing: border-box;
    text-align: center;
    background-color: white;
    padding: 30rpx 30rpx 30rpx 30rpx;
}

.wm-content {
    width: 100%;
    min-height: 220rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.wm-title {
    font-weight: bold;
    font-size: 32rpx;
    line-height: 50rpx;
}

.wm-sub-title {
    font-size: 26rpx;
    margin-top: 10rpx;
    color: var(--text-sub-color);
}

.wm-btn-box {
    margin-top: 10rpx;
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: center;
}

.wm-btn {
    border-radius: 0;
    width: 100%;
}

.wm-btn-box>.wm-btn:first-child {
    border-top-left-radius: 8rpx;
    border-bottom-left-radius: 8rpx;
}

.wm-btn-box>.wm-btn:last-child {
    border-top-right-radius: 8rpx;
    border-bottom-right-radius: 8rpx;
}

.wm-btn-cancel {
    color: var(--text-sub-color);
}