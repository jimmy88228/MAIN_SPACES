/* pages/micro_mall/lottery/activity/activity.wxss */
@import "../template/wait_lottery.wxss";
/* 大转盘 */
.turntable{
    position: relative;
    width: 708rpx;
    height: 708rpx;
    margin: 0 auto;
    overflow: hidden;
}
.turntable_bg{
    position: absolute;
    left: 0;
    top: 0;
    width: 708rpx;
    z-index: 1;
}
.turntable_pan, .turntable_pointer, .turntable_wrapper{
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
}
.turntable_pan{
    width: 576rpx;
    z-index: 2;
}
.turntable_pointer{
    width: 208rpx;
    z-index: 3;
}
.turntable_wrapper{
    position: relative;
    width: 576rpx;
    height: 576rpx;
    z-index: 2;
}
.turntable_item{
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    position: absolute;
    left: 0;
    top: 0;
    width: 192rpx;
    height: 192rpx;
}
.turntable_img{
    width: 66rpx;
    margin-bottom: 10rpx;
}
.turntable_name{
    font-size: 28rpx;
    color: #bd7118;
    font-weight: 600;
}
/* 控制各个奖品的位置 */
.first_item{
    transform: rotate(-60deg);
    justify-content:flex-end;
    transform-origin:40% 50%;
}
.second_item{
    justify-content:flex-start;
    margin-top:-30rpx;
}
.third_item{
    transform: rotate(60deg);
    justify-content:flex-end;
    transform-origin:60% 50%;
}
.fourth_item{
    transform:rotate(-120deg);
    justify-content:flex-start;
    transform-origin:50% 20%;
}
.fifth_item{
    margin-top:30rpx;
    transform:rotate(180deg);
}
.sixth_item{
    transform:rotate(120deg);
    justify-content:flex-start;
    transform-origin:50% 20%;
}
/* 水果机 */
.fruit_machine{
    position: relative;
    width: 710rpx;
    height: 720rpx;
    margin: 0 auto;
}
.fruit_bg{
    position: absolute;
    width: 710rpx;
    height: 720rpx;
    left: 50%;
    transform: translateX(-50%);
    top: 0;
    z-index: 0;
}
.fruit_bg_img{
    width: 710rpx;
}
.fruit_start{
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    width: 200rpx;
    height: 198rpx;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 3;
}
.fruit_start_img{
    width: 200rpx;
}
.fruit_wrapper, .fruit_prize{
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    position: absolute;
    width: 100%;
    top: 46%;
    left: 50%;
    transform: translate(-50%, -50%);
}
.fruit_top{
    top: 48.8%;
}
.fruit_title{
    font-size: 40rpx;
    color: #fff;
    margin-bottom: 10rpx;
}
.fruit_time{
    font-size: 22rpx;
    color: #fff;
}
.fruit_collection{
    position: absolute;
    width: 645rpx;
    height: 630rpx;
    top: 49%;
    left: 50%;
    transform: translate(-50%, -50%);
}
.fruit_item{
    position: absolute;
    top: 12rpx;
    left: 14rpx;    
    width: 200rpx;
    height: 198rpx;
    z-index: 2;
}
.fruit_item_img{
    position: absolute;
    left: 0;
    top: 0;
    width: 200rpx;
}
.fruit_prize_img{
    width: 120rpx;
}
.fruit_prize_name{
    font-size: 28rpx;
    color: #b87e25;
    font-weight: 600;
}
.fruit_prize_active{
    color: #fff6a7;
}
/* 生肖 */
.zodiac{
    position: relative;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    width: 724rpx;
    height: 824rpx;
    border-radius: 20px;
    background: #f8b753;
    margin: 0 auto;
    padding: 34rpx 14rpx 12rpx 14rpx;
    box-sizing: border-box;
}
.zodiac_item{
    position: relative;
    width: 157rpx;
    height: 240rpx;
    overflow: hidden;
    margin-left: -10rpx;
    opacity: 0;
}
.zodiac_item.active{
    margin-left: 0;
    opacity: 1;
}
.zodiac_img, .zodiac_wrapper{
    position: absolute;
    left: 0;
    top: 0;
    width: 157rpx;
    z-index: 2;
    transform: rotateY(0);
    transition: transform 1s, z-index 1s;
}
.zodiac_img_reverse{
    width: 157rpx;
}
.zodiac_wrapper{
    transform: rotateY(180deg);
    z-index: 1;
}
.zodiac_img_action{
    z-index: 1;
    transform: rotateY(180deg);
}
.zodiac_img_reverse_action{
    z-index: 2;
    transform: rotateY(0);
}
.zodiac_prize{
    position: absolute;
    top: 40%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 30rpx;
    color: #fff;
    width: 120rpx;
    word-break: break-all;
    overflow: hidden;
    text-align: center;
}
/* 一点领券 */
.coupon{
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 150rpx;
}
.coupon_btn_view{
  position:relative;
  display:inline-block;
  width:430rpx;
  height:344rpx;
}
.coupon_btn{
  width:100%;
  height:100%;
  position:absolute;
  top:0px;
  left:0px;
  background:none;
}
.coupon_start_img, .coupon_end_img{
    width: 430rpx;
    height: 344rpx;
}
/* 砸金蛋 */
.golden_egg{
    position: relative;
    width: 730rpx;
    height:600rpx;
    margin: 0 auto;
    overflow: hidden;
}
.egg_wrapper{
    position: absolute;
    top: 0;
    left: 0;
    /* width: 259rpx; */
    /* height: 350rpx; */
}
.mask_egg,.broken_egg{
    width: 240rpx;
}
.broken_egg_wrapper{
    position: relative;
}
.ribbon{
    position: absolute;
    left: -120rpx;
    top: -100rpx;
    width: 639rpx;
    height: 310rpx;
}
.ribbon_active{
  animation:ribbonScale .5s ease-out .05s;
}
.broken_egg{
    position: absolute;
    left: 0;
    top: 0;
}
.hammer_wrapper{
    margin-top:-60rpx;
    margin-left:290rpx;
    position: absolute;
    z-index: 10;
    transform-origin:50% 100%;
    transform: rotate(-45deg);
    transition: top .35s, left .35s;
}
.hammer_wrapper_action{
    animation:myHammer 2s infinite ease-out;
}
.hammer{
    width: 170rpx;
}
@keyframes myHammer{
    0%{
      transform:rotate(-5deg);
    }
    20% {
      transform:rotate(-45deg);
    }
    100%{
      transform:rotate(-5deg);
    }
}
@keyframes myAnimate{
    0%{
      transform:rotate(0deg);
    }
    25% {
      transform:rotate(-30deg);
    }
    75%{
      transform:rotate(30deg);
    }
    100%{
      transform:rotate(0deg);
    }
}
@keyframes ribbonScale{
  0%{
    transform:scale(1);
  }
  20% {
    transform:scale(1.3);
  }
  100%{
    transform:scale(1);
  }
}
/* 摇一摇 */
.shake{
    display: flex;
    align-items: center;
    justify-content: center;
    height: 738rpx;
    transform-origin: 65% 50%;
}
.shake_img{
    width: 630rpx;
}
.shake_img_active{
    animation: myAnimate .35s linear infinite;
}

/* 遮罩层 */
.prevent_bg, .wait_model{
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background: transparent;
    z-index: 10;
}
.pre_load{
    display: flex;
    align-items: center;
    justify-content: center;
}
.pre_load_show{
    
}
.wait_model{
    background: rgba(0, 0, 0, 0.7);
}

/* 授权相关的 */
.turntable_root_wrapper{
    position: absolute;
    left: 0;
    top: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 708rpx;
    height: 708rpx;
    z-index: 3;
    background: transparent;
}
.turntable_root,.turn_root_img{
    width: 208rpx;
}
.fruit_root_wrapper{
    position: absolute;
    left: 0;
    top: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 710rpx;
    height: 720rpx;
    z-index: 3;
    margin-top: -8rpx;
}
.fruit_root{
    width: 200rpx;
    height: 198rpx;
}
.shake_root_btn{
    width: 324rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    background: linear-gradient(to bottom, #fccb57, #ed8632);
    border: 1px solid #b95207;
    border-radius: 20px;
    font-size: 24rpx;
    color: #b95207;
}