/* pages/micro_mall/prepaid/erp/prepaid_card_code.wxss */
.card_code_content{
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 1;
}
.card_code{
    width: 540rpx;
    background: #fff;
    overflow: hidden;
    padding: 40rpx 0;
}
.tips{
    font-size: 30rpx;
    margin-bottom: 50rpx;
    text-align: center;
}
.codes{
    font-size: 40rpx;
    font-weight: 800;
    text-align: center;
    margin-bottom: 10rpx;
}
.count_down{
    font-size: 22rpx;
    color: #acacac;
    text-align: center;
}
.invalid{
    font-size: 30rpx;
    color: #acacac;
    font-weight: 600;
    text-align: center;
}